<odoo>
    <!-- Porter Express Category -->
    <record id="module_category_porter_express" model="ir.module.category">
        <field name="name">Porter Express</field>
        <field name="description">Porter Express Shipping Integration</field>
        <field name="sequence">50</field>
    </record>

    <!-- Groups -->
    <record id="group_porter_user" model="res.groups">
        <field name="name">Porter Express User</field>
        <field name="category_id" ref="module_category_porter_express"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>

    <record id="group_porter_manager" model="res.groups">
        <field name="name">Porter Express Manager</field>
        <field name="category_id" ref="module_category_porter_express"/>
        <field name="implied_ids" eval="[(4, ref('group_porter_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Multi-company Rules -->
    <record id="porter_config_company_rule" model="ir.rule">
        <field name="name">Porter Config Multi-Company</field>
        <field name="model_id" ref="model_porter_config"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>