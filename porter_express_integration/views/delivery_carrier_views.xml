<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Delivery Carrier Form -->
    <record id="view_delivery_carrier_form_porter" model="ir.ui.view">
        <field name="name">delivery.carrier.form.porter</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <!-- Add active_for_sales field -->
            <xpath expr="//field[@name='active']" position="after">
                <field name="active_for_sales" widget="boolean_toggle"/>
            </xpath>

            <!-- Add Porter Express page -->
            <xpath expr="//page[@name='destination']" position="after">
                <page string="Porter Express" invisible="delivery_type != 'porter'">
                    <group>
                        <group string="Porter Settings">
                            <field name="porter_product_code" required="delivery_type == 'porter'"/>
                            <field name="active_for_sales"/>
                        </group>
                        <group string="Service Details">
                            <field name="product_id" string="Delivery Product"/>
                        </group>
                    </group>

                    <separator string="Porter Configurations"/>
                    <field name="porter_config_ids"
                           required="delivery_type == 'porter'"
                           options="{'no_create': True, 'no_create_edit': True}"
                           domain="[('active', '=', True)]">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="country_id"/>
                            <field name="name"/>
                            <field name="is_default_for_country"/>
                            <field name="api_email"/>
                            <field name="active" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add to tree view -->
    <record id="view_delivery_carrier_tree_porter" model="ir.ui.view">
        <field name="name">delivery.carrier.tree.porter</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_type']" position="after">
                <field name="active_for_sales" widget="boolean_toggle" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>