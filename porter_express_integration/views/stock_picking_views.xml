<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Picking Form -->
    <record id="view_picking_form_porter" model="ir.ui.view">
        <field name="name">stock.picking.form.porter</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add Porter buttons in header -->
            <xpath expr="//header/button[@name='action_cancel']" position="after">
                <button name="action_create_porter_shipment"
                        string="Create Porter Shipment"
                        type="object"
                        class="btn-primary"
                        invisible="not is_porter_carrier or porter_shipment_id or state != 'assigned'"
                        groups="porter_express_integration.group_porter_user"/>

                <button name="action_print_porter_label"
                        string="Print Porter Label"
                        type="object"
                        invisible="not porter_shipment_id"
                        groups="porter_express_integration.group_porter_user"/>

                <button name="action_track_porter_shipment"
                        string="Track Shipment"
                        type="object"
                        invisible="not porter_shipment_id"
                        groups="porter_express_integration.group_porter_user"/>

                <button name="action_cancel_porter_shipment"
                        string="Cancel Porter Shipment"
                        type="object"
                        invisible="not porter_shipment_id or porter_shipment_id.state not in ['draft', 'confirmed']"
                        confirm="Are you sure you want to cancel this Porter shipment?"
                        groups="porter_express_integration.group_porter_user"/>
            </xpath>

            <!-- Add Porter page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Porter Express" invisible="not is_porter_carrier">
                    <group>
                        <group string="Shipment Information">
                            <field name="is_porter_carrier" column_invisible="True"/>
                            <field name="carrier_id" readonly="1"/>
                            <field name="porter_shipment_id" readonly="1"/>
                            <field name="porter_awb" readonly="1"/>
                        </group>
                        <group string="Tracking &amp; Documents">
                            <field name="porter_tracking_url" widget="url" readonly="1" invisible="not porter_tracking_url"/>
                            <field name="porter_label_pdf" filename="porter_label_filename" readonly="1" invisible="not porter_label_pdf"/>
                            <field name="porter_label_filename" column_invisible="True"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add Porter info in tree view -->
    <record id="view_picking_tree_porter" model="ir.ui.view">
        <field name="name">stock.picking.tree.porter</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="porter_awb" optional="show"/>
                <field name="is_porter_carrier" column_invisible="True"/>
            </xpath>
        </field>
    </record>
</odoo>