<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_porter_area_tree" model="ir.ui.view">
        <field name="name">porter.area.tree</field>
        <field name="model">porter.area</field>
        <field name="arch" type="xml">
            <tree string="Porter Areas" editable="bottom">
                <field name="country_id"/>
                <field name="city_name"/>
                <field name="name"/>
                <field name="encrypted_area_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_porter_area_search" model="ir.ui.view">
        <field name="name">porter.area.search</field>
        <field name="model">porter.area</field>
        <field name="arch" type="xml">
            <search string="Search Areas">
                <field name="name"/>
                <field name="country_id"/>
                <field name="city_name"/>
                <filter string="Kuwait" name="kuwait" domain="[('country_id.code', '=', 'KW')]"/>
                <filter string="Saudi Arabia" name="saudi" domain="[('country_id.code', '=', 'SA')]"/>
                <filter string="UAE" name="uae" domain="[('country_id.code', '=', 'AE')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_porter_area" model="ir.actions.act_window">
        <field name="name">Porter Areas</field>
        <field name="res_model">porter.area</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_porter_area_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_porter_areas"
        name="Areas"
        parent="porter_express_integration.menu_porter_root"
        action="action_porter_area"
        sequence="20"/>
</odoo>