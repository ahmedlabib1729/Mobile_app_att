<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_nursery_class_config_form" model="ir.ui.view">
            <field name="name">nursery.class.config.form</field>
            <field name="model">nursery.class.config</field>
            <field name="arch" type="xml">
                <form string="تكوين صف الحضانة">
                    <sheet>
                        <widget name="web_ribbon" title="غير نشط" bg_color="bg-danger" invisible="is_active"/>
                        <group>
                            <group>
                                <field name="class_name"/>
                                <field name="department_id" options="{'no_create': True}"/>
                                <field name="academic_year" placeholder="مثال: 2024-2025"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="age_range_display"/>
                                <field name="is_active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group string="معلومات إضافية">
                            <div class="alert alert-info" role="alert">
                                <h5>ملاحظة مهمة:</h5>
                                <p>يتم تحديد صف الطفل تلقائياً بناءً على تاريخ ميلاده.</p>
                                <p>مثال: إذا كان تاريخ الميلاد من 2021-09-01 إلى 2022-08-31، فسيتم تصنيف الأطفال المولودين في هذه الفترة في هذا الصف.</p>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_nursery_class_config_tree" model="ir.ui.view">
            <field name="name">nursery.class.config.tree</field>
            <field name="model">nursery.class.config</field>
            <field name="arch" type="xml">
                <list string="تكوينات صفوف الحضانة">
                    <field name="sequence" widget="handle"/>
                    <field name="class_name"/>
                    <field name="department_id"/>
                    <field name="academic_year"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="age_range_display"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_nursery_class_config_search" model="ir.ui.view">
            <field name="name">nursery.class.config.search</field>
            <field name="model">nursery.class.config</field>
            <field name="arch" type="xml">
                <search string="بحث تكوينات الصفوف">
                    <field name="class_name"/>
                    <field name="department_id"/>
                    <field name="academic_year"/>
                    <filter string="نشط" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="غير نشط" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <filter string="قبل الروضة" name="before_kg" domain="[('class_name', '=', 'before_kg')]"/>
                    <filter string="حضانة 2-3" name="nursery_2_3" domain="[('class_name', '=', 'nursery_2_3')]"/>
                    <filter string="حضانة 1-2" name="nursery_1_2" domain="[('class_name', '=', 'nursery_1_2')]"/>
                    <filter string="حضانة 0-1" name="nursery_0_1" domain="[('class_name', '=', 'nursery_0_1')]"/>
                    <group expand="0" string="تجميع حسب">
                        <filter string="القسم" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="الصف" name="group_class" context="{'group_by': 'class_name'}"/>
                        <filter string="السنة الدراسية" name="group_year" context="{'group_by': 'academic_year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_nursery_class_config" model="ir.actions.act_window">
            <field name="name">تكوين صفوف الحضانة</field>
            <field name="res_model">nursery.class.config</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_nursery_class_config_search"/>
            <field name="context">{'search_default_active': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء تكوين جديد لصف الحضانة
                </p>
                <p>
                    قم بتحديد الفئات العمرية لكل صف حضانة
                </p>
            </field>
        </record>

        <!-- Menu -->

    </data>
</odoo>