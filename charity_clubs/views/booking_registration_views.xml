<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Booking Registration Form View -->
        <record id="view_charity_booking_registration_form" model="ir.ui.view">
            <field name="name">charity.registrations.booking.form</field>
            <field name="model">charity.registrations</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="حجز في الأقسام">
                    <header>
                        <button name="action_confirm" string="تأكيد الحجز" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="اعتماد الحجز" type="object" class="oe_highlight" invisible="state != 'confirmed'" groups="base.group_system"/>
                        <button name="action_reject" string="رفض الحجز" type="object" invisible="state not in ('draft', 'confirmed')" groups="base.group_system"/>
                        <button name="action_cancel" string="إلغاء الحجز" type="object" invisible="state == 'approved'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"/>
                    </header>
                    <sheet>
                        <!-- إخفاء نوع التسجيل -->
                        <field name="registration_type" invisible="1"/>

                        <div class="oe_title">
                            <h1>حجز جديد</h1>
                        </div>

                        <group>
                            <group string="معلومات المستفيد">
                                <field name="full_name" string="الاسم الثلاثي باللغة العربية" placeholder="الاسم الثلاثي..." readonly="state != 'draft'"/>
                                <field name="mother_mobile" string="رقم التواصل" widget="phone" readonly="state != 'draft'"/>
                                <field name="mother_whatsapp" string="رقم الواتساب" widget="phone" readonly="state != 'draft'"/>
                                <field name="birth_date" string="تاريخ الميلاد" readonly="state != 'draft'"/>
                                <field name="email" string="البريد الإلكتروني" placeholder="example@email.com" readonly="state != 'draft'"/>
                            </group>
                            <group string="تفاصيل الحجز">
                                <field name="headquarters_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                                <field name="department_id"
                                       options="{'no_create': True}"
                                       domain="[('headquarters_id', '=', headquarters_id), ('type', '=', 'booking')]"
                                       readonly="state != 'draft'"
                                       required="1"/>
                                <label for="department_booking_price" string="سعر القسم"/>
                                <div class="o_row">
                                    <field name="department_booking_price" widget="monetary" nolabel="1" readonly="1"/>

                                </div>
                            </group>
                        </group>

                        <!-- حقول مطلوبة مخفية بقيم افتراضية -->
                        <group invisible="1">
                            <field name="id_type" default="emirates_id"/>
                            <field name="id_number" default="000-0000-0000000-0"/>
                            <field name="gender" default="male"/>
                            <field name="nationality" ref="base.ae"/>
                            <field name="student_grade" default="-"/>
                            <field name="arabic_education_type" default="native"/>
                            <field name="mother_name" default="-"/>
                            <field name="father_name" default="-"/>
                            <field name="father_mobile" default="-"/>
                            <field name="previous_roayati_member"/>
                            <field name="previous_arabic_club"/>
                            <field name="previous_qaida_noorania"/>
                            <field name="has_health_requirements"/>
                            <field name="photo_consent"/>
                            <field name="id_front_file" filename="id_front_filename"/>
                            <field name="id_front_filename"/>
                            <field name="id_back_file" filename="id_back_filename"/>
                            <field name="id_back_filename"/>
                            <field name="booking_date"/>
                            <field name="booking_duration"/>
                            <field name="booking_purpose"/>
                            <field name="booking_price"/>
                        </group>

                        <group string="معلومات الحجز" invisible="state == 'draft'">
                            <field name="registration_date" readonly="1" string="تاريخ إنشاء الحجز"/>
                            <field name="create_uid" readonly="1" string="تم الحجز بواسطة"/>
                        </group>
                    </sheet>

                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Booking Registrations List View -->
        <record id="view_charity_booking_registrations_list" model="ir.ui.view">
            <field name="name">charity.registrations.booking.list</field>
            <field name="model">charity.registrations</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <list string="حجوزات الأقسام">
                    <field name="full_name" string="اسم المستفيد"/>
                    <field name="mother_mobile" string="رقم التواصل" widget="phone"/>
                    <field name="mother_whatsapp" string="رقم الواتساب" widget="phone"/>
                    <field name="email" string="البريد الإلكتروني"/>
                    <field name="headquarters_id" string="المقر"/>
                    <field name="department_id" string="القسم"/>
                    <field name="department_booking_price" string="سعر القسم" widget="monetary"/>
                    <field name="state" string="الحالة" widget="badge"
                           decoration-success="state == 'approved'"
                           decoration-info="state == 'confirmed'"
                           decoration-warning="state == 'draft'"
                           decoration-danger="state == 'rejected'"/>
                </list>
            </field>
        </record>

        <!-- Booking Registrations Action -->
        <record id="action_charity_booking_registrations" model="ir.actions.act_window">
            <field name="name">حجوزات الأقسام</field>
            <field name="res_model">charity.registrations</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('registration_type', '=', 'booking')]</field>
            <field name="context">{'default_registration_type': 'booking'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_charity_booking_registrations_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_charity_booking_registration_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء حجز جديد
                </p>
                <p>
                    يمكنك حجز الأقسام المختلفة وتحديد المدة والغرض
                </p>
            </field>
        </record>

    </data>
</odoo>