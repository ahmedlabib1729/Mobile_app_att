<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ ADDITIONAL SERVICES VIEWS ============ -->

    <!-- Tree View -->
    <record id="view_additional_service_tree" model="ir.ui.view">
        <field name="name">additional.service.tree</field>
        <field name="model">additional.service</field>
        <field name="arch" type="xml">
            <list string="Additional Services">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="description" optional="show"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_additional_service_form" model="ir.ui.view">
        <field name="name">additional.service.form</field>
        <field name="model">additional.service</field>
        <field name="arch" type="xml">
            <form string="Additional Service">
                <sheet>
                    <widget name="web_ribbon" title="Archived"
                            invisible="active"
                            bg_color="text-bg-danger"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Category Pricing">
        <field name="category_price_ids">
            <list editable="bottom">
                <field name="category_id" options="{'no_create': True}"/>
                <field name="fee_amount" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_additional_service_search" model="ir.ui.view">
        <field name="name">additional.service.search</field>
        <field name="model">additional.service</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="code"/>

                <filter name="active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive"
                        domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_additional_service" model="ir.actions.act_window">
        <field name="name">Additional Services</field>
        <field name="res_model">additional.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create additional services
            </p>
            <p>
                Define services and set different prices for each customer category.
            </p>
        </field>
    </record>

    <!-- Menu Item -->

</odoo>