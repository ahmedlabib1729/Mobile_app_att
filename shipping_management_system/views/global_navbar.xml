<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template الأساسي للـ Navbar -->
    <template id="torood_global_navbar" name="Torood Global Navbar">
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&amp;display=swap" rel="stylesheet"/>

        <nav class="custom-navbar">
            <div class="navbar-container">
                <!-- Logo -->
                <a href="/" class="navbar-brand">
                    <div class="logo-box">
                        <i class="fa fa-box"></i>
                    </div>
                    <div class="logo-text">
                        <span class="logo-text-ar">طرود</span>
                        <span class="logo-text-en">TOROOD</span>
                    </div>
                </a>

                <!-- Navigation Menu -->
                <ul class="navbar-menu">
                    <li><a href="/" t-att-class="'active' if request.httprequest.path == '/' else ''">الرئيسية</a></li>
                    <li><a href="/my/shipments" t-att-class="'active' if '/shipments' in request.httprequest.path else ''">شحناتي</a></li>
                    <li><a href="/my/invoices" t-att-class="'active' if '/invoices' in request.httprequest.path else ''">الفواتير</a></li>
                    <li><a href="/shipment/track" t-att-class="'active' if '/track' in request.httprequest.path else ''">تتبع الشحنة</a></li>
                    <li>
                        <a href="/shipment" class="btn-cta">
                            <i class="fa fa-plus"></i>
                            <span>أرسل طرد</span>
                        </a>
                    </li>
                </ul>

                <!-- User Menu -->
                <div class="navbar-user">
                    <t t-if="not request.env.user._is_public()">
                        <div class="user-dropdown-toggle" onclick="toggleUserMenu()">
                            <i class="fa fa-user-circle"></i>
                            <span t-esc="request.env.user.name[:20]"/>
                            <i class="fa fa-chevron-down" style="font-size: 12px;"></i>
                        </div>
                        <div class="user-dropdown" id="userDropdown">
                            <a href="/my">
                                <i class="fa fa-user"></i>
                                <span>حسابي</span>
                            </a>
                            <a href="/my/shipments">
                                <i class="fa fa-truck"></i>
                                <span>شحناتي</span>
                            </a>
                            <a href="/my/invoices">
                                <i class="fa fa-file-invoice"></i>
                                <span>الفواتير</span>
                            </a>
                            <div class="divider"></div>
                            <a href="/web/session/logout?redirect=/">
                                <i class="fa fa-sign-out-alt"></i>
                                <span>تسجيل الخروج</span>
                            </a>
                        </div>
                    </t>
                    <t t-else="">
                        <a href="/web/login" class="user-dropdown-toggle" style="text-decoration: none;">
                            <i class="fa fa-sign-in-alt"></i>
                            <span>تسجيل الدخول</span>
                        </a>
                    </t>
                </div>
            </div>
        </nav>

        <script>
            function toggleUserMenu() {
                const dropdown = document.getElementById('userDropdown');
                if (dropdown) {
                    dropdown.classList.toggle('show');
                }
            }

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                const dropdown = document.getElementById('userDropdown');
                const toggle = event.target.closest('.user-dropdown-toggle');

                if (!toggle &amp;&amp; dropdown &amp;&amp; dropdown.classList.contains('show')) {
                    dropdown.classList.remove('show');
                }
            });
        </script>
    </template>

    <!-- الـ CSS العام للـ Navbar -->
    <template id="torood_navbar_styles" name="Torood Navbar Styles">
        <style>
            /* Variables */
            :root {
                --primary: #FF6B35;
                --primary-dark: #E85A2C;
                --secondary: #004E7C;
                --dark: #2c3e50;
                --light: #ecf0f1;
                --white: #ffffff;
                --bg-light: #f8f9fa;
            }

            /* Hide Odoo Default Header */
            header.o_header_standard,
            header.o_header_affixed,
            .o_header_standard {
                display: none !important;
            }

            /* Body Padding */
            body {
                font-family: 'Cairo', sans-serif !important;
                padding-top: 80px !important;
                margin: 0;
            }

            /* Navbar Styles */
            .custom-navbar {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                height: 80px;
                background: var(--white);
                box-shadow: 0 2px 20px rgba(0,0,0,0.08);
                z-index: 9999;
                display: flex;
                align-items: center;
            }

            .navbar-container {
                width: 100%;
                max-width: 1320px;
                margin: 0 auto;
                padding: 0 20px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            /* Logo */
            .navbar-brand {
                display: flex;
                align-items: center;
                text-decoration: none;
                gap: 12px;
            }

            .logo-box {
                width: 48px;
                height: 48px;
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--white);
                font-size: 24px;
                box-shadow: 0 4px 12px rgba(255, 107, 53, 0.25);
            }

            .logo-text {
                display: flex;
                flex-direction: column;
            }

            .logo-text-ar {
                font-size: 24px;
                font-weight: 800;
                color: var(--primary);
                line-height: 1;
                margin-bottom: 2px;
            }

            .logo-text-en {
                font-size: 14px;
                font-weight: 600;
                color: var(--secondary);
                letter-spacing: 1px;
            }

            /* Menu */
            .navbar-menu {
                display: flex;
                list-style: none;
                margin: 0;
                padding: 0;
                gap: 8px;
                align-items: center;
            }

            .navbar-menu li {
                margin: 0;
            }

            .navbar-menu a {
                display: inline-block;
                padding: 10px 20px;
                color: var(--dark);
                text-decoration: none;
                font-weight: 600;
                font-size: 15px;
                border-radius: 25px;
                transition: all 0.3s ease;
            }

            .navbar-menu a:hover,
            .navbar-menu a.active {
                background: rgba(255, 107, 53, 0.1);
                color: var(--primary);
            }

            /* CTA Button */
            .btn-cta {
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                color: var(--white) !important;
                padding: 12px 28px !important;
                border-radius: 25px;
                font-weight: 700 !important;
                box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
                transition: all 0.3s ease;
                display: inline-flex;
                align-items: center;
                gap: 8px;
            }

            .btn-cta:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
            }

            /* User Menu */
            .navbar-user {
                position: relative;
            }

            .user-dropdown-toggle {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 10px 20px;
                background: var(--white);
                border: 2px solid var(--light);
                border-radius: 25px;
                color: var(--dark);
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .user-dropdown-toggle:hover {
                border-color: var(--primary);
                background: rgba(255, 107, 53, 0.05);
            }

            .user-dropdown {
                position: absolute;
                top: 100%;
                right: 0;
                margin-top: 10px;
                background: var(--white);
                border-radius: 12px;
                box-shadow: 0 10px 40px rgba(0,0,0,0.15);
                min-width: 200px;
                display: none;
                overflow: hidden;
                z-index: 10000;
            }

            .user-dropdown.show {
                display: block;
            }

            .user-dropdown a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 12px 20px;
                color: var(--dark);
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
            }

            .user-dropdown a:hover {
                background: var(--bg-light);
                color: var(--primary);
            }

            .user-dropdown .divider {
                height: 1px;
                background: var(--light);
                margin: 5px 0;
            }

            /* Responsive */
            @media (max-width: 992px) {
                .navbar-menu {
                    display: none;
                }
            }

            @media (max-width: 768px) {
                body {
                    padding-top: 70px !important;
                }

                .custom-navbar {
                    height: 70px;
                }

                .logo-box {
                    width: 40px;
                    height: 40px;
                    font-size: 20px;
                }

                .logo-text-ar {
                    font-size: 20px;
                }
            }
        </style>
    </template>

    <!-- تطبيق الـ Navbar على جميع صفحات الموقع -->
    <template id="website_layout_with_navbar" inherit_id="website.layout" priority="1">
        <!-- إضافة الـ Styles -->
        <xpath expr="//head" position="inside">
            <t t-call="shipping_management_system.torood_navbar_styles"/>
        </xpath>

        <!-- إضافة الـ Navbar بعد فتح الـ body -->
        <xpath expr="//body" position="inside">
            <t t-call="shipping_management_system.torood_global_navbar"/>
        </xpath>
    </template>

    <!-- تطبيق الـ Navbar على صفحات البورتال -->
    <template id="portal_layout_with_navbar" inherit_id="portal.portal_layout" priority="1">
        <!-- إضافة الـ Navbar قبل wrap -->
        <xpath expr="//div[@id='wrap']" position="before">
            <t t-call="shipping_management_system.torood_navbar_styles"/>
            <t t-call="shipping_management_system.torood_global_navbar"/>
        </xpath>
    </template>
</odoo>