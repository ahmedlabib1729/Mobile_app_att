<template id="custom_header_quran_center" inherit_id="website.layout" name="Quran Center Header">
    <xpath expr="//header" position="replace">
        <header class="quran-header">
            <style>
                /* Header Styles */
                .quran-header {
                    background: white;
                    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
                    position: relative;
                    z-index: 1000;
                    border-bottom: 2px solid rgba(102, 126, 234, 0.1);
                }

                .quran-navbar {
                    padding: 15px 0;
                    transition: all 0.3s ease;
                }

                /* Logo Styles */
                .quran-logo {
                    display: flex;
                    align-items: center;
                    text-decoration: none;
                    color: #667eea;
                    font-family: 'Cairo', 'Amiri', sans-serif;
                    font-size: 1.8rem;
                    font-weight: 700;
                    transition: all 0.3s ease;
                }

                .quran-logo:hover {
                    color: #764ba2;
                    text-decoration: none;
                    transform: scale(1.05);
                }

                /* Logo Image Styles - تم تعديل المسافة */
                .quran-logo .logo-image {
                    height: 60px;
                    width: auto;
                    margin-left: 20px;  /* تم زيادة المسافة من 15px إلى 20px */
                    margin-right: 15px; /* إضافة مسافة على اليمين */
                    border-radius: 10px;
                    box-shadow: 0 4px 10px rgba(102, 126, 234, 0.2);
                    transition: all 0.3s ease;
                }

                .quran-logo:hover .logo-image {
                    transform: rotate(-5deg) scale(1.1);
                    box-shadow: 0 6px 15px rgba(118, 75, 162, 0.3);
                }

                .quran-logo .logo-text {
                    display: flex;
                    flex-direction: column;
                    line-height: 1.2;
                    margin-right: 10px; /* إضافة مسافة إضافية */
                }

                .quran-logo .logo-text-main {
                    font-size: 1.5rem;
                    font-weight: 700;
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
                    background-clip: text;
                }

                .quran-logo .logo-text-sub {
                    font-size: 0.9rem;
                    color: #764ba2;
                    opacity: 0.8;
                    font-weight: 400;
                }

                /* Navigation Links */
                .quran-nav-link {
                    color: #667eea !important;
                    font-family: 'Cairo', sans-serif;
                    font-size: 1.1rem;
                    font-weight: 500;
                    padding: 8px 20px !important;
                    margin: 0 5px;
                    border-radius: 25px;
                    transition: all 0.3s ease;
                    position: relative;
                    display: flex;
                    align-items: center;
                }

                .quran-nav-link i {
                    margin-left: 8px;
                    font-size: 0.9rem;
                    color: #764ba2;
                }

                .quran-nav-link:hover {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
                    color: #764ba2 !important;
                    transform: translateY(-2px);
                }

                .quran-nav-link.active {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
                    color: #764ba2 !important;
                    font-weight: 600;
                }

                /* CTA Button */
                .btn-quran-cta {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    padding: 12px 30px;
                    border-radius: 30px;
                    font-family: 'Cairo', sans-serif;
                    font-size: 1.1rem;
                    font-weight: 600;
                    border: none;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
                    display: inline-flex;
                    align-items: center;
                }

                .btn-quran-cta i {
                    margin-left: 10px;
                    font-size: 1.2rem;
                }

                .btn-quran-cta:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 6px 25px rgba(118, 75, 162, 0.4);
                    background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                    color: white;
                    text-decoration: none;
                }

                /* User Menu - إصلاح الـ Dropdown */
                .btn-user-menu {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
                    color: #667eea;
                    padding: 10px 20px;
                    border-radius: 25px;
                    border: 2px solid rgba(102, 126, 234, 0.3);
                    font-family: 'Cairo', sans-serif;
                    transition: all 0.3s ease;
                    cursor: pointer;
                }

                .btn-user-menu:hover {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
                    border-color: #667eea;
                    color: #764ba2;
                }

                .btn-login {
                    background: white;
                    color: #667eea;
                    padding: 10px 25px;
                    border-radius: 25px;
                    border: 2px solid #667eea;
                    font-family: 'Cairo', sans-serif;
                    font-weight: 500;
                    transition: all 0.3s ease;
                }

                .btn-login:hover {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    text-decoration: none;
                    border-color: transparent;
                }

                /* Dropdown Menu - إصلاحات للعمل بشكل صحيح */
                .quran-header .dropdown {
                    position: relative;
                }

                .quran-header .dropdown-menu {
                    background: white;
                    border: 1px solid rgba(102, 126, 234, 0.2);
                    border-radius: 15px;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
                    padding: 10px;
                    margin-top: 10px;
                    min-width: 200px;
                    position: absolute;
                    top: 100%;
                    left: auto;
                    right: 0;
                    z-index: 1050;
                }

                .quran-header .dropdown-menu.show {
                    display: block !important;
                }

                .quran-header .dropdown-item {
                    color: #667eea;
                    font-family: 'Cairo', sans-serif;
                    padding: 10px 20px;
                    border-radius: 10px;
                    transition: all 0.3s ease;
                    display: block;
                    text-decoration: none;
                }

                .quran-header .dropdown-item:hover {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
                    color: #764ba2;
                }

                .quran-header .dropdown-item i {
                    margin-left: 10px;
                    width: 20px;
                    color: #764ba2;
                    display: inline-block;
                }

                .quran-header .dropdown-divider {
                    height: 0;
                    margin: 0.5rem 0;
                    overflow: hidden;
                    border-top: 1px solid rgba(102, 126, 234, 0.1);
                }

                /* Mobile Toggle */
                .custom-toggler {
                    border: 2px solid #667eea;
                    padding: 4px 12px;
                    border-radius: 8px;
                }

                .custom-toggler .navbar-toggler-icon {
                    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28102, 126, 234, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
                }

                /* Islamic Pattern Background */
                .quran-header::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23667eea' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
                    opacity: 0.5;
                    z-index: -1;
                }

                /* Responsive */
                @media (max-width: 991px) {
                    .quran-navbar {
                        padding: 10px 0;
                    }

                    .quran-logo {
                        font-size: 1.4rem;
                    }

                    .navbar-collapse {
                        background: rgba(102, 126, 234, 0.05);
                        border-radius: 15px;
                        padding: 20px;
                        margin-top: 20px;
                        border: 1px solid rgba(102, 126, 234, 0.1);
                    }

                    .quran-nav-link {
                        margin: 5px 0;
                        justify-content: center;
                    }

                    .navbar-cta, .navbar-user {
                        margin-top: 15px;
                        text-align: center;
                    }
                }

                /* Animation */
                @keyframes float {
                    0%, 100% { transform: translateY(0); }
                    50% { transform: translateY(-5px); }
                }

                .quran-logo .logo-image {
                    animation: float 3s ease-in-out infinite;
                }
            </style>

            <!-- JavaScript لإصلاح الـ Dropdown -->
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // إصلاح dropdown للمستخدم
                    var dropdownToggle = document.querySelector('.btn-user-menu');
                    var dropdownMenu = document.querySelector('.dropdown-menu');

                    if (dropdownToggle &amp;&amp; dropdownMenu) {
                        dropdownToggle.addEventListener('click', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            dropdownMenu.classList.toggle('show');
                        });

                        // إغلاق القائمة عند النقر خارجها
                        document.addEventListener('click', function(e) {
                            if (!dropdownToggle.contains(e.target) &amp;&amp; !dropdownMenu.contains(e.target)) {
                                dropdownMenu.classList.remove('show');
                            }
                        });
                    }
                });
            </script>

            <nav class="navbar navbar-expand-lg quran-navbar">
                <div class="container">
                    <!-- Logo -->
                    <a class="navbar-brand quran-logo" href="/">
                        <img src="/quran_center/static/description/png.png"
                             alt="مركز رؤيتي"
                             class="logo-image"/>
                        <div class="logo-text">
                            <span class="logo-text-main">مركز رؤيتي</span>
                            <span class="logo-text-sub">لتحفيظ القرآن الكريم</span>
                        </div>
                    </a>

                    <!-- Mobile Toggle -->
                    <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Navigation Items -->
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link quran-nav-link" href="/">
                                    <i class="fa fa-home"></i> الرئيسية
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link quran-nav-link" href="/programs">
                                    <i class="fa fa-book"></i>   برامج المركز
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link quran-nav-link" href="/enrollment/application">
                                    <i class="fa fa-user-plus"></i> التسجيل
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link quran-nav-link" href="https://wa.me/971509196444" target="_blank">
                                    <i class="fa fa-phone"></i> تواصل معنا
                                </a>
                            </li>
                        </ul>

                        <!-- CTA Button -->
                        <div class="navbar-cta">
                            <a href="/enrollment/application" class="btn btn-quran-cta">
                                <i class="fa fa-graduation-cap"></i> سجل الآن
                            </a>
                        </div>

                        <!-- Login/User Menu -->
                        <div class="navbar-user ml-3">
                            <t t-if="not request.env.user._is_public()">
                                <!-- Logged in user -->
                                <div class="dropdown">
                                    <a class="btn btn-user-menu dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-user-circle"></i>
                                        <span t-esc="request.env.user.name"/>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="/my">
                                            <i class="fa fa-user"></i> حسابي
                                        </a>


                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/web/session/logout?redirect=/">
                                            <i class="fa fa-sign-out"></i> تسجيل الخروج
                                        </a>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <!-- Not logged in -->
                                <a href="/web/login" class="btn btn-login">
                                    <i class="fa fa-sign-in"></i> دخول
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </xpath>
</template>




