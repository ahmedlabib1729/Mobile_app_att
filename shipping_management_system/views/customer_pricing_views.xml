<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ CUSTOMER PRICE CATEGORIES ============ -->

    <!-- Tree View -->
    <record id="view_customer_price_category_tree" model="ir.ui.view">
        <field name="name">customer.price.category.tree</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <list string="Customer Categories" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="discount_percentage"/>
                <field name="min_monthly_shipments"/>
                <field name="customer_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_price_category_form" model="ir.ui.view">
        <field name="name">customer.price.category.form</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <form string="Price Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-users">
                            <field name="customer_count" widget="statinfo" string="Customers"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived"
                            invisible="active"
                            bg_color="text-bg-danger"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="discount_percentage"/>
                            <field name="min_monthly_shipments"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Benefits and conditions..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_customer_price_category_kanban" model="ir.ui.view">
        <field name="name">customer.price.category.kanban</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="discount_percentage"/>
                <field name="customer_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">Discount: </span>
                                        <strong><field name="discount_percentage"/>%</strong>
                                    </div>
                                    <div>
                                        <span class="text-muted">Min. Shipments: </span>
                                        <field name="min_monthly_shipments"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info">
                                            <i class="fa fa-users"/> <field name="customer_count"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


     <record id="view_partner_form_pricing" model="ir.ui.view">
        <field name="name">res.partner.form.pricing</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- طريقة 1: إضافة الحقل في المعلومات الأساسية -->
            <field name="vat" position="after">
                <field name="price_category_id"
                       options="{'no_create': True}"
                       string="Price Category"/>
            </field>

            <!-- طريقة 2: إضافة tab جديد للتسعير -->
            <notebook position="inside">
                <page string="Pricing" name="pricing_tab">
                    <group>
                        <group string="Category">
                            <field name="price_category_id"
                                   options="{'no_create': True}"/>
                            <field name="monthly_shipment_count" readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>

        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_price_category" model="ir.actions.act_window">
        <field name="name">Customer Categories</field>
        <field name="res_model">customer.price.category</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer category
            </p>
            <p>
                Define different pricing categories for your customers based on their monthly shipments.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_customer_categories"
              name="Customer Categories"
              parent="shipping_management_system.menu_shipment_config"
              action="action_customer_price_category"
              sequence="50"/>

</odoo>