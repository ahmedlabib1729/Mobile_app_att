<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ CUSTOMER PRICE CATEGORIES ============ -->

    <!-- Tree View -->
    <record id="view_customer_price_category_tree" model="ir.ui.view">
        <field name="name">customer.price.category.tree</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <list string="Customer Categories" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="discount_percentage"/>
                <field name="min_monthly_shipments"/>
                <field name="customer_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View Enhanced -->
    <record id="view_customer_price_category_form" model="ir.ui.view">
        <field name="name">customer.price.category.form</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <form string="Price Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-users">
                            <field name="customer_count" widget="statinfo" string="Customers"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived"
                            invisible="active"
                            bg_color="text-bg-danger"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="discount_percentage"/>
                            <field name="min_monthly_shipments"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group string="Pickup Fee Configuration" col="4">
                        <field name="pickup_fee_enabled"/>
                        <field name="pickup_fee_amount"
                               widget="monetary"
                               invisible="not pickup_fee_enabled"/>
                        <div class="text-muted" colspan="4" invisible="not pickup_fee_enabled">
                            <i class="fa fa-info-circle"/> This pickup fee will be automatically applied to all customers in this category when pickup type is "Pickup from Customer"
                        </div>

                    </group>
                    <group string="Customer Return Penalty">

                        <field name="customer_return_penalty_percentage"/>
                    </group>




                    <notebook>
                        <!-- Tab 1: Description -->


                        <page string="COD Fee Configuration" >
                            <group col="4">
                        <field name="cod_fee_enabled"/>
                        <field name="company_cod_minimum_amount"
                               widget="monetary"
                               invisible="not cod_fee_enabled"/>
                        <field name="company_cod_include_shipping"
                               invisible="not cod_fee_enabled"/>
                    </group>
                        </page>

                        <!-- Tab 2: Governorate Pricing (New) -->
                        <page string="Governorate Company Costs" name="governorate_costs">
                           <!-- <group>
                                <field name="use_zone_pricing"/>
                                <field name="default_cost_per_kg" widget="monetary"/>
                            </group> -->

                            <!-- Default Zone Costs
                            <group string="Default Zone Costs (Company)" invisible="not use_zone_pricing">
                                <group>
                                    <field name="cairo_zone_cost" widget="monetary"/>
                                    <field name="alex_zone_cost" widget="monetary"/>
                                    <field name="delta_zone_cost" widget="monetary"/>
                                    <field name="upper_zone_cost" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="canal_zone_cost" widget="monetary"/>
                                    <field name="red_sea_zone_cost" widget="monetary"/>
                                    <field name="remote_zone_cost" widget="monetary"/>
                                </group>
                            </group>-->

                            <group string="Unified Costs">
                                <field name="unified_cost_per_kg" widget="monetary"/>
                                <field name="free_weight_limit"/>
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"/>
                                    <strong>Weight Cost:</strong><br/>
                                    • First <field name="free_weight_limit" readonly="1" nolabel="1"/> KG is free<br/>
                                    • Cost per KG applies only to weight exceeding this limit
                                </div>
                            </group>

                            <separator string="Governorate Specific Costs"/>

                            <!-- Governorate Costs List -->
                            <field name="governorate_price_ids">
                                <list editable="bottom">
                                    <field name="governorate_id"
                                           domain="[('country_id.code', '=', 'EG')]"
                                           options="{'no_create': True}"/>
                                    <field name="zone" widget="badge"/>
                                    <field name="base_cost" widget="monetary"/>

                                    <field name="handling_fee" widget="monetary" optional="show"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>

                       <page string="Service Pricing" name="service_pricing">
                            <field name="service_price_ids">
                                <list editable="bottom">
                                    <field name="service_id"/>
                                    <field name="fee_amount" widget="monetary"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>

                            <div class="alert alert-info mt-3">
                                <i class="fa fa-info-circle"/>
                                Set the price for each additional service in this customer category.
                            </div>
                       </page>


                        <page string="Insurance Settings" name="insurance_settings">
                            <group string="Company Insurance Configuration">
                                <group>
                                    <field name="insurance_enabled"/>
                                    <field name="insurance_type"
                                           invisible="not insurance_enabled"
                                           required="insurance_enabled"/>
                                    <field name="insurance_percentage"
                                           invisible="not insurance_enabled or insurance_type != 'percentage'"
                                           required="insurance_enabled and insurance_type == 'percentage'"/>
                                    <field name="insurance_fixed_amount"
                                           invisible="not insurance_enabled or insurance_type != 'fixed'"
                                           required="insurance_enabled and insurance_type == 'fixed'"/>
                                </group>
                                <group>
                                    <field name="insurance_minimum_value"
                                           invisible="not insurance_enabled"/>
                                    <field name="insurance_maximum_value"
                                           invisible="not insurance_enabled"
                                           help="0 = unlimited"/>
                                </group>
                            </group>

                        </page>

                        <page string="Description" name="description">
                            <field name="description" nolabel="1" placeholder="Benefits and conditions..."/>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_customer_price_category_kanban" model="ir.ui.view">
        <field name="name">customer.price.category.kanban</field>
        <field name="model">customer.price.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="discount_percentage"/>
                <field name="customer_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">Discount: </span>
                                        <strong><field name="discount_percentage"/>%</strong>
                                    </div>
                                    <div>
                                        <span class="text-muted">Min. Shipments: </span>
                                        <field name="min_monthly_shipments"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info">
                                            <i class="fa fa-users"/> <field name="customer_count"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Customer Category Governorate Price Tree View -->
    <record id="view_customer_category_governorate_price_tree" model="ir.ui.view">
        <field name="name">customer.category.governorate.price.tree</field>
        <field name="model">customer.category.governorate.price</field>
        <field name="arch" type="xml">
            <list string="Governorate Costs" editable="top">
                <field name="category_id" optional="show"/>
                <field name="egypt_governorate_id" options="{'no_create': True}"/>
                <field name="zone" widget="badge"/>
                <field name="base_cost" widget="monetary"/>
                <field name="cost_per_kg" widget="monetary"/>
                <field name="handling_fee" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Customer Category Governorate Price Form View -->
    <record id="view_customer_category_governorate_price_form" model="ir.ui.view">
        <field name="name">customer.category.governorate.price.form</field>
        <field name="model">customer.category.governorate.price</field>
        <field name="arch" type="xml">
            <form string="Governorate Cost Configuration">
                <sheet>
                    <group>
                        <group string="Configuration">
                            <field name="category_id" options="{'no_create': True}"/>
                            <field name="governorate_id"
                                   domain="[('country_id.code', '=', 'EG')]"
                                   options="{'no_create': True}"/>
                            <field name="zone"/>
                            <field name="active"/>
                        </group>
                        <group string="Costs">
                            <field name="base_cost" widget="monetary"/>
                            <field name="cost_per_kg" widget="monetary"/>
                            <field name="handling_fee" widget="monetary"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update Shipment Form View to Show Company Costs -->
    <record id="view_shipment_order_form_company_costs" model="ir.ui.view">
        <field name="name">shipment.order.form.company.costs</field>
        <field name="model">shipment.order</field>
        <field name="inherit_id" ref="shipping_management_system.view_shipment_order_form"/>
        <field name="arch" type="xml">

            <!-- Add hidden fields for calculations -->
            <field name="sender_id" position="after">
                <field name="company_base_cost" invisible="1"/>
                <field name="company_weight_cost" invisible="1"/>
                <field name="company_handling_fee" invisible="1"/>
                <field name="total_company_cost" invisible="1"/>
                <field name="total_final_cost" invisible="1"/>
            </field>

            <!-- Add Company Costs Section in existing notebook -->
            <notebook position="inside">
                <page string="Company Costs" name="company_costs">

                    <separator string="Complete Cost Analysis"/>

                    <group col="2">
                        <group string="1. Company Costs">
                            <field name="company_base_cost" widget="monetary" readonly="1"/>
                            <field name="company_weight_cost" widget="monetary" readonly="1"/>
                            <field name="company_cod_fee_amount" widget="monetary" readonly="1"/>
                            <field name="pickup_fee" widget="monetary" readonly="1"/>
                            <field name="total_additional_fees" widget="monetary" readonly="1" string="Services Fees"/>
                            <field name="company_insurance_fee_amount" widget="monetary" readonly="1"/>
                            <separator/>
                            <field name="total_company_cost"
                                   widget="monetary"
                                   readonly="1"
                                   class="fw-bold text-info"/>
                        </group>

                        <group string="2. Shipping Company Costs">
                            <field name="base_shipping_cost" widget="monetary" readonly="1"/>
                            <field name="weight_shipping_cost" widget="monetary" readonly="1"/>
                            <field name="cod_fee_amount" widget="monetary" readonly="1"/>
                            <field name="insurance_fee_amount" widget="monetary" readonly="1"/>

                            <separator/>
                            <field name="shipping_cost"
                                   widget="monetary"
                                   readonly="1"
                                   class="fw-bold text-warning"/>
                        </group>
                    </group>

                    <group col="2">

                        <group string="3. Customer Discount" invisible="not discount_amount">
                            <field name="customer_category_id" widget="badge" readonly="1"/>
                            <field name="discount_percentage" readonly="1" />
                            <div class="text-info">
                                <i class="fa fa-info-circle"/> Discount applies only to company costs &amp; additional services
                            </div>
                            <field name="discount_amount"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-danger="discount_amount > 0"/>
                        </group>
                    </group>


                </page>
            </notebook>

        </field>
    </record>

    <!-- Shipment List View - Add Company Cost -->
    <record id="view_shipment_order_list_company_cost" model="ir.ui.view">
        <field name="name">shipment.order.list.company.cost</field>
        <field name="model">shipment.order</field>
        <field name="inherit_id" ref="shipping_management_system.view_shipment_order_list"/>
        <field name="arch" type="xml">
            <field name="total_weight" position="after">
                <field name="total_company_cost"
                       widget="monetary"
                       optional="show"
                       decoration-info="total_company_cost > 0"/>
                <field name="calculated_customer_price"
                       widget="monetary"
                       optional="show"
                       decoration-success="calculated_customer_price > 0"/>
            </field>
        </field>
    </record>

    <!-- Partner Form View -->
    <record id="view_partner_form_pricing" model="ir.ui.view">
        <field name="name">res.partner.form.pricing</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="price_category_id"
                       options="{'no_create': True}"
                       string="Price Category"/>
            </field>

            <notebook position="inside">
                <page string="Pricing" name="pricing_tab">
                    <group>
                        <group string="Category">
                            <field name="price_category_id"
                                   options="{'no_create': True}"/>
                            <field name="monthly_shipment_count" readonly="1"/>
                            <field name="total_shipment_value" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_customer_price_category" model="ir.actions.act_window">
        <field name="name">Customer Categories</field>
        <field name="res_model">customer.price.category</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer category
            </p>
            <p>
                Define different pricing categories with company costs per governorate.
            </p>
        </field>
    </record>

    <record id="action_customer_governorate_prices" model="ir.actions.act_window">
        <field name="name">Customer Category Governorate Costs</field>
        <field name="res_model">customer.category.governorate.price</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure governorate costs per customer category
            </p>
        </field>
    </record>

 <record id="view_customer_governorate_price_tree_new" model="ir.ui.view">
        <field name="name">customer.category.governorate.price.tree.new</field>
        <field name="model">customer.category.governorate.price</field>
        <field name="arch" type="xml">
            <list string="Governorate Costs" editable="bottom">
                <field name="egypt_governorate_id" options="{'no_create': True}"/>
                <field name="zone"/>
                <field name="base_cost"/>
                <field name="cost_per_kg"/>
                <field name="handling_fee"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_customer_governorate_price_form_new" model="ir.ui.view">
        <field name="name">customer.category.governorate.price.form.new</field>
        <field name="model">customer.category.governorate.price</field>
        <field name="arch" type="xml">
            <form string="Governorate Cost">
                <sheet>
                    <group>
                        <group>
                            <field name="category_id" options="{'no_create': True}"/>
                            <field name="egypt_governorate_id" options="{'no_create': True}"/>
                            <field name="zone"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="base_cost"/>
                            <field name="cost_per_kg"/>
                            <field name="handling_fee"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Notes..."/>
                </sheet>
            </form>
        </field>
    </record>


</odoo>