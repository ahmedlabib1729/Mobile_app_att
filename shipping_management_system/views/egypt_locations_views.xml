<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== Egypt Governorate Views ===== -->

    <!-- List View -->
    <record id="view_egypt_governorate_list" model="ir.ui.view">
        <field name="name">egypt.governorate.list</field>
        <field name="model">egypt.governorate</field>
        <field name="arch" type="xml">
            <list string="Egypt Governorates">
                <field name="name"/>
                <field name="code"/>
                <field name="zone"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_egypt_governorate_form" model="ir.ui.view">
        <field name="name">egypt.governorate.form</field>
        <field name="model">egypt.governorate</field>
        <field name="arch" type="xml">
            <form string="Egypt Governorate">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="zone"/>
                            <field name="state_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Areas" name="areas">
                            <field name="area_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_egypt_governorate_search" model="ir.ui.view">
        <field name="name">egypt.governorate.search</field>
        <field name="model">egypt.governorate</field>
        <field name="arch" type="xml">
            <search string="Search Governorates">
                <field name="name"/>
                <field name="code"/>
                <filter string="Cairo Zone" name="cairo" domain="[('zone', '=', 'cairo_giza')]"/>
                <filter string="Alexandria Zone" name="alex" domain="[('zone', '=', 'alexandria')]"/>
                <filter string="Delta Zone" name="delta" domain="[('zone', '=', 'delta')]"/>
                <filter string="Upper Egypt" name="upper" domain="[('zone', '=', 'upper_egypt')]"/>
                <group expand="0" string="Group By">
                    <filter string="Zone" name="group_zone" context="{'group_by':'zone'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===== Egypt Area Views ===== -->

    <!-- List View -->
    <record id="view_egypt_area_list" model="ir.ui.view">
        <field name="name">egypt.governorate.area.list</field>
        <field name="model">egypt.governorate.area</field>
        <field name="arch" type="xml">
            <list string="Egypt Areas">
                <field name="name"/>
                <field name="governorate_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_egypt_area_form" model="ir.ui.view">
        <field name="name">egypt.governorate.area.form</field>
        <field name="model">egypt.governorate.area</field>
        <field name="arch" type="xml">
            <form string="Egypt Area">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="governorate_id" options="{'no_create': True}"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Cities/Districts" name="cities">
                            <field name="city_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="zip_code"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===== Egypt City Views ===== -->

    <!-- List View -->
    <record id="view_egypt_city_list" model="ir.ui.view">
        <field name="name">egypt.governorate.city.list</field>
        <field name="model">egypt.governorate.city</field>
        <field name="arch" type="xml">
            <list string="Egypt Cities/Districts">
                <field name="name"/>
                <field name="area_id"/>
                <field name="governorate_id"/>
                <field name="zip_code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ===== Import Wizard Views ===== -->

    <record id="view_import_egypt_locations_form" model="ir.ui.view">
        <field name="name">import.egypt.locations.form</field>
        <field name="model">import.egypt.locations</field>
        <field name="arch" type="xml">
            <form string="Import Egypt Locations">
                <group invisible="context.get('show_summary', False)">
                    <field name="excel_file" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="import_mode"/>
                    <field name="skip_errors"/>
                    <field name="clear_existing"/>
                </group>
                <div invisible="not context.get('show_summary', False)">
                    <field name="import_summary" readonly="1"/>
                </div>
                <footer>
                    <button name="action_import"
                            type="object"
                            string="Import"
                            class="btn-primary"
                            invisible="context.get('show_summary', False)"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ===== Update Shipment Form View ===== -->

    <record id="view_shipment_order_form_inherit_locations" model="ir.ui.view">
        <field name="name">shipment.order.form.inherit.locations</field>
        <field name="model">shipment.order</field>
        <field name="inherit_id" ref="shipping_management_system.view_shipment_order_form"/>
        <field name="arch" type="xml">
            <!-- تحديث حقول المستلم -->
            <xpath expr="//field[@name='recipient_governorate_id']" position="after">
                <field name="recipient_governorate_new_id"
                       string="Governorate (New)"
                       options="{'no_create': True}"/>
                <field name="recipient_area_id"
                       string="Area"
                       options="{'no_create': True}"
                       invisible="not recipient_governorate_new_id"/>
                <field name="recipient_city_district_id"
                       string="City/District"
                       options="{'no_create': True}"
                       invisible="not recipient_area_id"/>
            </xpath>

            <!-- تحديث حقول المرسل -->
            <xpath expr="//field[@name='sender_governorate_id']" position="after">
                <field name="sender_governorate_new_id"
                       string="Governorate (New)"
                       options="{'no_create': True}"/>
                <field name="sender_area_id"
                       string="Area"
                       options="{'no_create': True}"
                       invisible="not sender_governorate_new_id"/>
                <field name="sender_city_district_id"
                       string="City/District"
                       options="{'no_create': True}"
                       invisible="not sender_area_id"/>
            </xpath>
        </field>
    </record>

    <!-- ===== Actions ===== -->

    <record id="action_egypt_governorate" model="ir.actions.act_window">
        <field name="name">Egypt Governorates</field>
        <field name="res_model">egypt.governorate</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first governorate!
            </p>
            <p>
                Click the Import button to import from Excel
            </p>
        </field>
    </record>

    <record id="action_egypt_area" model="ir.actions.act_window">
        <field name="name">Egypt Areas</field>
        <field name="res_model">egypt.governorate.area</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_egypt_city" model="ir.actions.act_window">
        <field name="name">Egypt Cities/Districts</field>
        <field name="res_model">egypt.governorate.city</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_import_egypt_locations" model="ir.actions.act_window">
        <field name="name">Import Egypt Locations</field>
        <field name="res_model">import.egypt.locations</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- ===== Menu Items ===== -->

    <menuitem id="menu_egypt_locations_root"
              name="Egypt Locations"
              parent="menu_shipment_root"
              sequence="50"/>

    <menuitem id="menu_egypt_governorate"
              name="Governorates"
              parent="menu_egypt_locations_root"
              action="action_egypt_governorate"
              sequence="10"/>

    <menuitem id="menu_egypt_area"
              name="Areas"
              parent="menu_egypt_locations_root"
              action="action_egypt_area"
              sequence="20"/>

    <menuitem id="menu_egypt_city"
              name="Cities/Districts"
              parent="menu_egypt_locations_root"
              action="action_egypt_city"
              sequence="30"/>

    <menuitem id="menu_import_egypt_locations"
              name="Import from Excel"
              parent="menu_egypt_locations_root"
              action="action_import_egypt_locations"
              sequence="100"/>
</odoo>