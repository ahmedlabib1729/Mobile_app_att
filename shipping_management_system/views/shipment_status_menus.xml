        <field name="res_model">shipment.order</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="domain">[
            ('state', '=', 'draft'),
            ('create_date', '&lt;=', (datetime.datetime.now() - datetime.timedelta(hours=24)).strftime('%Y-%m-%d %H:%M:%S'))
        ]</field>
        <field name="context">{'search_default_no_action': 1, 'default_state': 'draft'}</field>
        <field name="views" eval="[
            (ref('shipping_management_system.view_shipment_order_list'), 'list'),
            (False, 'form'),
            (False, 'kanban'),
