        <field name="name">Shipment Orders</field>
        <field name="res_model">shipment.order</field>
        <field name="view_mode">list,kanban,form,graph,pivot,calendar</field>
        <field name="views" eval="[
            (ref('shipping_management_system.view_shipment_order_list'), 'list'),
            (False, 'kanban'),
            (False, 'form'),
            (False, 'graph'),
            (False, 'pivot'),
            (False, 'calendar')
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first shipment order</p>
            <p>Manage your shipping operations efficiently with our comprehensive shipment tracking system.</p>
