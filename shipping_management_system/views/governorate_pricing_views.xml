<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ GOVERNORATE PRICING VIEWS ============ -->

    <!-- Tree View -->
    <record id="view_shipping_governorate_price_list" model="ir.ui.view">
        <field name="name">shipping.governorate.price.list</field>
        <field name="model">shipping.governorate.price</field>
        <field name="arch" type="xml">
            <list string="Governorate Prices" editable="top">
                <field name="company_id" optional="show"/>
                <field name="governorate_id"/>
                <field name="zone" widget="badge"/>
                <field name="base_price" widget="monetary"/>
                <field name="price_per_kg" widget="monetary" optional="show"/>
                <field name="cod_fee" widget="monetary" optional="show"/>
                <field name="cod_percentage" optional="hide"/>
                <field name="delivery_days_min" optional="show"/>
                <field name="delivery_days_max" optional="show"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_shipping_governorate_price_form" model="ir.ui.view">
        <field name="name">shipping.governorate.price.form</field>
        <field name="model">shipping.governorate.price</field>
        <field name="arch" type="xml">
            <form string="Governorate Pricing">
                <sheet>
                    <widget name="web_ribbon" title="Archived"
                            invisible="active"
                            bg_color="text-bg-danger"/>

                    <group>
                        <group string="Configuration">
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="governorate_id"
                                   domain="[('country_id.code', '=', 'EG')]"
                                   options="{'no_create': True}"/>
                            <field name="zone"/>
                            <field name="active"/>
                        </group>
                        <group string="Delivery Time">
                            <field name="delivery_days_min"/>
                            <field name="delivery_days_max"/>
                        </group>
                    </group>

                    <group string="Pricing">
                        <group>
                            <field name="base_price" widget="monetary"/>
                            <field name="price_per_kg" widget="monetary"/>
                        </group>
                        <group>
                            <field name="cod_fee" widget="monetary"/>
                            <field name="cod_percentage" widget="percentage"/>
                        </group>
                    </group>

                    <group string="Additional Fees">
                        <group>
                            <field name="return_fee" widget="monetary"/>
                            <field name="exchange_fee" widget="monetary"/>
                        </group>
                        <group>
                            <field name="max_weight"/>
                        </group>
                    </group>

                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shipping_governorate_price_search" model="ir.ui.view">
        <field name="name">shipping.governorate.price.search</field>
        <field name="model">shipping.governorate.price</field>
        <field name="arch" type="xml">
            <search string="Search Governorate Prices">
                <field name="company_id"/>
                <field name="governorate_id"/>
                <field name="zone"/>

                <filter name="active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="cairo_zone" string="Cairo &amp; Giza"
                        domain="[('zone', '=', 'cairo')]"/>
                <filter name="alex_zone" string="Alexandria"
                        domain="[('zone', '=', 'alex')]"/>
                <filter name="delta_zone" string="Delta"
                        domain="[('zone', '=', 'delta')]"/>
                <filter name="upper_zone" string="Upper Egypt"
                        domain="[('zone', '=', 'upper')]"/>
                <filter name="canal_zone" string="Suez Canal"
                        domain="[('zone', '=', 'canal')]"/>
                <filter name="red_sea_zone" string="Red Sea &amp; Sinai"
                        domain="[('zone', '=', 'red_sea')]"/>
                <filter name="remote_zone" string="Remote Areas"
                        domain="[('zone', '=', 'remote')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_company" string="Shipping Company"
                            context="{'group_by': 'company_id'}"/>
                    <filter name="group_zone" string="Zone"
                            context="{'group_by': 'zone'}"/>
                    <filter name="group_governorate" string="Governorate"
                            context="{'group_by': 'governorate_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_shipping_governorate_price_kanban" model="ir.ui.view">
        <field name="name">shipping.governorate.price.kanban</field>
        <field name="model">shipping.governorate.price</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="company_id"/>
                <field name="governorate_id"/>
                <field name="zone"/>
                <field name="base_price"/>
                <field name="delivery_days_min"/>
                <field name="delivery_days_max"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="governorate_id"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="company_id"/>
                                        </span>
                                    </div>
                                    <field name="zone" widget="label_selection"
                                           options="{'classes': {'cairo': 'primary', 'alex': 'info', 'delta': 'success', 'upper': 'warning', 'canal': 'danger', 'red_sea': 'secondary', 'remote': 'dark'}}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">Base Price: </span>
                                        <strong><field name="base_price"/> EGP</strong>
                                    </div>
                                    <div>
                                        <span class="text-muted">Delivery: </span>
                                        <field name="delivery_days_min"/>-<field name="delivery_days_max"/> days
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="active" widget="boolean"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- ============ ACTIONS ============ -->

    <record id="action_shipping_governorate_price" model="ir.actions.act_window">
        <field name="name">Governorate Prices</field>
        <field name="res_model">shipping.governorate.price</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure shipping prices per governorate
            </p>
            <p>
                Set different shipping rates for each Egyptian governorate.
            </p>
        </field>
    </record>

    <!-- Server Action to Initialize Prices -->
    <record id="action_initialize_governorate_prices" model="ir.actions.server">
        <field name="name">Initialize Governorate Prices</field>
        <field name="model_id" ref="shipping_management_system.model_shipping_company"/>
        <field name="binding_model_id" ref="shipping_management_system.model_shipping_company"/>
        <field name="state">code</field>
        <field name="code">
model.initialize_default_prices()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Success',
        'message': 'Default governorate prices have been initialized',
        'type': 'success',
    }
}
        </field>
    </record>

    <!-- ============ MENU ITEMS ============ -->



</odoo>