<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============ SHIPPING COMPANY VIEWS ============ -->

    <!-- List View -->
    <record id="view_shipping_company_list" model="ir.ui.view">
        <field name="name">shipping.company.list</field>
        <field name="model">shipping.company</field>
        <field name="arch" type="xml">
            <list string="Shipping Companies">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="cod_minimum_amount" widget="monetary" optional="show"/>
                <field name="cod_cash_percentage" optional="show"/>
                <field name="cod_visa_percentage" optional="show"/>
                <field name="total_orders"/>
                <field name="delivered_orders"/>
                <field name="success_rate" widget="percentage"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_shipping_company_form" model="ir.ui.view">
        <field name="name">shipping.company.form</field>
        <field name="model">shipping.company</field>
        <field name="arch" type="xml">
            <form string="Shipping Company">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-truck">
                            <field name="total_orders" widget="statinfo" string="Total Orders"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-circle">
                            <field name="success_rate" widget="statinfo" string="Success Rate"/>
                        </button>
                        <button name="action_view_governorate_prices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-map-marker">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Governorate Prices</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger"
                            invisible="active"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Company Name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Statistics">
                            <field name="total_orders" readonly="1"/>
                            <field name="delivered_orders" readonly="1"/>
                            <field name="success_rate"  readonly="1"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Governorate Pricing" name="governorate_pricing">
                            <!--<group>
                                <field name="default_zone_prices"/>
                                <field name="default_price_per_kg" widget="monetary"/>
                            </group> -->

                            <group string="Unified Pricing">
                                    <field name="unified_price_per_kg" widget="monetary"/>
                                    <field name="free_weight_limit"/>
                                    <div class="alert alert-info">
                                        <i class="fa fa-info-circle"/>
                                        <strong>Weight Pricing:</strong><br/>
                                        • First <field name="free_weight_limit" readonly="1" nolabel="1"/> KG is free<br/>
                                        • Price per KG applies only to weight exceeding this limit
                                    </div>
                                </group>


                            <!-- Default Zone Prices
                            <group string="Default Zone Prices" invisible="not default_zone_prices">
                                <group>
                                    <field name="cairo_zone_price" widget="monetary"/>
                                    <field name="alex_zone_price" widget="monetary"/>
                                    <field name="delta_zone_price" widget="monetary"/>
                                    <field name="upper_zone_price" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="canal_zone_price" widget="monetary"/>
                                    <field name="red_sea_zone_price" widget="monetary"/>
                                    <field name="remote_zone_price" widget="monetary"/>
                                </group>
                            </group> -->

                            <separator string="Governorate Specific Prices"/>

                            <!-- Governorate Prices List -->
                            <field name="governorate_price_ids"
       context="{'active_test': False}"
       domain="[('active','in',[True, False])]">
    <list editable="bottom">

        <field name="egypt_governorate_id"
               options="{'no_create': True}"
               context="{'active_test': False}"
               domain="[('active','in',[True, False])]"/>
        <field name="base_price" widget="monetary"/>
        <field name="delivery_days_min" optional="show"/>
        <field name="delivery_days_max" optional="show"/>
        <field name="active" widget="boolean_toggle"/>
    </list>
</field>
                           </page>

                        <!-- Tab 1: COD Configuration -->
                        <page string="COD  &amp; Insurance Configuration" name="cod_config">



                        </page>

                        <page string="Return Penalty Configuration" name="cod_config">

                        <group string="Return Penalty Settings">
                                <field name="return_penalty_enabled"/>
                                <field name="return_penalty_percentage"
                                       invisible="not return_penalty_enabled"
                                       required="return_penalty_enabled"/>
                            </group>

                        </page>

                        <page string="Insurance Fee Settings" >

                            <group string="Insurance Fee Settings">
                                <group>
                                    <field name="insurance_type" widget="radio" options="{'horizontal': True}"/>
                                    <field name="insurance_minimum_value" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="insurance_percentage"

                                           invisible="insurance_type != 'percentage'"/>
                                    <field name="insurance_fixed_amount"
                                           widget="monetary"
                                           invisible="insurance_type != 'fixed'"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tab 2: Governorate Pricing -->


                        <!-- Tab 3: Contact Information -->
                        <page string="Contact Information">
                            <group>
                                <group>
                                    <field name="phone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                                <group>
                                    <field name="website" widget="url" placeholder="https://www.example.com"/>
                                    <field name="address" widget="text"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_shipping_company_kanban" model="ir.ui.view">
        <field name="name">shipping.company.kanban</field>
        <field name="model">shipping.company</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="cod_minimum_amount"/>
                <field name="total_orders"/>
                <field name="delivered_orders"/>
                <field name="success_rate"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle text-muted">
                                            Code: <field name="code"/>
                                        </span>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown" t-if="active">
                                        <a role="button" class="dropdown-toggle o-no-caret btn"
                                           data-bs-toggle="dropdown" href="#"
                                           aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a type="edit" role="menuitem" class="dropdown-item">Edit</a>
                                            <a type="delete" role="menuitem" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <span class="text-muted">Orders:</span>
                                            <strong><field name="total_orders"/></strong>
                                        </div>
                                        <div class="col-6">
                                            <span class="text-muted">Delivered:</span>
                                            <strong><field name="delivered_orders"/></strong>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <span class="text-muted">COD Min:</span>
                                        <strong><field name="cod_minimum_amount"/> EGP</strong>
                                    </div>
                                    <div class="mt-2">
                                        <field name="success_rate" widget="progressbar"
                                               options="{'current_value': 'success_rate', 'max_value': 100}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="active" widget="boolean" invisible="active"/>
                                        <span t-if="!record.active.raw_value" class="badge rounded-pill text-bg-danger">
                                            Inactive
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shipping_company_search" model="ir.ui.view">
        <field name="name">shipping.company.search</field>
        <field name="model">shipping.company</field>
        <field name="arch" type="xml">
            <search string="Search Shipping Companies">
                <field name="name"/>
                <field name="code"/>

                <separator/>

                <filter name="active" string="Active"
                        domain="[('active', '=', True)]"
                        help="Active shipping companies"/>
                <filter name="inactive" string="Inactive"
                        domain="[('active', '=', False)]"
                        help="Inactive shipping companies"/>

                <separator/>


                <group expand="0" string="Group By">
                    <filter name="group_active" string="Status"
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_shipping_company" model="ir.actions.act_window">
        <field name="name">Shipping Companies</field>
        <field name="res_model">shipping.company</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first shipping company
            </p>
            <p>
                Configure shipping companies with COD settings and governorate-based pricing.
                Each company can have different rates for different Egyptian governorates.
            </p>
        </field>
    </record>

    <!-- Menu Items -->


</odoo>