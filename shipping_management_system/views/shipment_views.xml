<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View للشحنة -->
    <record id="view_shipment_order_form" model="ir.ui.view">
        <field name="name">shipment.order.form</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <form string="Shipment Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_pickup" string="Mark as Picked" type="object" 
                            invisible="state != 'confirmed'" class="btn-primary"/>
                    <button name="action_in_transit" string="In Transit" type="object" 
                            invisible="state != 'picked'" class="btn-primary"/>
                    <button name="action_out_for_delivery" string="Out for Delivery" type="object" 
                            invisible="state != 'in_transit'" class="btn-warning"/>
                    <button name="action_deliver" string="Delivered" type="object" 
                            invisible="state != 'out_for_delivery'" class="btn-success"/>
                    <button name="action_return" string="Return" type="object" 
                            invisible="state not in ['delivered','out_for_delivery']" class="btn-warning"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ['draft','confirmed']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,picked,in_transit,out_for_delivery,delivered"/>
                </header>
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_invoices" icon="fa-file-text-o"
                                invisible="state in ['draft','cancelled']">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="invoice_count"/>
                                </span>
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Cancelled" 
                            invisible="state != 'cancelled'"
                            bg_color="text-bg-danger"/>
                    <widget name="web_ribbon" title="Delivered" 
                            invisible="state != 'delivered'"
                            bg_color="text-bg-success"/>
                    <widget name="web_ribbon" title="Returned" 
                            invisible="state != 'returned'"
                            bg_color="text-bg-warning"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="order_number" readonly="1"/>
                        </h1>

                    </div>
                    
                    <group>
                        <group string="Shipping Details">
                            <field name="shipment_type"/>
                            <field name="pickup_date"/>
                            <field name="expected_delivery"/>
                            <field name="actual_delivery" readonly="1" invisible="state != 'delivered'"/>
                            <field name="tracking_number" invisible="state in ['draft', 'confirmed']"/>
                        </group>
                        <group string="Summary">
                            <field name="package_count"/>
                            <field name="total_weight" class="fw-bold"/>
                            <field name="total_volume"/>
                            <field name="total_value" class="fw-bold text-primary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Sender Information">
                            <group>
                                <group string="Contact Details">
                                    <field name="sender_id" options="{'no_create': False}"/>
                                    <field name="sender_name"/>
                                    <field name="sender_phone"/>
                                    <field name="sender_mobile"/>
                                    <field name="sender_email" widget="email"/>
                                </group>
                                <group string="Address">
                                    <field name="sender_address" widget="text"/>
                                    <field name="sender_city"/>
                                    <field name="sender_state_id" options="{'no_create': False}"/>
                                    <field name="sender_country_id" options="{'no_create': False}"/>
                                    <field name="sender_zip"/>
                                </group>
                            </group>
                        </page>

                        <page string="Recipient Information">
                            <group>
                                <group string="Contact Details">
                                    <field name="recipient_id" options="{'no_create': False}"/>
                                    <field name="recipient_name"/>
                                    <field name="recipient_phone"/>
                                    <field name="recipient_mobile"/>
                                    <field name="recipient_email" widget="email"/>
                                </group>
                                <group string="Address">
                                    <field name="recipient_address" widget="text"/>
                                    <field name="recipient_city"/>
                                    <field name="recipient_state_id" options="{'no_create': False}"/>
                                    <field name="recipient_country_id" options="{'no_create': False}"/>
                                    <field name="recipient_zip"/>
                                </group>
                            </group>
                        </page>

                        <page string="Products">
                            <field name="shipment_line_ids">
                                <list editable="bottom">
                                    <field name="product_name"/>
                                    <field name="category_id"/>
                                    <field name="subcategory_id"
                                           domain="[('category_id', '=', category_id)]"
                                           optional="show"/>
                                    <field name="brand_id" optional="show"/>
                                    <field name="quantity"/>
                                    <field name="weight"/>
                                    <field name="total_weight" sum="Total Weight"/>
                                    <field name="product_value"/>
                                    <field name="total_value" sum="Total Value"/>
                                    <field name="fragile" widget="boolean_toggle" optional="show"/>
                                    <field name="dangerous_goods" widget="boolean_toggle" optional="show"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_weight" class="oe_subtotal_footer_separator"/>
                                <field name="total_value"/>
                            </group>
                        </page>

                        <page string="Product Dimensions" invisible="not shipment_line_ids">
                            <field name="shipment_line_ids">
                                <list editable="bottom">
                                    <field name="product_name" readonly="1"/>
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                    <field name="volume" sum="Total Volume"/>
                                    <field name="hs_code" optional="show"/>
                                    <field name="serial_number" optional="show"/>
                                    <field name="notes" optional="show"/>
                                </list>
                            </field>
                        </page>

                        <page string="Pricing &amp; Shipping">
                            <group>
                                <group string="Shipping Company">
                                    <field name="shipping_company_id" options="{'no_create': False}"/>
                                    <field name="shipping_cost"/>
                                </group>
                                <group string="Customer Pricing">
                                    <field name="customer_price"/>
                                    <field name="profit_margin" readonly="1" class="text-success fw-bold"/>
                                </group>
                                <group string="Payment">
                                    <field name="payment_method"/>
                                    <field name="cod_amount" invisible="payment_method != 'cod'"/>
                                </group>
                                <group string="Insurance">
                                    <field name="insurance_required" widget="boolean_toggle"/>
                                    <field name="insurance_value" invisible="not insurance_required"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notes">
                            <group>
                                <field name="notes" placeholder="Customer notes..." nolabel="1"/>
                                <field name="internal_notes" placeholder="Internal notes (not visible to customer)..."
                                       nolabel="1" groups="base.group_user"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_shipment_order_list" model="ir.ui.view">
        <field name="name">shipment.order.list</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <list string="Shipments" multi_edit="1">
                <field name="order_number"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="recipient_city" optional="show"/>
                <field name="recipient_country_id" optional="show"/>
                <field name="package_count" optional="show"/>
                <field name="total_weight" sum="Total Weight"/>
                <field name="pickup_date"/>
                <field name="expected_delivery" optional="show"/>
                <field name="shipping_company_id" optional="show"/>
                <field name="customer_price" sum="Total Revenue"/>
                <field name="profit_margin" sum="Total Profit" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'delivered'"
                       decoration-warning="state in ['out_for_delivery', 'returned']"
                       decoration-danger="state == 'cancelled'"
                       decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_shipment_order_kanban" model="ir.ui.view">
        <field name="name">shipment.order.kanban</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="order_number"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="recipient_city"/>
                <field name="state"/>
                <field name="customer_price"/>
                <field name="total_weight"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="order_number"/></strong>
                                <div>
                                    <i class="fa fa-user"/> <field name="sender_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-location-arrow"/> <field name="recipient_id"/>
                                    (<field name="recipient_city"/>)
                                </div>
                                <div>
                                    <i class="fa fa-balance-scale"/> <field name="total_weight"/> KG
                                </div>
                                <div>
                                    <span class="badge badge-pill">
                                        <field name="customer_price" widget="monetary"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shipment_order_search" model="ir.ui.view">
        <field name="name">shipment.order.search</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <search string="Search Shipments">
                <field name="order_number"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="recipient_city"/>
                <field name="tracking_number"/>

                <separator/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
                <filter name="in_transit" string="In Transit"
                        domain="[('state','in',['picked','in_transit','out_for_delivery'])]"/>
                <filter name="delivered" string="Delivered" domain="[('state','=','delivered')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <separator/>
                <filter name="insurance" string="Insured" domain="[('insurance_required','=',True)]"/>
                <filter name="cod" string="COD" domain="[('payment_method','=','cod')]"/>
                <separator/>
                <filter name="today_pickup" string="Today's Pickup"
                        domain="[('pickup_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                ('pickup_date', '&lt;', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="sender" string="Sender" context="{'group_by':'sender_id'}"/>
                    <filter name="recipient" string="Recipient" context="{'group_by':'recipient_id'}"/>
                    <filter name="shipping_company" string="Shipping Company"
                            context="{'group_by':'shipping_company_id'}"/>
                    <filter name="state" string="Status" context="{'group_by':'state'}"/>
                    <filter name="pickup_date" string="Pickup Date" context="{'group_by':'pickup_date'}"/>
                    <filter name="shipment_type" string="Type" context="{'group_by':'shipment_type'}"/>

                </group>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_shipment_order_graph" model="ir.ui.view">
        <field name="name">shipment.order.graph</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <graph string="Shipment Analytics" type="bar">
                <field name="state" type="row"/>
                <field name="customer_price" type="measure"/>
                <field name="total_weight" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_shipment_order_pivot" model="ir.ui.view">
        <field name="name">shipment.order.pivot</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <pivot string="Shipment Analysis">
                <field name="sender_id" type="row"/>
                <field name="state" type="col"/>
                <field name="customer_price" type="measure"/>
                <field name="profit_margin" type="measure"/>
                <field name="total_weight" type="measure"/>
                <field name="package_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_shipment_order_calendar" model="ir.ui.view">
        <field name="name">shipment.order.calendar</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <calendar string="Shipments Calendar" date_start="pickup_date"
                     date_stop="expected_delivery" color="shipping_company_id"
                     quick_create="0">
                <field name="order_number"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_shipment_order" model="ir.actions.act_window">
        <field name="name">Shipment Orders</field>
        <field name="res_model">shipment.order</field>
        <field name="view_mode">list,kanban,form,graph,pivot,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shipment order
            </p>
            <p>
                Manage your shipping operations efficiently with our comprehensive shipment tracking system.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_shipment_root"
              name="Shipments"
              sequence="10"
              web_icon="shipment_management,static/description/icon.png"/>

    <menuitem id="menu_shipment_orders"
              name="Shipment Orders"
              parent="menu_shipment_root"
              action="action_shipment_order"
              sequence="10"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_shipment_config"
              name="Configuration"
              parent="menu_shipment_root"
              sequence="100"/>

    <!-- Subcategory Views -->
    <record id="view_product_subcategory_list" model="ir.ui.view">
        <field name="name">product.subcategory.list</field>
        <field name="model">product.subcategory</field>
        <field name="arch" type="xml">
            <list string="Subcategories" editable="bottom">
                <field name="name"/>
                <field name="category_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_product_subcategory" model="ir.actions.act_window">
        <field name="name">Subcategories</field>
        <field name="res_model">product.subcategory</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_product_subcategory"
              name="Product Subcategories"
              parent="menu_shipment_config"
              action="action_product_subcategory"
              sequence="20"/>

    <!-- Brand Views -->
    <record id="view_product_brand_list" model="ir.ui.view">
        <field name="name">product.brand.list</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <list string="Brands" editable="bottom">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">list</field>
    </record>
    
    <menuitem id="menu_product_brand" 
              name="Product Brands" 
              parent="menu_shipment_config" 
              action="action_product_brand" 
              sequence="30"/>
</odoo>