<odoo>
    <!-- Client Action for Dashboard -->
    <record id="action_shipment_dashboard_client" model="ir.actions.client">
        <field name="name">ðŸ“Š Shipment Dashboard</field>
        <field name="tag">shipment_dashboard_client</field>
        <field name="target">fullscreen</field>
    </record>

    <!-- Standard Kanban View -->
    <record id="view_shipment_dashboard_kanban" model="ir.ui.view">
        <field name="name">shipment.order.dashboard.kanban</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <kanban create="false" sample="1" class="o_kanban_dashboard">
                <field name="state"/>
                <field name="order_number"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="final_customer_price"/>
                <field name="tracking_number"/>
                <field name="shipping_company_id"/>
                <field name="create_date"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <span class="o_text_overflow"><field name="order_number"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_card_content mt-3">
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <span class="text-muted small">From:</span><br/>
                                        <strong><field name="sender_id"/></strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted small">To:</span><br/>
                                        <strong><field name="recipient_id"/></strong>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <span class="text-muted small">Company:</span>
                                        <field name="shipping_company_id"/>
                                    </div>
                                </div>
                                <field name="tracking_number" invisible="not tracking_number"/>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="oe_kanban_bottom_left">
                                    <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-warning="state in ('in_transit', 'out_for_delivery')" decoration-danger="state == 'returned'" decoration-info="state == 'confirmed'"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <strong class="text-primary">
                                        <field name="final_customer_price" widget="monetary"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree/List View -->
    <record id="view_shipment_dashboard_tree" model="ir.ui.view">
        <field name="name">shipment.order.dashboard.tree</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <list string="Shipments" create="True" sample="1">
                <field name="order_number" decoration-bf="1"/>
                <field name="create_date" widget="date"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="recipient_city" optional="show"/>
                <field name="shipping_company_id" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-warning="state in ('in_transit', 'out_for_delivery')" decoration-danger="state == 'returned'" decoration-info="state == 'confirmed'"/>
                <field name="tracking_number" optional="hide"/>
                <field name="total_weight" optional="show" sum="Total"/>
                <field name="shipping_cost" widget="monetary" optional="show" sum="Total"/>
                <field name="final_customer_price" widget="monetary" decoration-bf="1" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_shipment_dashboard_graph" model="ir.ui.view">
        <field name="name">shipment.order.dashboard.graph</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <graph string="Shipments Analysis" type="line" sample="1">
                <field name="create_date" interval="day"/>
                <field name="final_customer_price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_shipment_dashboard_pivot" model="ir.ui.view">
        <field name="name">shipment.order.dashboard.pivot</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <pivot string="Shipments Analysis" sample="1" display_quantity="1">
                <field name="state" type="row"/>
                <field name="shipping_company_id" type="col"/>
                <field name="final_customer_price" type="measure"/>
                <field name="shipping_cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Cohort View -->


    <!-- Search View -->
    <record id="view_shipment_dashboard_search" model="ir.ui.view">
        <field name="name">shipment.order.dashboard.search</field>
        <field name="model">shipment.order</field>
        <field name="arch" type="xml">
            <search string="Search Shipments">
                <field name="order_number" filter_domain="['|', ('order_number', 'ilike', self), ('tracking_number', 'ilike', self)]"/>
                <field name="sender_id"/>
                <field name="recipient_id"/>
                <field name="shipping_company_id"/>
                <field name="state"/>
                <separator/>
                <filter string="My Shipments" name="my_shipments" domain="[('sender_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('create_date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), ('create_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter string="Yesterday" name="yesterday" domain="[('create_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=1)).replace(hour=0, minute=0, second=0)), ('create_date', '&lt;=', (datetime.datetime.now() - datetime.timedelta(days=1)).replace(hour=23, minute=59, second=59))]"/>
                <filter string="This Week" name="this_week" domain="[('create_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <filter string="This Month" name="this_month" domain="[('create_date', '>=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <filter string="Last Month" name="last_month" domain="[('create_date', '>=', (datetime.datetime.now() - relativedelta(months=1)).replace(day=1, hour=0, minute=0, second=0)), ('create_date', '&lt;', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Picked Up" name="picked" domain="[('state', '=', 'picked')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Out for Delivery" name="out_for_delivery" domain="[('state', '=', 'out_for_delivery')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Returned" name="returned" domain="[('state', '=', 'returned')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="COD" name="cod" domain="[('payment_method', '=', 'cod')]"/>
                <filter string="Prepaid" name="prepaid" domain="[('payment_method', '=', 'prepaid')]"/>
                <separator/>
                <filter string="High Value" name="high_value" domain="[('final_customer_price', '>', 1000)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Shipping Company" name="group_company" context="{'group_by': 'shipping_company_id'}"/>
                    <filter string="Payment Method" name="group_payment" context="{'group_by': 'payment_method'}"/>
                    <filter string="Sender" name="group_sender" context="{'group_by': 'sender_id'}"/>
                    <filter string="Recipient City" name="group_city" context="{'group_by': 'recipient_city'}"/>
                    <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    <filter string="Create Month" name="group_create_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Standard Views Action -->
    <record id="action_shipment_dashboard_views" model="ir.actions.act_window">
        <field name="name">ðŸ“ˆ Shipment Analytics</field>
        <field name="res_model">shipment.order</field>
        <field name="view_mode">kanban,list,graph,pivot</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="search_view_id" ref="view_shipment_dashboard_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No shipments found!
            </p>
            <p>
                Start creating shipment orders to see analytics.
            </p>
        </field>
    </record>

    <!-- Menu Items -->



</odoo>