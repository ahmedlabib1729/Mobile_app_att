<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="shipping_management_system.ShipmentDashboard">
        <div class="o_shipment_dashboard">
            <!-- Loading State -->
            <div t-if="state.isLoading" class="d-flex justify-content-center align-items-center" style="height: 100vh;">
                <div class="text-center">
                    <i class="fa fa-spinner fa-spin fa-3x text-primary mb-3"/>
                    <h3>Loading Dashboard...</h3>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div t-else="" class="container-fluid p-4">
                <!-- Header with Filters -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="dashboard-header rounded-3 p-4 text-white" style="background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-8">
                                    <h1 class="mb-2">
                                        <i class="fa fa-chart-line me-2"/> Shipment Dashboard
                                    </h1>
                                    <p class="mb-0 opacity-90">Real-time shipping analytics and insights</p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <button class="btn btn-light btn-lg" t-on-click="() => onRefreshClick()">
                                        <i class="fa fa-refresh me-2"/> Refresh
                                    </button>
                                </div>
                            </div>

                            <!-- Search and Filter Bar -->
                            <div class="row mt-4">
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="fa fa-search text-muted"/>
                                        </span>
                                        <input type="text"
                                               t-ref="searchInput"
                                               class="form-control"
                                               placeholder="Search by order number, customer..."
                                               t-att-value="state.searchTerm"
                                               t-on-input="onSearchInput"/>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" t-att-value="state.dateFilter" t-on-change="onDateFilterChange">
                                        <option value="today">Today</option>
                                        <option value="week">This Week</option>
                                        <option value="month">This Month</option>
                                        <option value="year">This Year</option>
                                        <option value="custom">Custom Range</option>
                                    </select>
                                </div>
                                <t t-if="state.dateFilter === 'custom'">
                                    <div class="col-md-2">
                                        <input type="date"
                                               class="form-control"
                                               t-att-value="state.startDate"
                                               t-on-change="(e) => { state.startDate = e.target.value; onCustomDateChange(); }"/>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date"
                                               class="form-control"
                                               t-att-value="state.endDate"
                                               t-on-change="(e) => { state.endDate = e.target.value; onCustomDateChange(); }"/>
                                    </div>
                                    <div class="col-md-1">
                                        <button class="btn btn-light w-100" t-on-click="() => applyFilters()">
                                            <i class="fa fa-filter"/>
                                        </button>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- KPI Cards Row -->
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card border-0 shadow-sm h-100 kpi-card" t-on-click="() => viewTodayShipments()" style="cursor: pointer;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Orders in Period</h6>
                                        <h2 class="mb-0 text-primary" t-esc="state.dashboardData.today?.created || 0"/>
                                    </div>
                                    <div class="rounded-circle p-3" style="background: rgba(255, 107, 53, 0.1);">
                                        <i class="fa fa-shopping-cart text-primary fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card border-0 shadow-sm h-100 kpi-card" t-on-click="() => viewShipmentsByStatus('in_transit')" style="cursor: pointer;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">In Transit</h6>
                                        <h2 class="mb-0 text-warning" t-esc="getInTransitCount()"/>
                                    </div>
                                    <div class="rounded-circle p-3" style="background: rgba(255, 193, 7, 0.1);">
                                        <i class="fa fa-truck text-warning fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card border-0 shadow-sm h-100 kpi-card" t-on-click="() => viewDeliveredToday()" style="cursor: pointer;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Delivered in Period</h6>
                                        <h2 class="mb-0 text-success" t-esc="state.dashboardData.today?.delivered || 0"/>
                                    </div>
                                    <div class="rounded-circle p-3" style="background: rgba(40, 167, 69, 0.1);">
                                        <i class="fa fa-check-circle text-success fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Period Revenue</h6>
                                        <h2 class="mb-0 text-info" t-esc="formatCurrency(state.dashboardData.financial?.total_revenue || 0)"/>
                                    </div>
                                    <div class="rounded-circle p-3" style="background: rgba(0, 123, 255, 0.1);">
                                        <i class="fa fa-dollar-sign text-info fa-2x"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Distribution -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0">
                                    <i class="fa fa-chart-pie me-2 text-primary"/> Order Status Distribution
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <t t-foreach="state.dashboardData.states || []" t-as="status" t-key="status.state">
                                        <div class="col-md-3 col-sm-6 mb-3">
                                            <div class="status-card p-3 rounded-3 border bg-light"
                                                 t-on-click="() => viewShipmentsByStatus(status.state)"
                                                 style="cursor: pointer; transition: all 0.3s ease;">
                                                <div class="d-flex align-items-center mb-2">
                                                    <i t-att-class="'fa ' + status.icon + ' text-' + status.color + ' me-2'"/>
                                                    <span class="fw-bold" t-esc="status.name"/>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h4 class="mb-0" t-esc="status.count"/>
                                                    <span t-att-class="'badge bg-' + status.color">
                                                        <t t-esc="status.percentage"/>%
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Shipments Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fa fa-list me-2 text-primary"/> Recent Shipments in Period
                                    </h5>
                                    <button class="btn btn-sm btn-outline-primary" t-on-click="() => viewAllShipments()">
                                        View All <i class="fa fa-arrow-right ms-1"/>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="px-4">ORDER #</th>
                                                <th>DATE</th>
                                                <th>SENDER</th>
                                                <th>RECIPIENT</th>
                                                <th>STATUS</th>
                                                <th>AMOUNT</th>
                                                <th>ACTIONS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="shipments" t-value="state.dashboardData.today_shipments || state.dashboardData.recent_shipments || []"/>
                                            <t t-if="shipments.length > 0">
                                                <t t-foreach="shipments" t-as="shipment" t-key="shipment.id">
                                                    <tr style="cursor: pointer;">
                                                        <td class="px-4" t-on-click="() => viewShipment(shipment.id)">
                                                            <span class="text-primary fw-bold">
                                                                <t t-esc="shipment.order_number"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <small class="text-muted">
                                                                <t t-esc="formatDate(shipment.create_date)"/>
                                                            </small>
                                                        </td>
                                                        <td t-esc="shipment.sender"/>
                                                        <td t-esc="shipment.recipient"/>
                                                        <td>
                                                            <span t-att-class="'badge bg-' + getStatusColor(shipment.state)">
                                                                <t t-esc="shipment.state_name"/>
                                                            </span>
                                                        </td>
                                                        <td class="fw-bold">
                                                            <t t-esc="formatCurrency(shipment.amount)"/>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-sm btn-outline-primary"
                                                                    t-on-click="() => viewShipment(shipment.id)">
                                                                <i class="fa fa-eye"/>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <tr>
                                                    <td colspan="7" class="text-center text-muted py-4">
                                                        No shipments found for selected period
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>