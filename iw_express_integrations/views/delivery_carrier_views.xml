<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Delivery Carrier Form -->
    <record id="view_delivery_carrier_form_iw" model="ir.ui.view">
        <field name="name">delivery.carrier.form.iw</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <!-- Add IW Express page after destination page -->
            <xpath expr="//page[@name='destination']" position="after">
                <page string="IW Express" invisible="delivery_type != 'iw_express'">
                    <group>
                        <group string="IW Express Settings">
                            <field name="iw_service_type" required="delivery_type == 'iw_express'"/>
                            <field name="iw_load_type" required="delivery_type == 'iw_express'"/>
                        </group>
                        <group string="Service Details">
                            <field name="product_id" string="Delivery Product"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <separator string="IW Express Configurations"/>
                    <field name="iw_config_ids"
                           required="delivery_type == 'iw_express'"
                           options="{'no_create': True, 'no_create_edit': True}"
                           domain="[('active', '=', True)]">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="country_id"/>
                            <field name="name"/>
                            <field name="is_default_for_country"/>
                            <field name="customer_code"/>
                            <field name="default_service_type"/>
                            <field name="active" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add to tree view -->
    <record id="view_delivery_carrier_tree_iw" model="ir.ui.view">
        <field name="name">delivery.carrier.tree.iw</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_type']" position="after">
                <field name="iw_service_type" optional="show" invisible="delivery_type != 'iw_express'"/>
                <field name="iw_load_type" optional="show" invisible="delivery_type != 'iw_express'"/>
            </xpath>
        </field>
    </record>
</odoo>