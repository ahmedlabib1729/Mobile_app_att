<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- IW Express Category -->
        <record id="module_category_iw_express" model="ir.module.category">
            <field name="name">IW Express</field>
            <field name="description">IW Express Shipping Integration</field>
            <field name="sequence">50</field>
        </record>

        <!-- Groups -->
        <record id="group_iw_user" model="res.groups">
            <field name="name">IW Express User</field>
            <field name="category_id" ref="module_category_iw_express"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_iw_manager" model="res.groups">
            <field name="name">IW Express Manager</field>
            <field name="category_id" ref="module_category_iw_express"/>
            <field name="implied_ids" eval="[(4, ref('group_iw_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>