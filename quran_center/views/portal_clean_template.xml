<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Clean Portal Dashboard without photo issues -->
    <template id="portal_student_dashboard_clean" name="Student Dashboard Clean">
        <t t-call="website.layout">
            <t t-set="title">لوحة التحكم - مركز تحفيظ القرآن</t>
            <div id="wrap">
                <div class="oe_structure"/>
                <div class="container mt-5">
                    <div class="row">
                        <!-- Sidebar -->
                        <div class="col-lg-3">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <!-- Student Avatar without issues -->
                                    <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3"
                                         style="width:100px; height:100px;">
                                        <i class="fa fa-user fa-3x text-white"></i>
                                    </div>
                                    <h5 class="mb-1"><t t-esc="student.name_ar"/></h5>
                                    <p class="text-muted"><t t-esc="student.student_code"/></p>
                                </div>
                                <div class="list-group list-group-flush">
                                    <a href="/my/dashboard" class="list-group-item list-group-item-action active">
                                        <i class="fa fa-dashboard"></i> لوحة التحكم
                                    </a>
                                    <a href="/my/sessions" class="list-group-item list-group-item-action">
                                        <i class="fa fa-calendar"></i> الجلسات
                                    </a>
                                    <a href="/my/classes" class="list-group-item list-group-item-action">
                                        <i class="fa fa-graduation-cap"></i> الصفوف
                                    </a>
                                    <a href="/my/profile" class="list-group-item list-group-item-action">
                                        <i class="fa fa-user"></i> الملف الشخصي
                                    </a>
                                    <a href="/web/session/logout" class="list-group-item list-group-item-action">
                                        <i class="fa fa-sign-out"></i> تسجيل الخروج
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Main Content -->
                        <div class="col-lg-9">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h4 class="mb-0">
                                        <i class="fa fa-home"></i> لوحة التحكم
                                    </h4>
                                </div>
                                <div class="card-body">
                                    <h5>مرحباً <t t-esc="student.name_ar"/></h5>
                                    <p>أهلاً بك في بورتال مركز تحفيظ القرآن الكريم</p>

                                    <!-- Statistics -->
                                    <div class="row mt-4">
                                        <div class="col-md-3 mb-3">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h3 class="text-primary"><t t-esc="attendance_rate"/>%</h3>
                                                    <p class="mb-0">نسبة الحضور</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h3 class="text-info"><t t-esc="len(student.class_ids)"/></h3>
                                                    <p class="mb-0">عدد الصفوف</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h3 class="text-success"><t t-esc="total_sessions"/></h3>
                                                    <p class="mb-0">إجمالي الجلسات</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h3 class="text-warning"><t t-esc="student.current_memorized_pages"/></h3>
                                                    <p class="mb-0">الصفحات المحفوظة</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Quick Links -->
                                    <div class="mt-4">
                                        <h5>روابط سريعة</h5>
                                        <div class="btn-group" role="group">
                                            <a href="/my/sessions" class="btn btn-primary">
                                                <i class="fa fa-calendar"></i> عرض الجلسات
                                            </a>
                                            <a href="/my/classes" class="btn btn-info">
                                                <i class="fa fa-graduation-cap"></i> عرض الصفوف
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>