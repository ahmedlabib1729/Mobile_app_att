<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <!-- Template الصفحة مباشرة بدون data tag في Odoo 18 -->
    <template id="website_programs_template" name="Programs Page">
        <t t-call="website.layout">
            <t t-set="no_footer" t-value="True"/>
            <div id="wrap">
                <style>
                    @import url('https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&amp;family=Cairo:wght@300;400;600;700&amp;display=swap');

                    /* Hero Section */
                    .programs-hero {
                        background: linear-gradient(135deg, rgba(102, 126, 234, 0.95) 0%, rgba(118, 75, 162, 0.95) 100%);
                        padding: 120px 0 80px;
                        color: white;
                        position: relative;
                        overflow: hidden;
                    }

                    .programs-hero::before {
                        content: '';
                        position: absolute;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
                        opacity: 0.1;
                    }

                    .page-title {
                        font-family: 'Cairo', sans-serif;
                        font-size: 3.5rem;
                        font-weight: 700;
                        text-align: center;
                        margin-bottom: 20px;
                        animation: fadeInUp 0.8s ease;
                    }

                    .page-subtitle {
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.3rem;
                        text-align: center;
                        opacity: 0.95;
                        max-width: 800px;
                        margin: 0 auto;
                        animation: fadeInUp 1s ease;
                    }

                    /* Info Cards Section */
                    .info-section {
                        background: #f8f9fa;
                        padding: 80px 0;
                        position: relative;
                    }

                    .info-card {
                        background: white;
                        border-radius: 20px;
                        padding: 40px;
                        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
                        margin-bottom: 30px;
                        transition: all 0.3s ease;
                        height: 100%;
                    }

                    .info-card:hover {
                        transform: translateY(-10px);
                        box-shadow: 0 20px 60px rgba(0,0,0,0.12);
                    }

                    .info-icon {
                        width: 100px;
                        height: 100px;
                        margin: 0 auto 30px;
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 48px;
                        color: white;
                    }

                    .info-title {
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.8rem;
                        font-weight: 700;
                        color: #2c3e50;
                        text-align: center;
                        margin-bottom: 20px;
                    }

                    .info-description {
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.1rem;
                        color: #6c757d;
                        text-align: center;
                        line-height: 1.8;
                    }

                    /* Programs Grid */
                    .programs-grid {
                        padding: 80px 0;
                    }

                    .program-card {
                        background: white;
                        border-radius: 25px;
                        overflow: hidden;
                        box-shadow: 0 15px 50px rgba(0,0,0,0.1);
                        transition: all 0.4s ease;
                        margin-bottom: 40px;
                    }

                    .program-card:hover {
                        transform: translateY(-15px) scale(1.02);
                        box-shadow: 0 25px 70px rgba(0,0,0,0.15);
                    }

                    .program-header {
                        padding: 40px;
                        color: white;
                        position: relative;
                        overflow: hidden;
                    }

                    .program-header::before {
                        content: '';
                        position: absolute;
                        top: -50%;
                        right: -50%;
                        width: 200%;
                        height: 200%;
                        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                        animation: rotate 20s linear infinite;
                    }

                    @keyframes rotate {
                        from { transform: rotate(0deg); }
                        to { transform: rotate(360deg); }
                    }

                    .clubs-header {
                        background: linear-gradient(135deg, #4CAF50 0%, #45B649 100%);
                    }

                    .ladies-header {
                        background: linear-gradient(135deg, #E91E63 0%, #F06292 100%);
                    }

                    .waqf-header {
                        background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
                    }

                    .yateemah-header {
                        background: linear-gradient(135deg, #00BCD4 0%, #4DD0E1 100%);
                    }

                    .program-icon {
                        width: 80px;
                        height: 80px;
                        background: rgba(255,255,255,0.2);
                        backdrop-filter: blur(10px);
                        border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 40px;
                        margin: 0 auto 20px;
                        position: relative;
                        z-index: 1;
                    }

                    .program-title {
                        font-family: 'Cairo', sans-serif;
                        font-size: 2rem;
                        font-weight: 700;
                        text-align: center;
                        margin-bottom: 15px;
                        position: relative;
                        z-index: 1;
                    }

                    .program-subtitle {
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.1rem;
                        text-align: center;
                        opacity: 0.95;
                        position: relative;
                        z-index: 1;
                    }

                    .program-body {
                        padding: 40px;
                    }

                    .program-details {
                        margin-bottom: 30px;
                    }

                    .detail-item {
                        display: flex;
                        align-items: center;
                        margin-bottom: 20px;
                        padding: 15px;
                        background: #f8f9fa;
                        border-radius: 15px;
                        transition: all 0.3s ease;
                    }

                    .detail-item:hover {
                        background: #e9ecef;
                        transform: translateX(10px);
                    }

                    .detail-icon {
                        width: 40px;
                        height: 40px;
                        border-radius: 10px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        margin-left: 20px;
                        font-size: 20px;
                        color: white;
                    }

                    .clubs-icon { background: #4CAF50; }
                    .ladies-icon { background: #E91E63; }
                    .waqf-icon { background: #FF9800; }
                    .yateemah-icon { background: #00BCD4; }

                    .detail-text {
                        flex: 1;
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.1rem;
                        color: #495057;
                    }

                    .detail-text strong {
                        color: #2c3e50;
                        font-weight: 600;
                    }

                    /* Time Schedule */
                    .schedule-section {
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        padding: 60px 0;
                        margin-top: 80px;
                        color: white;
                    }

                    .schedule-card {
                        background: rgba(255,255,255,0.1);
                        backdrop-filter: blur(10px);
                        border: 2px solid rgba(255,255,255,0.2);
                        border-radius: 20px;
                        padding: 40px;
                        text-align: center;
                    }

                    .schedule-title {
                        font-family: 'Cairo', sans-serif;
                        font-size: 2rem;
                        font-weight: 700;
                        margin-bottom: 30px;
                    }

                    .schedule-item {
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.3rem;
                        margin-bottom: 20px;
                        padding: 15px;
                        background: rgba(255,255,255,0.1);
                        border-radius: 10px;
                    }

                    .schedule-item i {
                        margin-left: 10px;
                        color: #FFD700;
                    }

                    /* Stats */
                    .stats-row {
                        display: flex;
                        justify-content: space-around;
                        margin-top: 30px;
                        flex-wrap: wrap;
                    }

                    .stat-item {
                        text-align: center;
                        margin: 10px;
                    }

                    .stat-value {
                        font-size: 2.5rem;
                        font-weight: 700;
                        color: #667eea;
                        display: block;
                    }

                    .stat-label {
                        font-size: 1rem;
                        color: #6c757d;
                        margin-top: 5px;
                    }

                    /* CTA Button */
                    .cta-button {
                        display: inline-block;
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        color: white;
                        padding: 15px 40px;
                        border-radius: 50px;
                        font-family: 'Cairo', sans-serif;
                        font-size: 1.2rem;
                        font-weight: 600;
                        text-decoration: none;
                        transition: all 0.3s ease;
                        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
                    }

                    .cta-button:hover {
                        transform: translateY(-5px);
                        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
                        color: white;
                        text-decoration: none;
                    }

                    /* Animations */
                    @keyframes fadeInUp {
                        from {
                            opacity: 0;
                            transform: translateY(30px);
                        }
                        to {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }

                    .animate-on-scroll {
                        opacity: 0;
                        animation: fadeInUp 0.8s ease forwards;
                    }

                    /* Responsive */
                    @media (max-width: 768px) {
                        .page-title { font-size: 2.5rem; }
                        .program-title { font-size: 1.5rem; }
                        .stat-value { font-size: 2rem; }
                    }
                </style>

                <!-- Hero Section -->
                <section class="programs-hero">
                    <div class="container">
                        <h1 class="page-title">برامج المركز</h1>
                        <p class="page-subtitle">
                            يضم مركز رؤيتي حلقات لتحفيظ القرآن الكريم بالقراءات العشر و الإجازة بها، و إعداد معلمات
                            للقاعدة النورانية، كما أنه يتميز بإعداد الطلبة وتأهيلهم لحفظ القرآن الكريم بإتقان، إضافة
                            لتصحيح التلاوة التي تشمل دروس القاعدة النورانية والتجويد وتقديم الحلقات الفردية والجماعية.
                        </p>
                    </div>
                </section>

                <!-- Info Cards Section -->
                <section class="info-section">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 mb-6 animate-on-scroll">
                                <div class="info-card">
                                    <div class="info-icon">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <h3 class="info-title">الإناث</h3>
                                    <div class="stats-row">
                                        <div class="stat-item">
                                            <span class="stat-value">6</span>
                                            <span class="stat-label">سنوات فما فوق</span>
                                        </div>
                                    </div>
                                    <p class="info-description mt-3">
                                        نستقبل الفتيات من عمر 6 سنوات حتى 18 سنة، والسيدات من 18 سنة فما فوق
                                    </p>
                                </div>
                            </div>



                            <div class="col-md-6 mb-6 animate-on-scroll">
                                <div class="info-card">
                                    <div class="info-icon" style="background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    <h3 class="info-title">ذكور</h3>
                                    <div class="stats-row">
                                        <div class="stat-item">
                                            <span class="stat-value">6</span>
                                            <span class="stat-label">سنوات</span>
                                        </div>
                                    </div>
                                    <p class="info-description mt-3">
                                        نستقبل الذكور من عمر 6 سنوات حتى 18 سنة
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Programs Grid -->
                <section class="programs-grid">
                    <div class="container">
                        <div class="row">
                            <!-- نادي ربيع القلوب -->
                            <div class="col-lg-6 mb-4">
                                <div class="program-card animate-on-scroll">
                                    <div class="program-header clubs-header">
                                        <div class="program-icon">
                                            <i class="fa fa-child"></i>
                                        </div>
                                        <h2 class="program-title">نادي ربيع القلوب</h2>
                                        <p class="program-subtitle">تعليم القاعدة النورانية وتحفيظ القرآن الكريم بالتجويد</p>
                                    </div>
                                    <div class="program-body">
                                        <div class="program-details">
                                            <div class="detail-item">
                                                <div class="detail-icon clubs-icon">
                                                    <i class="fa fa-users"></i>
                                                </div>
                                                <div class="detail-text">
                                                    <strong>للأطفال</strong> من عمر 6 - 12 سنة
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <a href="/enrollment/application" class="cta-button">
                                                <i class="fa fa-edit me-2"></i>
                                                سجل الآن
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- نادي العروة الوثقى -->
                            <div class="col-lg-6 mb-4">
                                <div class="program-card animate-on-scroll">
                                    <div class="program-header waqf-header">
                                        <div class="program-icon">
                                            <i class="fa fa-book"></i>
                                        </div>
                                        <h2 class="program-title">نادي العروة الوثقى</h2>
                                        <p class="program-subtitle">تحفيظ القرآن الكريم بالتجويد للفتيات</p>
                                    </div>
                                    <div class="program-body">
                                        <div class="program-details">
                                            <div class="detail-item">
                                                <div class="detail-icon waqf-icon">
                                                    <i class="fa fa-female"></i>
                                                </div>
                                                <div class="detail-text">
                                                    <strong>للفتيات</strong> من عمر 13 - 18 سنة
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <a href="/enrollment/application" class="cta-button">
                                                <i class="fa fa-edit me-2"></i>
                                                سجل الآن
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- نادي شبابنا أملنا -->
                            <div class="col-lg-6 mb-4">
                                <div class="program-card animate-on-scroll">
                                    <div class="program-header yateemah-header">
                                        <div class="program-icon">
                                            <i class="fa fa-male"></i>
                                        </div>
                                        <h2 class="program-title">نادي شبابنا أملنا</h2>
                                        <p class="program-subtitle">تحفيظ القرآن الكريم بالتجويد للفتيان</p>
                                    </div>
                                    <div class="program-body">
                                        <div class="program-details">
                                            <div class="detail-item">
                                                <div class="detail-icon yateemah-icon">
                                                    <i class="fa fa-users"></i>
                                                </div>
                                                <div class="detail-text">
                                                    <strong>للفتيان</strong> من عمر 13 - 18 سنة
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <a href="/enrollment/application" class="cta-button">
                                                <i class="fa fa-edit me-2"></i>
                                                سجل الآن
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 mb-4">
                                    <div class="program-card animate-on-scroll">
                                        <div class="program-header ladies-header">
                                            <div class="program-icon">
                                                <i class="fa fa-female"></i>
                                            </div>
                                            <h2 class="program-title">روضات السيدات</h2>
                                            <p class="program-subtitle">روضات القرآن الكريم</p>
                                        </div>
                                        <div class="program-body">
                                            <div class="program-details">
                                                <div class="detail-item">
                                                    <div class="detail-icon ladies-icon">
                                                        <i class="fa fa-female"></i>
                                                    </div>
                                                    <div class="detail-text">
                                                        <strong>للسيدات</strong> من عمر 18 سنة فما فوق
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <a href="/enrollment/application" class="cta-button">
                                                    <i class="fa fa-edit me-2"></i>
                                                    سجل الآن
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                        </div>
                    </div>
                </section>

                <!-- Schedule Section -->
                <section class="schedule-section">
                    <div class="container">
                        <div class="schedule-card">
                            <h2 class="schedule-title">
                                <i class="fa fa-clock-o me-2"></i>
                                أوقات عمل المركز
                            </h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="schedule-item">
                                        <i class="fa fa-calendar"></i>
                                        طيلة أيام الأسبوع 9:00 صباحاً - 3:00 مساءً
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="schedule-item">
                                        <i class="fa fa-clock-o"></i>
                                        يومي الإثنين والخميس تمتد إلى 7:45 مساءً
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="schedule-item">
                                        <i class="fa fa-calendar-check-o"></i>
                                        العطلة الرسمية: الجمعة والأحد
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </t>
    </template>
</odoo>