<odoo>
    <!-- Tree View -->
    <record id="view_hallway_student_tree" model="ir.ui.view">
        <field name="name">hallway.student.tree</field>
        <field name="model">hallway.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="full_name"/>
                <field name="passport_no"/>
                <field name="emirates_id"/>
                <field name="email_id"/>
                <field name="mobile_no_1"/>
                <field name="gender"/>
                <field name="application_count"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-warning="status == 'inactive'" decoration-danger="status == 'suspended'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_student_form" model="ir.ui.view">
        <field name="name">hallway.student.form</field>
        <field name="model">hallway.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="active,inactive,graduated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_applications"
                                icon="fa-file-text-o">
                            <field name="application_count" widget="statinfo" string="Applications"/>
                        </button>
                    </div>

                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}"/>
                    <div class="oe_title">
                        <label for="student_id" string="Student ID"/>
                        <h1>
                            <field name="student_id" class="oe_inline"/>
                        </h1>
                        <h2>
                            <field name="full_name" class="oe_inline"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Personal Information">
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="nationality"/>
                        </group>
                        <group string="Documents">
                            <field name="passport_no"/>
                            <field name="emirates_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Contact Information">
                            <field name="email_id"/>
                            <field name="mobile_no_1"/>
                            <field name="mobile_no_2"/>
                            <field name="address"/>
                        </group>
                        <group string="Other Information">
                            <field name="partner_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Applications">
                            <field name="application_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="application_date"/>
                                    <field name="status" widget="badge"/>
                                    <field name="schedule"/>
                                    <field name="start_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_student_search" model="ir.ui.view">
        <field name="name">hallway.student.search</field>
        <field name="model">hallway.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
                <field name="full_name"/>
                <field name="passport_no"/>
                <field name="emirates_id"/>
                <field name="email_id"/>
                <field name="mobile_no_1"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter string="Has Passport" name="has_passport" domain="[('passport_no', '!=', False)]"/>
                <filter string="Has Emirates ID" name="has_emirates_id" domain="[('emirates_id', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                    <filter string="Nationality" name="nationality" context="{'group_by': 'nationality'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hallway_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">hallway.student</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hallway_student_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hallway_student"
              parent="HallWay_System.menu_student_application_root"
              name="Students"
              action="action_hallway_student"
              sequence="20"/>
</odoo>