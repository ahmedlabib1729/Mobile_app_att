<odoo>
    <!-- Tree View -->
    <record id="view_hallway_department_tree" model="ir.ui.view">
        <field name="name">hallway.department.tree</field>
        <field name="model">hallway.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="name_ar"/>
                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="subject_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_department_form" model="ir.ui.view">
        <field name="name">hallway.department.form</field>
        <field name="model">hallway.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_subjects"
                                icon="fa-book">
                            <field name="subject_count" widget="statinfo" string="Subjects"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>

                    <div class="oe_title">
                        <label for="name" string="Department Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Languages"/>
                        </h1>
                        <label for="name_ar" string="الاسم بالعربية"/>
                        <h2>
                            <field name="name_ar" placeholder="مثال: اللغات"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Department description..."/>
                    </group>

                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids" context="{'default_department_id': id}">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="name_ar"/>
                                    <field name="level_count"/>
                                    <field name="course_count"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_department_search" model="ir.ui.view">
    <field name="name">hallway.department.search</field>
    <field name="model">hallway.department</field>
    <field name="arch" type="xml">
        <search>
            <filter name="name" string="Name" domain="[]" context="{'search_default_name': 1}" />
            <filter name="code" string="Code" domain="[]" />
            <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            <group expand="0" string="Group By">
                <filter string="Company" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            </group>
        </search>
    </field>
</record>


    <!-- Action -->
    <record id="action_hallway_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hallway.department</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hallway_department_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first department!
            </p>
            <p>
                Departments help organize your educational programs. Each department can have multiple subjects.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hallway_education"
              parent="menu_student_application_root"
              name="Education"
              sequence="30"/>

    <menuitem id="menu_hallway_department"
              parent="menu_hallway_education"
              name="Departments"
              action="action_hallway_department"
              sequence="10"/>
</odoo>