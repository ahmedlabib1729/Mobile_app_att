<odoo>
    <!-- Inherit Student Form View -->
    <record id="view_hallway_student_form_portal" model="ir.ui.view">
        <field name="name">hallway.student.form.portal</field>
        <field name="model">hallway.student</field>
        <field name="inherit_id" ref="view_hallway_student_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_portal_user" type="object"
                        string="Create Portal Access" class="btn-primary"
                        invisible="has_portal_access"
                        confirm="This will create portal access for the student with default password: Welcome123!"/>
                <button name="action_disable_portal_access" type="object"
                        string="Disable Portal Access"
                        invisible="not has_portal_access or not user_id.active"/>
                <button name="action_enable_portal_access" type="object"
                        string="Enable Portal Access"
                        invisible="not has_portal_access or user_id.active"/>
            </xpath>

            <xpath expr="//group[2]/group[2]" position="inside">
                <field name="user_id" invisible="not has_portal_access"/>
                <field name="has_portal_access" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Add Portal Access info in tree view -->
    <record id="view_hallway_student_tree_portal" model="ir.ui.view">
        <field name="name">hallway.student.tree.portal</field>
        <field name="model">hallway.student</field>
        <field name="inherit_id" ref="view_hallway_student_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <field name="has_portal_access" widget="boolean_toggle" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>