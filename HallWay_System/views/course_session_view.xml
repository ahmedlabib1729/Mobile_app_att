<odoo>
    <!-- Calendar View -->
    <record id="view_hallway_course_session_calendar" model="ir.ui.view">
        <field name="name">hallway.course.session.calendar</field>
        <field name="model">hallway.course.session</field>
        <field name="arch" type="xml">
            <calendar string="Course Sessions"
                      date_start="date_start"
                      date_stop="date_stop"
                      color="course_id"
                      mode="month"
                      quick_create="0">
                <field name="display_name"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="classroom"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hallway_course_session_tree" model="ir.ui.view">
        <field name="name">hallway.course.session.tree</field>
        <field name="model">hallway.course.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="course_id"/>
                <field name="date"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="instructor_id"/>
                <field name="classroom"/>
                <field name="present_count"/>
                <field name="absent_count"/>
                <field name="attendance_rate" widget="percentage"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_course_session_form" model="ir.ui.view">
        <field name="name">hallway.course.session.form</field>
        <field name="model">hallway.course.session</field>
        <field name="arch" type="xml">
            <form string="Course Session">
                <header>
                    <button name="action_take_attendance" type="object" string="Take Attendance"
                            class="btn-primary" invisible="state != 'scheduled'"/>
                    <button name="action_complete_session" type="object" string="Complete Session"
                            invisible="state != 'scheduled'"/>
                    <button name="action_cancel_session" type="object" string="Cancel Session"
                            invisible="state in ['completed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Session Details">
                            <field name="name"/>
                            <field name="course_id" readonly="1"/>
                            <field name="date"/>
                            <label for="start_time" string="Time"/>
                            <div class="o_row">
                                <field name="start_time" widget="float_time"/> -
                                <field name="end_time" widget="float_time"/>
                                <span> (<field name="duration" readonly="1"/> hours)</span>
                            </div>
                        </group>
                        <group string="Location">
                            <field name="instructor_id"/>
                            <field name="substitute_instructor_id" invisible="not substitute_instructor_id"/>
                            <field name="classroom"/>
                            <field name="online_link" invisible="not online_link"/>
                        </group>
                    </group>

                    <group string="Attendance Statistics">
                        <group>
                            <field name="present_count"/>
                            <field name="absent_count"/>
                        </group>
                        <group>
                            <field name="attendance_rate" widget="percentage"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Attendance">
                            <field name="attendance_ids">
                                <list editable="bottom">
                                    <field name="student_id" readonly="1"/>
                                    <field name="status"/>
                                    <field name="check_in_time" widget="float_time"/>
                                    <field name="check_out_time" widget="float_time"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Session notes..."/>
                                <field name="homework" nolabel="1" placeholder="Homework assignments..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_course_session_search" model="ir.ui.view">
        <field name="name">hallway.course.session.search</field>
        <field name="model">hallway.course.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="date"/>

                <filter string="Today" name="today"
                        domain="[('date', '=', context_today())]"/>
                <filter string="This Week" name="this_week"
                        domain="[('date', '>=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('date', '&lt;', (context_today() - relativedelta(days=context_today().weekday()) + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>

                <group expand="0" string="Group By">
                    <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Instructor" name="group_instructor" context="{'group_by': 'instructor_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hallway_course_session" model="ir.actions.act_window">
        <field name="name">Course Sessions</field>
        <field name="res_model">hallway.course.session</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="search_view_id" ref="view_hallway_course_session_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sessions found!
            </p>
            <p>
                Sessions are automatically generated when you create a course.
            </p>
        </field>
    </record>
</odoo>