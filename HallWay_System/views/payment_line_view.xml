<odoo>
    <!-- Tree View -->
    <record id="view_hallway_payment_line_tree" model="ir.ui.view">
        <field name="name">hallway.payment.line.tree</field>
        <field name="model">hallway.payment.line</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'paid'"
                  decoration-danger="state == 'overdue'"
                  decoration-muted="state == 'cancelled'">
                <field name="sequence"/>
                <field name="description"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="due_date"/>
                <field name="original_amount" widget="monetary" sum="Total"/>
                <field name="discount_amount" widget="monetary" sum="Total"/>
                <field name="final_amount" widget="monetary" sum="Total"/>
                <field name="state" widget="badge"/>
                <field name="payment_date"/>
                <field name="invoice_id"/>
                <button name="action_create_invoice" type="object"
                        string="Create Invoice" icon="fa-file-text-o"
                        invisible="invoice_id or state in ['paid', 'cancelled']"/>
                <button name="action_view_invoice" type="object"
                        string="View Invoice" icon="fa-external-link"
                        invisible="not invoice_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_payment_line_form" model="ir.ui.view">
        <field name="name">hallway.payment.line.form</field>
        <field name="model">hallway.payment.line</field>
        <field name="arch" type="xml">
            <form string="Payment Line">
                <header>
                    <button name="action_create_invoice" type="object"
                            string="Create Invoice" class="btn-primary"
                            invisible="invoice_id or state in ['paid', 'cancelled']"/>
                    <button name="action_view_invoice" type="object"
                            string="View Invoice" class="btn-secondary"
                            invisible="not invoice_id"/>
                    <button name="action_cancel" type="object"
                            string="Cancel"
                            invisible="state in ['paid', 'cancelled']"
                            confirm="Are you sure you want to cancel this payment line?"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid" bg_color="bg-success"
                            invisible="state != 'paid'"/>
                    <widget name="web_ribbon" title="Overdue" bg_color="bg-danger"
                            invisible="state != 'overdue'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-warning"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="description" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Payment Information">
                            <field name="enrollment_id" readonly="1"/>
                            <field name="sequence"/>
                            <field name="is_down_payment"/>
                            <field name="due_date"/>
                            <field name="payment_date" readonly="state == 'paid'"/>
                        </group>
                        <group string="Amount">
                            <field name="original_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="discount_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="final_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group string="Invoice Information" invisible="not invoice_id">
                        <group>
                            <field name="invoice_id" readonly="1"/>
                            <field name="invoice_state" readonly="1"/>
                        </group>
                    </group>

                    <group string="Related Information">
                        <group>
                            <field name="student_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_payment_line_search" model="ir.ui.view">
        <field name="name">hallway.payment.line.search</field>
        <field name="model">hallway.payment.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="description"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="enrollment_id"/>

                <filter string="Down Payments" name="down_payment"
                        domain="[('is_down_payment', '=', True)]"/>
                <separator/>
                <filter string="Pending" name="pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter string="Overdue" name="overdue"
                        domain="[('state', '=', 'overdue')]"/>
                <filter string="Paid" name="paid"
                        domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="Due This Month" name="due_this_month"
                        domain="[('due_date', '>=', context_today().strftime('%Y-%m-01')),
                                 ('due_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="Due in 7 Days" name="due_soon"
                        domain="[('due_date', '>=', context_today()),
                                 ('due_date', '&lt;=', (context_today() + relativedelta(days=7))),
                                 ('state', 'in', ['pending', 'overdue'])]"/>

                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student"
                            context="{'group_by': 'student_id'}"/>
                    <filter string="Course" name="group_course"
                            context="{'group_by': 'course_id'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Due Date" name="group_due_date"
                            context="{'group_by': 'due_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View for Analysis -->
    <record id="view_hallway_payment_line_pivot" model="ir.ui.view">
        <field name="name">hallway.payment.line.pivot</field>
        <field name="model">hallway.payment.line</field>
        <field name="arch" type="xml">
            <pivot string="Payment Analysis">
                <field name="student_id" type="row"/>
                <field name="due_date" interval="month" type="col"/>
                <field name="final_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_hallway_payment_line_graph" model="ir.ui.view">
        <field name="name">hallway.payment.line.graph</field>
        <field name="model">hallway.payment.line</field>
        <field name="arch" type="xml">
            <graph string="Payment Analysis" type="bar">
                <field name="due_date" interval="month"/>
                <field name="final_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hallway_payment_line" model="ir.actions.act_window">
        <field name="name">Payment Schedule</field>
        <field name="res_model">hallway.payment.line</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="search_view_id" ref="view_hallway_payment_line_search"/>
        <field name="context">{'search_default_overdue': 1, 'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment lines found!
            </p>
            <p>
                Payment lines are automatically generated when students are enrolled in courses.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hallway_payments"
              parent="menu_student_application_root"
              name="Payments"
              sequence="50"/>

    <menuitem id="menu_hallway_payment_schedule"
              parent="menu_hallway_payments"
              name="Payment Schedule"
              action="action_hallway_payment_line"
              sequence="10"/>
</odoo>