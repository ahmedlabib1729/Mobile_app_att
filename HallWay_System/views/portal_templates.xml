<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend portal home -->
        <template id="portal_my_home_student_menu" name="Portal Home Student Menu" inherit_id="portal.portal_my_home" priority="30">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <div class="o_portal_docs_entry">
                    <a t-if="enrollment_count" t-attf-href="/my/enrollments" class="o_portal_doc_entry">
                        <span class="o_portal_doc_count">
                            <t t-esc="enrollment_count"/>
                        </span>
                        <span class="o_portal_doc_label">Enrollments</span>
                    </a>
                </div>

                <div class="o_portal_docs_entry">
                    <a t-if="session_count" t-attf-href="/my/schedule" class="o_portal_doc_entry">
                        <span class="o_portal_doc_count">
                            <t t-esc="session_count"/>
                        </span>
                        <span class="o_portal_doc_label">Upcoming Classes</span>
                    </a>
                </div>

                <div class="o_portal_docs_entry">
                    <a t-if="payment_count" t-attf-href="/my/payments" class="o_portal_doc_entry">
                        <span class="o_portal_doc_count">
                            <t t-esc="payment_count"/>
                        </span>
                        <span class="o_portal_doc_label">Pending Payments</span>
                    </a>
                </div>
            </xpath>
        </template>

        <!-- Student Profile Page using website.layout -->
        <template id="portal_my_profile" name="My Profile">
            <t t-call="website.layout">
                <t t-set="title">My Profile</t>

                <div id="wrap" class="my_profile_wrap">
                    <div class="container">
                        <div class="row mt-3 mb-4">
                            <div class="col-12">
                                <h1 class="text-center mb-4">My Profile</h1>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h4 class="mb-0">Profile Information</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3 text-center mb-3">
                                                <t t-if="student.image_1920">
                                                    <img t-att-src="image_data_uri(student.image_1920)"
                                                         class="img-fluid rounded-circle border"
                                                         style="max-width: 200px;"/>
                                                </t>
                                                <t t-else="">
                                                    <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center"
                                                         style="width: 200px; height: 200px;">
                                                        <i class="fa fa-user fa-4x text-white"/>
                                                    </div>
                                                </t>
                                                <h5 class="mt-3"><t t-esc="student.full_name"/></h5>
                                                <p class="text-muted">ID: <t t-esc="student.student_id"/></p>
                                            </div>

                                            <div class="col-md-9">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h5 class="border-bottom pb-2 mb-3">Personal Information</h5>
                                                        <dl class="row">
                                                            <dt class="col-sm-5">Gender:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.gender and dict(student._fields['gender'].selection).get(student.gender, '') or '-'"/></dd>

                                                            <dt class="col-sm-5">Date of Birth:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.date_of_birth or '-'"/></dd>

                                                            <dt class="col-sm-5">Nationality:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.nationality or '-'"/></dd>

                                                            <dt class="col-sm-5">Passport No:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.passport_no or '-'"/></dd>

                                                            <dt class="col-sm-5">Emirates ID:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.emirates_id or '-'"/></dd>
                                                        </dl>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <h5 class="border-bottom pb-2 mb-3">Contact Information</h5>
                                                        <dl class="row">
                                                            <dt class="col-sm-5">Email:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.email_id"/></dd>

                                                            <dt class="col-sm-5">Mobile 1:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.mobile_no_1"/></dd>

                                                            <dt class="col-sm-5">Mobile 2:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.mobile_no_2 or '-'"/></dd>

                                                            <dt class="col-sm-5">Address:</dt>
                                                            <dd class="col-sm-7"><t t-esc="student.address or '-'"/></dd>
                                                        </dl>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Enrollments List using website.layout -->
        <template id="portal_my_enrollments" name="My Enrollments">
            <t t-call="website.layout">
                <t t-set="title">My Enrollments</t>

                <div id="wrap">
                    <div class="container">
                        <h1 class="text-center mb-4">My Enrollments</h1>

                        <t t-if="not enrollments">
                            <div class="alert alert-info">
                                <p class="mb-0">You have no enrollments yet.</p>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Enrollment #</th>
                                            <th>Course</th>
                                            <th class="text-center">Start Date</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Payment</th>
                                            <th class="text-center">Attendance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="enrollments" t-as="enrollment">
                                            <tr>
                                                <td>
                                                    <a t-attf-href="/my/enrollment/#{enrollment.id}?{{ keep_query() }}">
                                                        <t t-esc="enrollment.enrollment_number"/>
                                                    </a>
                                                </td>
                                                <td><t t-esc="enrollment.course_id.name"/></td>
                                                <td class="text-center">
                                                    <span t-field="enrollment.course_id.start_date"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-att-class="'badge badge-pill badge-%s' % ('success' if enrollment.state == 'completed' else 'info' if enrollment.state == 'in_progress' else 'primary' if enrollment.state == 'enrolled' else 'secondary')">
                                                        <t t-esc="dict(enrollment._fields['state'].selection).get(enrollment.state, '')"/>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span t-att-class="'badge badge-pill badge-%s' % ('success' if enrollment.payment_state == 'paid' else 'warning' if enrollment.payment_state == 'partial' else 'danger')">
                                                        <t t-esc="dict(enrollment._fields['payment_state'].selection).get(enrollment.payment_state, '')"/>
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span t-att-class="'text-%s' % ('success' if enrollment.attendance_rate >= 80 else 'warning' if enrollment.attendance_rate >= 60 else 'danger')">
                                                        <t t-esc="enrollment.attendance_rate"/>%
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>

                            <t t-if="pager" t-call="website.pager">
                                <t t-set="_classes">mt-3 justify-content-center</t>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <!-- Schedule Page using website.layout -->
        <template id="portal_my_schedule" name="My Schedule">
            <t t-call="website.layout">
                <t t-set="title">My Schedule</t>

                <div id="wrap">
                    <div class="container">
                        <h1 class="text-center mb-4">My Class Schedule</h1>

                        <t t-if="not sessions">
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle"/> No upcoming classes in the next 30 days.
                            </div>
                        </t>
                        <t t-else="">
                            <t t-foreach="sessions_by_date" t-as="date_str">
                                <t t-set="date_obj" t-value="datetime.strptime(date_str, '%Y-%m-%d').date()"/>
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <h5 class="mb-0">
                                            <t t-esc="date_obj.strftime('%A, %B %d, %Y')"/>
                                            <t t-if="date_obj == today">
                                                <span class="badge badge-success ml-2">Today</span>
                                            </t>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm mb-0">
                                                <tbody>
                                                    <t t-foreach="sessions_by_date[date_str]" t-as="session">
                                                        <tr>
                                                            <td width="15%" class="text-center">
                                                                <strong>
                                                                    <t t-esc="'{:02d}:{:02d}'.format(int(session.start_time), int((session.start_time % 1) * 60))"/> -
                                                                    <t t-esc="'{:02d}:{:02d}'.format(int(session.end_time), int((session.end_time % 1) * 60))"/>
                                                                </strong>
                                                            </td>
                                                            <td width="40%">
                                                                <strong><t t-esc="session.course_id.name"/></strong><br/>
                                                                <small class="text-muted"><t t-esc="session.name"/></small>
                                                            </td>
                                                            <td width="25%">
                                                                <t t-if="session.classroom">
                                                                    <i class="fa fa-map-marker"/> <t t-esc="session.classroom"/>
                                                                </t>
                                                                <t t-if="session.online_link">
                                                                    <br/><a t-att-href="session.online_link" target="_blank" class="btn btn-sm btn-primary">
                                                                        <i class="fa fa-video-camera"/> Join Online
                                                                    </a>
                                                                </t>
                                                            </td>
                                                            <td width="20%">
                                                                <t t-if="session.instructor_id">
                                                                    <i class="fa fa-user"/> <t t-esc="session.instructor_id.name"/>
                                                                </t>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <!-- Continue with other templates using website.layout... -->
    </data>
</odoo>