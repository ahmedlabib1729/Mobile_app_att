<odoo>
    <!-- Tree View -->
    <record id="view_hallway_subject_tree" model="ir.ui.view">
        <field name="name">hallway.subject.tree</field>
        <field name="model">hallway.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="name_ar"/>
                <field name="department_id"/>
                <field name="level_count"/>
                <field name="course_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_subject_form" model="ir.ui.view">
        <field name="name">hallway.subject.form</field>
        <field name="model">hallway.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_levels"
                                icon="fa-graduation-cap">
                            <field name="level_count" widget="statinfo" string="Levels"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_courses"
                                icon="fa-calendar">
                            <field name="course_count" widget="statinfo" string="Courses"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>

                    <div class="oe_title">
                        <label for="name" string="Subject Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. English Language"/>
                        </h1>
                        <label for="name_ar" string="اسم المادة"/>
                        <h2>
                            <field name="name_ar" placeholder="مثال: اللغة الإنجليزية"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="has_levels"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Subject description..."/>
                    </group>

                    <notebook>
                        <page string="Levels" invisible="not has_levels">
                            <field name="level_ids" context="{'default_subject_id': id}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="name_ar"/>
                                    <field name="course_count"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Courses">
                            <field name="course_ids" readonly="1">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="schedule"/>
                                    <field name="start_date"/>
                                    <field name="enrolled_students"/>
                                    <field name="max_students"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_subject_search" model="ir.ui.view">
        <field name="name">hallway.subject.search</field>
        <field name="model">hallway.subject</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="name_ar"/>
                <field name="department_id"/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Has Levels" name="has_levels" domain="[('has_levels', '=', True)]"/>

                <group expand="0" string="Group By">
                    <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
                    <filter string="Company" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hallway_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">hallway.subject</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hallway_subject_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subject!
            </p>
            <p>
                Subjects are the educational programs offered in each department.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hallway_subject"
              parent="menu_hallway_education"
              name="Subjects"
              action="action_hallway_subject"
              sequence="20"/>
</odoo>