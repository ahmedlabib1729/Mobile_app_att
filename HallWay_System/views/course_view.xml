<odoo>
    <!-- Tree View -->
    <record id="view_hallway_course_tree" model="ir.ui.view">
        <field name="name">hallway.course.tree</field>
        <field name="model">hallway.course</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'open'" decoration-info="state == 'in_progress'" decoration-muted="state == 'cancelled'">
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="subject_id"/>
                <field name="level_id"/>
                <field name="schedule"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="enrolled_students" string="Enrolled"/>
                <field name="max_students" string="Max"/>
                <field name="available_seats"/>
                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hallway_course_form" model="ir.ui.view">
        <field name="name">hallway.course.form</field>
        <field name="model">hallway.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <header>
                    <button name="action_open_registration" type="object" string="Open Registration"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_course" type="object" string="Start Course"
                            class="btn-success" invisible="state != 'open'"/>
                    <button name="action_complete_course" type="object" string="Complete Course"
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel_course" type="object" string="Cancel Course"
                            invisible="state in ['completed', 'cancelled']"/>
                    <button name="generate_sessions" type="object" string="Re-generate Sessions"
                            class="btn-secondary" invisible="state == 'cancelled'"
                            confirm="This will delete existing sessions and create new ones. Are you sure?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_enrollments"
                                icon="fa-users">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="enrolled_students"/>
                                    <field name="max_students"/>
                                </span>
                                <span class="o_stat_text">Students</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_sessions"
                                icon="fa-calendar-check-o">
                            <field name="total_sessions" widget="statinfo" string="Sessions"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="state != 'cancelled'"/>
                    <widget name="web_ribbon" title="Completed" bg_color="bg-success" invisible="state != 'completed'"/>

                    <div class="oe_title">
                        <label for="code" string="Course Code"/>
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                        <field name="name" readonly="1" class="oe_edit_only"/>
                    </div>

                    <group>
                        <group string="Course Details">
                            <field name="department_id" options="{'no_create': True}"
                                   required="state == 'draft'"/>
                            <field name="subject_id" options="{'no_create': True}"
                                   required="state == 'draft'"
                                   domain="[('department_id', '=', department_id)]"/>
                            <field name="level_id" options="{'no_create': True}"
                                   required="state == 'draft'"
                                   domain="[('subject_id', '=', subject_id)]"/>
                        </group>
                        <group string="Schedule">
                            <field name="schedule" required="state == 'draft'"/>
                            <field name="schedule_day_ids" widget="many2many_tags"
                                   required="state == 'draft'"/>
                            <label for="start_time" string="Time"/>
                            <div class="o_row">
                                <field name="start_time" widget="float_time"/> -
                                <field name="end_time" widget="float_time"/>
                                <span> (<field name="duration_per_session" readonly="1"/> hours)</span>
                            </div>
                        </group>
                    </group>

                    <group>
                        <group string="Dates">
                            <field name="start_date" required="state == 'draft'"/>
                            <field name="end_date" readonly="1"/>
                            <field name="registration_deadline"/>
                        </group>
                        <group string="Pricing">
                            <field name="department_price" readonly="1" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   required="state == 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Instructor and Location">
                            <field name="instructor_id" options="{'no_create': True}"/>
                            <field name="location"/>
                            <field name="classroom" invisible="location == 'online'"/>
                            <field name="online_link" invisible="location != 'online' and location != 'hybrid'"/>
                        </group>
                        <group string="Capacity">
                            <field name="max_students" required="state == 'draft'"/>
                            <field name="enrolled_students" readonly="1"/>
                            <field name="available_seats" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids" readonly="1">
                                <list>
                                    <field name="enrollment_number"/>
                                    <field name="student_id"/>
                                    <field name="enrollment_date"/>
                                    <field name="final_price" widget="monetary"/>
                                    <field name="payment_state"/>
                                    <field name="attendance_rate" widget="percentage"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Sessions">
                            <field name="session_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="instructor_id"/>
                                    <field name="classroom"/>
                                    <field name="present_count"/>
                                    <field name="absent_count"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_hallway_course_calendar" model="ir.ui.view">
        <field name="name">hallway.course.calendar</field>
        <field name="model">hallway.course</field>
        <field name="arch" type="xml">
            <calendar string="Courses" date_start="start_date" date_stop="end_date"
                  color="department_id" mode="month">
            <field name="name"/>
            <field name="subject_id"/>
            <field name="schedule"/>
            <field name="enrolled_students"/>
            <field name="max_students"/>
        </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hallway_course_search" model="ir.ui.view">
        <field name="name">hallway.course.search</field>
        <field name="model">hallway.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="subject_id"/>
                <field name="level_id"/>
                <field name="instructor_id"/>

                <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>

                <separator/>
                <filter string="Morning" name="morning" domain="[('schedule', '=', 'morning')]"/>
                <filter string="Afternoon" name="afternoon" domain="[('schedule', '=', 'afternoon')]"/>
                <filter string="Evening" name="evening" domain="[('schedule', '=', 'evening')]"/>
                <filter string="Weekend" name="weekend" domain="[('schedule', '=', 'weekend')]"/>
                <separator/>
                <filter string="Starting This Month" name="this_month"
                        domain="[('start_date', '>=', context_today().strftime('%Y-%m-01')),
                                 ('start_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Subject" name="group_subject" context="{'group_by': 'subject_id'}"/>
                    <filter string="Level" name="group_level" context="{'group_by': 'level_id'}"/>
                    <filter string="Schedule" name="group_schedule" context="{'group_by': 'schedule'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hallway_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">hallway.course</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="search_view_id" ref="view_hallway_course_search"/>
        <field name="context">{'search_default_open': 1, 'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first course!
            </p>
            <p>
                Courses are the actual classes that students can enroll in.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hallway_course"
              parent="menu_hallway_education"
              name="Courses"
              action="action_hallway_course"
              sequence="30"/>
</odoo>