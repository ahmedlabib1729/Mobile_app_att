<odoo>
    <record id="view_student_application_tree" model="ir.ui.view">
        <field name="name">student.application.tree</field>
        <field name="model">student.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Application NO"/>
                <field name="application_date"/>
                <field name="partner_id"/>
                <field name="gender"/>
                <field name="date_of_birth"/>
            </list>
        </field>
    </record>

    <record id="view_student_application_form" model="ir.ui.view">
        <field name="name">student.application.form</field>
        <field name="model">student.application</field>
        <field name="arch" type="xml">
            <form string="Student Application Form">

                <header>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                                invisible="status != 'draft'"/>

                        <button name="reset_to_draft" type="object" string="Reset To Draft"
                                invisible="status == 'draft'"/>


                        <field name="status" widget="statusbar"/>
                </header>


                <sheet>
                    <group>
                        <group>
                            <field name="name" style="font-size: 20px; font-weight: bold;"/>
                        </group>
                        <group>
                            <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}" nolabel="1"/>
                        </group>

                    </group>

                    <group>



                        <group string="Personal Information / بيانات شخصية">
                            <field name="application_date"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="last_name"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>

                        </group>
                        <group string="Contact Details  / بيانات الإتصال">

                                <field name="mobile_no_1"/>
                                <field name="mobile_no_2"/>
                                <field name="email_id"/>
                                <field name="passport_no"/>
                                <field name="emirates_id"/>
                                 <field name="address"/>
                                <field name="emirate"/>
                                <field name="nationality"/>
                                <field name="last_graduation"/>
                            </group>


                        <group>


                        </group>
                        <group>


                        </group>


                    </group>

                    <group string="VOCATIONAL QUALIFIACTION  / مؤهلات مهنية">
                        <group >
                            <group>
                                <field name="levl1"/>
                                <field name="levl2"/>
                            </group>
                            <group>
                                <field name="levl3"/>
                                <field name="levl4"/>
                            </group>
                            <group>
                                <field name="levl5"/>
                                <field name="levl6"/>
                            </group>
                            <group>
                                <field name="levl7"/>
                                <field name="other"/>
                            </group>

                        </group>



                        <group>
                            <group >
                                <field name="accounting_and_finance"/>
                                <field name="business_mangement"/>
                            </group>
                            <group >
                                <field name="commercial_law"/>
                                <field name="enterpreneurship_and_small"/>
                            </group>
                            <group >
                                <field name="humen"/>
                                <field name="market"/>
                            </group>
                            <group >
                                <field name="others"/>
                            </group>

                        </group>

                    </group>



                    <group string="Courses For NON Spekers   / دورات باللغتين " >

                        <div style="display: flex; gap: 150px">

                        <group string="Arabic Course   / دورة اللغة العربية">
                                 <field name="beginnera"/>
                                 <field name="Pre_Intermediatea"/>
                                 <field name="Intermediatea"/>
                                 <field name="Advanceda"/>
                                 <field name="Proficienta"/>
                        </group>
                         <group string="English Course   / دورة اللغة الإنجليزية">

                                <field name="beginnere"/>
                                 <field name="Pre_Intermediatee"/>
                                 <field name="Intermediatee"/>
                                 <field name="Advancede"/>
                                 <field name="Proficiente"/>

                        </group>

                         <group string="English Course For Kids  / دورة اللغة الإنجليزية للأطفال">

                                <field name="Early"/>
                                 <field name="Starters"/>
                                 <field name="Movers"/>
                                 <field name="Flyers"/>
                                 <field name="Otherk"/>

                        </group>

                        </div>
                        <field name="other_Course" class="oe_editable oe_bold"/>


                            <field name="schedule"/>
                            <field name="schedule_day_ids" widget="many2many_tags"/>
                            <field name="start_date"/>

                        <field name="Declaration" class="oe_editable oe_bold" context="{'default_other_Course': 'اكتب هنا تفاصيل الدورة...'}"/>

                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_student_application" model="ir.actions.act_window">
        <field name="name">Student Applications</field>
        <field name="res_model">student.application</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_student_application_root" name="HallWay System" sequence="10" web_icon="HallWay_System,static/description/form_7501046.png"/>/>
    <menuitem id="menu_student_application" parent="menu_student_application_root" name="Applications" action="action_student_application"/>
</odoo>
