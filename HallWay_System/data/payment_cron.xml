<odoo>
    <data noupdate="1">
        <!-- Cron Job to update overdue payments -->
        <record id="ir_cron_update_overdue_payments" model="ir.cron">
            <field name="name">Update Overdue Payment Lines</field>
            <field name="model_id" ref="model_hallway_payment_line"/>
            <field name="state">code</field>
            <field name="code">model.update_overdue_payments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>