<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Partner Form View -->
        <record id="view_partner_form_shipping" model="ir.ui.view">
            <field name="name">res.partner.form.shipping</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- Add buttons in button box -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_shipping_orders" type="object"
                            class="oe_stat_button" icon="fa-truck"
                            invisible="not is_shipping_customer">
                        <field name="shipping_order_count" widget="statinfo" string="Shipments"/>
                    </button>
                    <button name="action_create_shipping_order" type="object"
                            class="oe_stat_button" icon="fa-plus">
                        <div class="o_stat_info">
                            <span class="o_stat_text">New Shipment</span>
                        </div>
                    </button>
                    <button name="action_view_customer_profile" type="object"
                            class="oe_stat_button" icon="fa-bar-chart"
                            invisible="not is_shipping_customer">
                        <field name="customer_type" widget="statinfo" string="Profile"/>
                    </button>
                </xpath>

                <!-- Add Shipping tab in notebook -->
                <xpath expr="//notebook" position="inside">
                    <page string="Shipping" invisible="not is_shipping_customer">
                        <group>
                            <group string="Shipping Statistics">
                                <field name="is_shipping_customer" invisible="1"/>
                                <field name="customer_type" widget="badge"/>
                                <field name="shipping_order_count"/>
                                <field name="total_shipping_revenue" widget="monetary"/>
                                <field name="last_shipping_date"/>
                            </group>
                            <group string="Loyalty &amp; Credit">
                                <field name="loyalty_tier" widget="badge"/>
                                <field name="loyalty_points"/>
                                <field name="credit_limit" widget="monetary"/>
                                <field name="current_credit" widget="monetary"/>
                                <field name="available_credit" widget="monetary"/>
                            </group>
                        </group>
                        <group>
                            <group string="Default Preferences">
                                <field name="default_payment_method"/>
                                <field name="default_shipping_type"/>
                                <field name="default_shipping_company_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Marketing Preferences">
                                <field name="email_subscribed"/>
                                <field name="sms_subscribed"/>
                                <field name="whatsapp_subscribed"/>
                            </group>
                        </group>
                        <group string="Referral Information">
                            <group>
                                <field name="referral_code"/>
                                <field name="referral_count"/>
                            </group>
                            <group>
                                <field name="referred_by_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <separator string="Saved Shipping Addresses"/>
                        <field name="shipping_address_ids">
                            <list string="Shipping Addresses" editable="bottom">
                                <field name="name"/>
                                <field name="contact_name"/>
                                <field name="phone"/>
                                <field name="governorate_id"/>
                                <field name="city"/>
                                <field name="street"/>
                                <field name="address_type"/>
                                <field name="is_default" widget="boolean_toggle"/>
                            </list>
                            <form string="Shipping Address">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="contact_name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                    </group>
                                    <group>
                                        <field name="governorate_id" options="{'no_create': True}"/>
                                        <field name="city"/>
                                        <field name="street"/>
                                        <field name="building_no"/>
                                        <field name="floor"/>
                                        <field name="apartment"/>
                                        <field name="landmark"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="address_type"/>
                                    <field name="is_default"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <!-- Inherit Partner List View -->


        <!-- Search View Extension -->
        <record id="view_partner_search_shipping" model="ir.ui.view">
            <field name="name">res.partner.search.shipping</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='customer']" position="after">
                    <separator/>
                    <filter string="Shipping Customers" name="shipping_customer"
                            domain="[('is_shipping_customer','=',True)]"/>
                    <filter string="VIP Customers" name="vip"
                            domain="[('customer_type','=','vip')]"/>
                    <filter string="Active Customers" name="active_customer"
                            domain="[('customer_type','=','active')]"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Customer Type" name="group_customer_type"
                            context="{'group_by':'customer_type'}"/>
                    <filter string="Loyalty Tier" name="group_loyalty_tier"
                            context="{'group_by':'loyalty_tier'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>