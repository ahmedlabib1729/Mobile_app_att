<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Simple Top Products Action -->
        <record id="action_top_products_simple" model="ir.actions.act_window">
            <field name="name">Top Products Report</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,graph,list</field>
            <field name="context">{
                'group_by': ['product_name'],
                'pivot_measures': ['quantity', 'total_value'],
                'pivot_row_groupby': ['product_name'],
            }</field>
        </record>

        <!-- Category Analysis Action -->
        <record id="action_category_analysis_simple" model="ir.actions.act_window">
            <field name="name">Category Analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,graph</field>
            <field name="context">{
                'pivot_measures': ['quantity', 'total_value'],
                'pivot_row_groupby': ['category_id'],
                'pivot_column_groupby': ['shipping_month']
            }</field>
        </record>

        <!-- Geographic Distribution Action -->
        <record id="action_geographic_distribution" model="ir.actions.act_window">
            <field name="name">Geographic Distribution</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,graph</field>
            <field name="context">{
                'pivot_measures': ['quantity', 'total_value'],
                'pivot_row_groupby': ['governorate_id'],
                'pivot_column_groupby': ['category_id']
            }</field>
        </record>

        <!-- Customer Type Analysis -->
        <record id="action_customer_type_analysis" model="ir.actions.act_window">
            <field name="name">Customer Type Analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,graph</field>
            <field name="context">{
                'pivot_measures': ['quantity', 'total_value'],
                'pivot_row_groupby': ['customer_type'],
                'pivot_column_groupby': ['category_id']
            }</field>
        </record>

        <!-- Brand Performance -->
        <record id="action_brand_performance" model="ir.actions.act_window">
            <field name="name">Brand Performance</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,graph</field>
            <field name="domain">[('brand', '!=', False)]</field>
            <field name="context">{
                'pivot_measures': ['quantity', 'total_value'],
                'pivot_row_groupby': ['brand'],
                'pivot_column_groupby': ['shipping_month']
            }</field>
        </record>

        <!-- Repeat Products Analysis -->
        <record id="action_repeat_products_analysis" model="ir.actions.act_window">
            <field name="name">Repeat Products Analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">pivot,list</field>
            <field name="domain">[('is_repeat_product', '=', True)]</field>
            <field name="context">{
                'pivot_measures': ['quantity', 'days_since_last_order'],
                'pivot_row_groupby': ['product_name'],
                'pivot_column_groupby': ['customer_type']
            }</field>
        </record>

        <!-- Monthly Trend Analysis -->
        <record id="action_monthly_trend" model="ir.actions.act_window">
            <field name="name">Monthly Trend Analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">graph,pivot</field>
            <field name="context">{
                'graph_measure': 'total_value',
                'graph_mode': 'line',
                'graph_groupby': 'shipping_date:month'
            }</field>
        </record>

        <!-- Daily Sales Graph -->
        <record id="action_daily_sales_graph" model="ir.actions.act_window">
            <field name="name">Daily Sales Analysis</field>
            <field name="res_model">product.analysis</field>
            <field name="view_mode">graph,pivot</field>
            <field name="context">{
                'graph_measure': 'total_value',
                'graph_mode': 'bar',
                'graph_groupby': 'shipping_date:day'
            }</field>
        </record>

    </data>
</odoo>