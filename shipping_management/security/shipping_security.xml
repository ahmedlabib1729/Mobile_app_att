<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Module Category -->
        <record id="module_category_shipping" model="ir.module.category">
            <field name="name">Shipping Management</field>
            <field name="description">Shipping and Delivery Management</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_shipping_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_shipping"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_shipping_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_shipping"/>
            <field name="implied_ids" eval="[(4, ref('group_shipping_user'))]"/>
        </record>

        <record id="group_shipping_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_shipping"/>
            <field name="implied_ids" eval="[(4, ref('group_shipping_manager'))]"/>
        </record>

    </data>
</odoo>