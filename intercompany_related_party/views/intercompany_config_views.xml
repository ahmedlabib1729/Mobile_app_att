<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====================================== -->
    <!-- Intercompany Configuration List View  -->
    <!-- ====================================== -->
    <record id="view_intercompany_config_list" model="ir.ui.view">
        <field name="name">intercompany.config.list</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <list string="Intercompany Configurations"
                  create="1"
                  edit="1"
                  delete="1"
                  decoration-muted="not active">
                <field name="company_id" readonly="1"/>
                <field name="account_id" readonly="1"/>
                <field name="account_code"/>
                <field name="target_company_id" readonly="1"/>
                <field name="target_account_id" readonly="1"/>
                <field name="target_account_code"/>
                <field name="journal_id"/>
                <field name="auto_post" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- ====================================== -->
    <!-- Intercompany Configuration Form View  -->
    <!-- ====================================== -->
    <!-- ====================================== -->
    <!-- Intercompany Configuration Form View  -->
    <!-- ====================================== -->
    <record id="view_intercompany_config_form" model="ir.ui.view">
        <field name="name">intercompany.config.form</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <form string="Intercompany Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options="{'terminology': 'archive'}"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>

                    <group>
                        <group string="Source Company">
                            <field name="company_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="account_id"
                                   options="{'no_create': True}"
                                   context="{'default_company_id': company_id}"/>
                            <field name="account_code" readonly="1"/>
                        </group>

                        <group string="Target Company">
                            <field name="target_company_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="target_account_id"
                                   options="{'no_create': True}"
                                   context="{'default_company_id': target_company_id}"/>
                            <field name="target_account_code" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Settings">
                            <field name="journal_id"
                                   options="{'no_create': True}"
                                   context="{'default_company_id': target_company_id, 'default_type': 'general'}"/>
                            <field name="auto_post" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Add internal notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ====================================== -->
    <!-- Intercompany Configuration Search View -->
    <!-- ====================================== -->
    <record id="view_intercompany_config_search" model="ir.ui.view">
        <field name="name">intercompany.config.search</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <search string="Search Intercompany Configurations">
                <field name="company_id"/>
                <field name="target_company_id"/>
                <field name="account_id"/>
                <field name="target_account_id"/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>

                <filter string="Auto Post" name="auto_post"
                        domain="[('auto_post', '=', True)]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Source Company" name="groupby_company"
                            context="{'group_by': 'company_id'}"/>
                    <filter string="Target Company" name="groupby_target_company"
                            context="{'group_by': 'target_company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ====================================== -->
    <!-- Intercompany Configuration Action     -->
    <!-- ====================================== -->
    <record id="action_intercompany_config" model="ir.actions.act_window">
        <field name="name">Intercompany Configurations</field>
        <field name="res_model">intercompany.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first intercompany configuration
            </p>
            <p>
                Configure how related party accounts in one company map to
                accounts in other companies for automatic journal entry creation.
            </p>
        </field>
    </record>

</odoo>