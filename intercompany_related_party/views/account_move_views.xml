<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================= -->
    <!-- Inherit Account Move Form View           -->
    <!-- ========================================= -->
    <record id="view_move_form_inherit_intercompany" model="ir.ui.view">
        <field name="name">account.move.form.inherit.intercompany</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add Smart Button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_related_intercompany_moves"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-exchange"
                        invisible="related_intercompany_count == 0">
                    <field name="related_intercompany_count" widget="statinfo"
                           string="Intercompany"/>
                </button>
            </xpath>

            <!-- Add Fields (invisible for technical use) -->
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="skip_intercompany" invisible="1"/>
                <field name="source_intercompany_move_id" invisible="1"/>
                <field name="is_intercompany_generated" invisible="1"/>
                <field name="related_intercompany_count" invisible="1"/>
            </xpath>

        </field>
    </record>

    <!-- ========================================= -->
    <!-- Inherit Account Move List View           -->
    <!-- ========================================= -->
    <record id="view_move_list_inherit_intercompany" model="ir.ui.view">
        <field name="name">account.move.list.inherit.intercompany</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">

            <!-- Add field in tree -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_intercompany_generated"
                       string="IC"
                       optional="hide"
                       widget="boolean_toggle"/>
            </xpath>

        </field>
    </record>

    <!-- ========================================= -->
    <!-- Inherit Account Move Search View         -->
    <!-- ========================================= -->
    <record id="view_account_move_filter_inherit_intercompany" model="ir.ui.view">
        <field name="name">account.move.search.inherit.intercompany</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">

            <!-- Add filters -->
            <xpath expr="//filter[@name='posted']" position="after">
                <separator/>
                <filter string="Intercompany Generated"
                        name="intercompany_generated"
                        domain="[('is_intercompany_generated', '=', True)]"/>
                <filter string="Manual Entries"
                        name="manual_entries"
                        domain="[('is_intercompany_generated', '=', False)]"/>
            </xpath>

        </field>
    </record>

</odoo>