<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_aramex_shipment_form" model="ir.ui.view">
        <field name="name">aramex.shipment.form</field>
        <field name="model">aramex.shipment</field>
        <field name="arch" type="xml">
            <form string="Aramex Shipment">
                <header>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="btn-primary"
                            invisible="state != 'draft'"
                            icon="fa-check"/>
                    <button name="action_print_label"
                            type="object"
                            string="Print Label"
                            invisible="not label_pdf or state == 'cancelled'"
                            icon="fa-print"/>
                    <button name="action_track_shipment"
                            type="object"
                            string="Track Shipment"
                            invisible="not tracking_url or state in ['draft', 'cancelled']"
                            icon="fa-map-marker"/>
                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            invisible="state in ['delivered', 'cancelled']"
                            confirm="Are you sure you want to cancel this shipment?"
                            icon="fa-times"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,picked_up,in_transit,delivered"/>
                </header>

                <sheet>
                    <!-- Title Section -->
                    <div class="oe_title">
                        <h1>
                            <field name="awb_number"
                                   readonly="1"
                                   invisible="not awb_number"
                                   class="text-primary"/>
                            <span invisible="awb_number">New Shipment</span>
                        </h1>
                        <field name="display_name" invisible="1"/>
                    </div>

                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_track_shipment"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-globe"
                                invisible="not tracking_url">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Track Online</span>
                            </div>
                        </button>
                    </div>

                    <!-- Main Information -->
                    <group>
                        <group string="Shipment Information">
                            <field name="reference1"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="reference2"
                                   readonly="state != 'draft'"/>
                            <field name="reference3"
                                   readonly="state != 'draft'"/>
                            <field name="picking_id"
                                   readonly="1"
                                   options="{'no_create': True}"/>
                            <field name="sale_order_id"
                                   readonly="1"/>
                        </group>
                        <group string="Service Details">
                            <field name="product_group"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="product_type"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="payment_type"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="services"
                                   placeholder="e.g. CODS,SIGN"
                                   readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Package Information Tab -->
                        <page string="Package Information" name="package_info">
                            <group>
                                <group string="Package Details">
                                    <field name="number_of_pieces"
                                           required="1"
                                           readonly="state != 'draft'"/>
                                    <field name="actual_weight"
                                           required="1"
                                           readonly="state != 'draft'"/>
                                    <field name="chargeable_weight"
                                           readonly="1"/>
                                    <field name="description_of_goods"
                                           required="1"
                                           readonly="state != 'draft'"/>
                                </group>
                                <group string="Dimensions">
                                    <field name="length"
                                           readonly="state != 'draft'"/>
                                    <field name="width"
                                           readonly="state != 'draft'"/>
                                    <field name="height"
                                           readonly="state != 'draft'"/>
                                    <field name="goods_origin_country"
                                           options="{'no_create': True}"
                                           readonly="state != 'draft'"/>
                                </group>
                            </group>
                        </page>

                        <!-- Financial Information Tab -->
                        <page string="Financial" name="financial_info">
                            <group>
                                <group string="Cash on Delivery">
                                    <field name="cod_amount"
                                           widget="monetary"
                                           readonly="state != 'draft'"/>
                                    <field name="cod_currency"
                                           invisible="cod_amount == 0"
                                           options="{'no_create': True}"
                                           readonly="state != 'draft'"/>
                                </group>
                                <group string="Other Amounts">
                                    <field name="customs_value_amount"
                                           widget="monetary"
                                           readonly="state != 'draft'"/>
                                    <field name="customs_value_currency"
                                           invisible="customs_value_amount == 0"
                                           options="{'no_create': True}"
                                           readonly="state != 'draft'"/>
                                    <field name="insurance_amount"
                                           widget="monetary"
                                           readonly="state != 'draft'"/>
                                    <field name="insurance_currency"
                                           invisible="insurance_amount == 0"
                                           options="{'no_create': True}"
                                           readonly="state != 'draft'"/>
                                </group>
                            </group>
                            <group>
                                <group string="Additional Charges">
                                    <field name="cash_additional_amount"
                                           readonly="state != 'draft'"/>
                                    <field name="cash_additional_amount_description"
                                           invisible="cash_additional_amount == 0"
                                           readonly="state != 'draft'"/>
                                    <field name="collect_amount"
                                           readonly="state != 'draft'"/>
                                </group>
                                <group/>
                            </group>
                        </page>

                        <!-- Parties Tab -->
                        <page string="Shipper and Consignee" name="parties">
                            <group string="Shipper Information">
                                <group>
                                    <field name="shipper_name" readonly="1"/>
                                    <field name="shipper_company" readonly="1"/>
                                    <field name="shipper_phone" readonly="1"/>
                                </group>
                                <group>
                                    <field name="shipper_address" readonly="1"/>
                                    <field name="shipper_country_code" readonly="1"/>
                                </group>
                            </group>
                            <separator/>
                            <group string="Consignee Information">
                                <group>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="consignee_name" readonly="1"/>
                                    <field name="consignee_company" readonly="1"/>
                                    <field name="consignee_phone" readonly="1"/>
                                </group>
                                <group>
                                    <field name="consignee_address" readonly="1"/>
                                    <field name="consignee_country_code" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tracking Tab -->
                        <page string="Tracking" name="tracking">
                            <group>
                                <group string="Tracking Information">
                                    <field name="tracking_url"
                                           widget="url"
                                           readonly="1"/>
                                    <field name="last_tracking_update" readonly="1"/>
                                    <field name="pickup_date"
                                           readonly="state not in ['draft', 'confirmed']"/>
                                    <field name="delivery_date" readonly="1"/>
                                </group>
                                <group string="Pickup Details">
                                    <field name="pickup_guid" readonly="1"/>
                                    <field name="pickup_id" readonly="1"/>
                                    <field name="foreign_hawb"
                                           readonly="state != 'draft'"/>
                                </group>
                            </group>
                            <separator string="Tracking Notes"/>
                            <field name="tracking_notes"
                                   readonly="1"
                                   nolabel="1"/>
                        </page>

                        <!-- Documents Tab -->
                        <page string="Documents" name="documents">
                            <group>
                                <group string="Shipping Label">
                                    <field name="label_pdf"
                                           filename="label_filename"
                                           readonly="1"/>
                                    <field name="label_filename" invisible="1"/>
                                    <field name="label_url"
                                           widget="url"
                                           readonly="1"
                                           invisible="not label_url"/>
                                </group>
                                <group/>
                            </group>
                        </page>

                        <!-- Technical Tab -->
                        <page string="Technical" name="technical" groups="base.group_no_one">
                            <group>
                                <group string="Instructions">
                                    <field name="comments" readonly="state != 'draft'"/>
                                    <field name="accounting_instructions" readonly="state != 'draft'"/>
                                    <field name="operations_instructions" readonly="state != 'draft'"/>
                                </group>
                                <group string="System Information">
                                    <field name="company_id" readonly="1"/>
                                    <field name="error_message" readonly="1"/>
                                </group>
                            </group>
                            <separator string="API Response"/>
                            <field name="api_response" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_aramex_shipment_tree" model="ir.ui.view">
        <field name="name">aramex.shipment.tree</field>
        <field name="model">aramex.shipment</field>
        <field name="arch" type="xml">
            <tree string="Aramex Shipments"
                  decoration-success="state == 'delivered'"
                  decoration-info="state in ['in_transit', 'out_for_delivery']"
                  decoration-warning="state == 'on_hold'"
                  decoration-danger="state == 'cancelled'"
                  decoration-muted="state == 'draft'">
                <field name="awb_number" string="AWB"/>
                <field name="reference1" string="Reference"/>
                <field name="partner_id" string="Customer"/>
                <field name="picking_id" string="Delivery" optional="show"/>
                <field name="sale_order_id" string="Sale Order" optional="show"/>
                <field name="product_type" string="Service"/>
                <field name="number_of_pieces" string="Pieces" optional="show"/>
                <field name="actual_weight" string="Weight" optional="show"/>
                <field name="cod_amount"
                       string="COD"
                       widget="monetary"
                       optional="show"/>
                <field name="pickup_date" optional="hide"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state == 'delivered'"
                       decoration-info="state in ['in_transit', 'out_for_delivery']"
                       decoration-warning="state in ['confirmed', 'picked_up', 'on_hold']"
                       decoration-danger="state == 'cancelled'"/>
                <field name="company_id"
                       groups="base.group_multi_company"
                       optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_aramex_shipment_search" model="ir.ui.view">
        <field name="name">aramex.shipment.search</field>
        <field name="model">aramex.shipment</field>
        <field name="arch" type="xml">
            <search string="Search Shipments">
                <field name="awb_number" string="AWB"/>
                <field name="reference1"/>
                <field name="reference2"/>
                <field name="reference3"/>
                <field name="partner_id" string="Customer"/>
                <field name="picking_id" string="Delivery Order"/>
                <field name="sale_order_id" string="Sale Order"/>

                <filter string="Draft"
                        name="draft"
                        domain="[('state','=','draft')]"/>
                <filter string="Confirmed"
                        name="confirmed"
                        domain="[('state','=','confirmed')]"/>
                <filter string="In Transit"
                        name="in_transit"
                        domain="[('state','in',['picked_up','in_transit','out_for_delivery'])]"/>
                <filter string="Delivered"
                        name="delivered"
                        domain="[('state','=','delivered')]"/>
                <filter string="Cancelled"
                        name="cancelled"
                        domain="[('state','=','cancelled')]"/>
                <separator/>
                <filter string="COD Shipments"
                        name="cod"
                        domain="[('cod_amount','>', 0)]"/>
                <filter string="Today"
                        name="today"
                        domain="[('create_date','&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                ('create_date','&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week"
                        name="this_week"
                        domain="[('create_date','&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Status"
                            name="group_by_state"
                            context="{'group_by':'state'}"/>
                    <filter string="Customer"
                            name="group_by_partner"
                            context="{'group_by':'partner_id'}"/>
                    <filter string="Service Type"
                            name="group_by_product"
                            context="{'group_by':'product_type'}"/>
                    <filter string="Product Group"
                            name="group_by_group"
                            context="{'group_by':'product_group'}"/>
                    <filter string="Pickup Date"
                            name="group_by_pickup"
                            context="{'group_by':'pickup_date'}"/>
                    <filter string="Creation Date"
                            name="group_by_create"
                            context="{'group_by':'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_aramex_shipment_kanban" model="ir.ui.view">
        <field name="name">aramex.shipment.kanban</field>
        <field name="model">aramex.shipment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="awb_number"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="cod_amount"/>
                <field name="actual_weight"/>
                <field name="number_of_pieces"/>
                <field name="product_type"/>
                <field name="tracking_url"/>
                <progressbar field="state"
                            colors='{"delivered": "success", "cancelled": "danger", "on_hold": "warning"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="awb_number"/>
                                    </strong>
                                </div>
                                <field name="state"
                                       widget="label_selection"
                                       options="{'classes': {'draft': 'default',
                                                            'confirmed': 'info',
                                                            'in_transit': 'primary',
                                                            'delivered': 'success',
                                                            'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-user"/> <field name="partner_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-cube"/> <field name="number_of_pieces"/> pcs -
                                    <field name="actual_weight"/> kg
                                </div>
                                <div t-if="record.cod_amount.raw_value > 0">
                                    <i class="fa fa-money"/> COD: <field name="cod_amount"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="product_type"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <a t-if="record.tracking_url.raw_value"
                                       t-att-href="record.tracking_url.value"
                                       target="_blank"
                                       class="btn btn-sm btn-link">
                                        <i class="fa fa-globe"/> Track
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_aramex_shipment_pivot" model="ir.ui.view">
        <field name="name">aramex.shipment.pivot</field>
        <field name="model">aramex.shipment</field>
        <field name="arch" type="xml">
            <pivot string="Aramex Shipments Analysis">
                <field name="product_group" type="row"/>
                <field name="product_type" type="row"/>
                <field name="state" type="col"/>
                <field name="number_of_pieces" type="measure"/>
                <field name="actual_weight" type="measure"/>
                <field name="cod_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_aramex_shipment" model="ir.actions.act_window">
        <field name="name">Aramex Shipments</field>
        <field name="res_model">aramex.shipment</field>
        <field name="view_mode">tree,kanban,form,pivot</field>
        <field name="search_view_id" ref="view_aramex_shipment_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Aramex shipments found
            </p>
            <p>
                Aramex shipments are created from delivery orders.
                Go to a delivery order and click "Create Aramex Shipment".
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_aramex_shipments"
              name="Shipments"
              parent="menu_aramex_root"
              action="action_aramex_shipment"
              sequence="10"/>
</odoo>