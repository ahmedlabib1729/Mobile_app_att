<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Categories -->
        <record id="module_category_intercompany_payment" model="ir.module.category">
            <field name="name">Intercompany Payment</field>
            <field name="sequence">50</field>
        </record>
        
        <!-- Groups -->
        <record id="group_payment_batch_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_intercompany_payment"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_payment_batch_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_intercompany_payment"/>
            <field name="implied_ids" eval="[(4, ref('group_payment_batch_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Give base users access to read batches -->
        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_payment_batch_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="payment_batch_company_rule" model="ir.rule">
            <field name="name">Payment Batch: multi-company</field>
            <field name="model_id" ref="model_payment_batch"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('paying_company_id', 'in', company_ids), ('invoice_line_ids.company_id', 'in', company_ids)]</field>
        </record>

        <record id="payment_batch_line_company_rule" model="ir.rule">
            <field name="name">Payment Batch Line: multi-company</field>
            <field name="model_id" ref="model_payment_batch_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="intercompany_config_company_rule" model="ir.rule">
            <field name="name">Intercompany Config: multi-company</field>
            <field name="model_id" ref="model_intercompany_config"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('target_company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>