<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Intercompany Config Tree View -->
    <record id="view_intercompany_config_tree" model="ir.ui.view">
        <field name="name">intercompany.config.tree</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <list string="Intercompany Configurations">
                <field name="company_id"/>
                <field name="account_code"/>
                <field name="target_company_id"/>
                <field name="target_account_code"/>
                <field name="journal_id"/>
                <field name="auto_post"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Intercompany Config Form View -->
    <record id="view_intercompany_config_form" model="ir.ui.view">
        <field name="name">intercompany.config.form</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <form string="Intercompany Configuration">
                <sheet>
                    <widget name="web_ribbon" title="Archived" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" placeholder="Source Company"/>
                            <span> â†’ </span>
                            <field name="target_company_id" placeholder="Target Company"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Source Configuration">
                            <field name="account_id" context="{'default_company_id': company_id}"/>
                            <field name="account_code"/>
                        </group>
                        <group string="Target Configuration">
                            <field name="target_account_id" context="{'default_company_id': target_company_id}"/>
                            <field name="target_account_code"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="auto_post"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="lines_count"/>
                            <field name="total_percentage" invisible="total_percentage == 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Distribution Lines" invisible="not line_ids">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="account_id"/>
                                    <field name="target_account_id"/>
                                    <field name="distribution_type"/>
                                    <field name="percentage" invisible="distribution_type != 'percentage'"/>
                                    <field name="label"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" placeholder="Add any internal notes here..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Intercompany Config Search View -->
    <record id="view_intercompany_config_search" model="ir.ui.view">
        <field name="name">intercompany.config.search</field>
        <field name="model">intercompany.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="company_id"/>
                <field name="target_company_id"/>
                <field name="account_id"/>
                <field name="target_account_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="auto_post" string="Auto Post" domain="[('auto_post', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_company" string="Source Company" context="{'group_by': 'company_id'}"/>
                    <filter name="group_by_target" string="Target Company" context="{'group_by': 'target_company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Intercompany Config Action -->
    <record id="action_intercompany_config" model="ir.actions.act_window">
        <field name="name">Intercompany Configuration</field>
        <field name="res_model">intercompany.config</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_intercompany_config_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure intercompany mappings
            </p>
            <p>
                Set up the account mappings between companies for automatic
                generation of intercompany entries when processing payment batches.
            </p>
        </field>
    </record>
    
</odoo>
