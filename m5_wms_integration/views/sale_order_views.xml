<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form -->
    <record id="view_order_form_m5" model="ir.ui.view">
        <field name="name">sale.order.form.m5</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add M5 button in header button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_m5_orders"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-warehouse"
                        invisible="m5_order_count == 0"
                        groups="m5_wms_integration.group_m5_user">
                    <field name="m5_order_count" widget="statinfo" string="M5 Orders"/>
                </button>
            </xpath>

            <!-- Add M5 status if applicable -->
            <xpath expr="//field[@name='state']" position="before">
                <field name="m5_order_state"
                       widget="badge"
                       invisible="m5_order_state == 'none'"
                       decoration-success="m5_order_state == 'completed'"
                       decoration-info="m5_order_state in ['sent', 'processing']"
                       decoration-danger="m5_order_state in ['cancelled', 'error']"
                       groups="m5_wms_integration.group_m5_user"/>
            </xpath>

        </field>
    </record>

    <!-- Add M5 info in Sale Order Tree View -->
    <record id="view_order_tree_m5" model="ir.ui.view">
        <field name="name">sale.order.tree.m5</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="m5_order_state" optional="hide" widget="badge"
                       decoration-success="m5_order_state == 'completed'"
                       decoration-info="m5_order_state in ['sent', 'processing']"
                       decoration-danger="m5_order_state in ['cancelled', 'error']"
                       groups="m5_wms_integration.group_m5_user"/>
            </xpath>
        </field>
    </record>
</odoo>