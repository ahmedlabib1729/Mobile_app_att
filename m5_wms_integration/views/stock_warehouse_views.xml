<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Warehouse Form -->
    <record id="view_warehouse_form_m5" model="ir.ui.view">
        <field name="name">stock.warehouse.form.m5</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <!-- Add M5 page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="M5 WMS" groups="m5_wms_integration.group_m5_user">
                    <group>
                        <group string="M5 Configuration">
                            <field name="m5_config_id" options="{'no_create': True}"/>
                            <field name="m5_enabled" readonly="1"/>
                        </group>
                        <group string="Info" invisible="not m5_config_id">
                            <field name="m5_client_id" string="Client ID"/>
                            <field name="m5_warehouse_id" string="M5 Warehouse ID"/>
                            <field name="m5_auto_send" string="Auto Send Orders"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add to tree view -->
    <record id="view_warehouse_tree_m5" model="ir.ui.view">
        <field name="name">stock.warehouse.tree.m5</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="m5_enabled" widget="boolean_toggle" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>