<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Delivery Carrier Form -->
    <record id="view_delivery_carrier_form_m5" model="ir.ui.view">
        <field name="name">delivery.carrier.form.m5</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <!-- Add M5 WMS page -->
            <xpath expr="//page[@name='destination']" position="after">
                <page string="M5 WMS" invisible="delivery_type != 'm5_wms'">
                    <group>
                        <group string="M5 Configuration">
                            <field name="m5_config_id"
                                   required="delivery_type == 'm5_wms'"
                                   options="{'no_create': True}"/>
                            <field name="m5_service_type"
                                   required="delivery_type == 'm5_wms'"/>
                        </group>
                        <group string="Service Details">
                            <field name="product_id" string="Delivery Product"/>
                        </group>
                    </group>

                    <group string="Configuration Info" invisible="not m5_config_id">
                        <group>
                            <field name="m5_client_id" string="Client ID"/>
                            <field name="m5_warehouse_id" string="M5 Warehouse ID"/>
                        </group>
                        <group>
                            <field name="m5_api_url" string="API URL"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>