<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_m5_config_form" model="ir.ui.view">
        <field name="name">m5.config.form</field>
        <field name="model">m5.config</field>
        <field name="arch" type="xml">
            <form string="M5 WMS Configuration">
                <header>
                    <button name="test_connection" type="object" string="Test Connection" class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. M5 WMS Main"/>
                        </h1>
                    </div>

                    <group>
                        <group string="API Settings">
                            <field name="api_url"/>
                            <field name="email"/>
                            <field name="password" password="True"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="API Info" invisible="not access_token">
                            <field name="client_id" readonly="1"/>
                            <field name="warehouse_id" readonly="1"/>
                            <field name="token_expiry" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Settings">
                            <field name="auto_send_orders"/>
                        </group>
                        <group string="Options">
                            <field name="debug_mode"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <separator string="Notes"/>
                    <field name="note" nolabel="1" placeholder="Add any notes or special instructions..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_m5_config_tree" model="ir.ui.view">
        <field name="name">m5.config.tree</field>
        <field name="model">m5.config</field>
        <field name="arch" type="xml">
            <tree string="M5 WMS Configurations">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="email"/>
                <field name="client_id"/>
                <field name="warehouse_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_m5_config_search" model="ir.ui.view">
        <field name="name">m5.config.search</field>
        <field name="model">m5.config</field>
        <field name="arch" type="xml">
            <search string="Search M5 Configuration">
                <field name="name"/>
                <field name="email"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_m5_config" model="ir.actions.act_window">
        <field name="name">M5 WMS Configuration</field>
        <field name="res_model">m5.config</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_m5_config_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure M5 WMS Integration
            </p>
            <p>
                Create configurations for M5 WMS API access.
            </p>
        </field>
    </record>
</odoo>