<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============ COD DASHBOARD ACTION ============ -->
    <record id="action_cod_dashboard" model="ir.actions.act_window">
        <field name="name">COD Dashboard</field>
        <field name="res_model">cod.collection</field>
        <field name="view_mode">graph,pivot,list,form</field>
        <field name="context">{
            'search_default_this_month': 1,
            'search_default_group_company': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No COD data to display
            </p>
            <p>
                The COD dashboard will show analytics once you have COD collections.
            </p>
        </field>
    </record>

    <!-- ============ DASHBOARD GRAPH VIEW ============ -->
    <record id="view_cod_dashboard_graph" model="ir.ui.view">
        <field name="name">cod.collection.dashboard.graph</field>
        <field name="model">cod.collection</field>
        <field name="arch" type="xml">
            <graph string="COD Analytics" type="line" sample="1" stacked="0">
                <field name="delivered_date" interval="week"/>
                <field name="net_amount" type="measure" string="Net Amount"/>
                <field name="commission_amount" type="measure" string="Commission"/>
            </graph>
        </field>
    </record>

    <!-- ============ DASHBOARD PIVOT VIEW ============ -->
    <record id="view_cod_dashboard_pivot" model="ir.ui.view">
        <field name="name">cod.collection.dashboard.pivot</field>
        <field name="model">cod.collection</field>
        <field name="arch" type="xml">
            <pivot string="COD Analysis" sample="1">
                <field name="shipping_company_id" type="row"/>
                <field name="collection_state" type="col"/>
                <field name="cod_amount" type="measure" string="Total COD"/>
                <field name="commission_amount" type="measure" string="Commission"/>
                <field name="net_amount" type="measure" string="Net Amount"/>
            </pivot>
        </field>
    </record>

    <!-- ============ COHORT VIEW FOR SETTLEMENT TRACKING ============ -->
    <record id="view_cod_collection_cohort" model="ir.ui.view">
        <field name="name">cod.collection.cohort</field>
        <field name="model">cod.collection</field>
        <field name="arch" type="xml">
            <cohort string="Settlement Cohort"
                    date_start="delivered_date"
                    date_stop="actual_settlement_date"
                    mode="churn"
                    timeline="backward"
                    interval="week"
                    measure="__count__"/>
        </field>
    </record>

    <!-- ============ Quick Actions ============ -->

    <!-- Today's Collections -->
    <record id="action_cod_today_collections" model="ir.actions.act_window">
        <field name="name">Today's Collections</field>
        <field name="res_model">cod.collection</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[
            ('delivered_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),
            ('delivered_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))
        ]</field>
        <field name="context">{'search_default_group_company': 1}</field>
    </record>

    <!-- Pending Settlements -->
    <record id="action_cod_pending_settlements" model="ir.actions.act_window">
        <field name="name">Pending Settlements</field>
        <field name="res_model">cod.collection</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('collection_state', 'in', ['delivered', 'collected'])]</field>
        <field name="context">{
            'search_default_group_company': 1,
            'search_default_overdue': 1,
        }</field>
    </record>

    <!-- Overdue Collections -->
    <record id="action_cod_overdue" model="ir.actions.act_window">
        <field name="name">Overdue Collections</field>
        <field name="res_model">cod.collection</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[
            ('expected_settlement_date', '&lt;', context_today()),
            ('collection_state', 'in', ['delivered', 'collected'])
        ]</field>
        <field name="context">{'search_default_group_company': 1}</field>
    </record>

    <!-- Disputed Collections -->
    <record id="action_cod_disputed" model="ir.actions.act_window">
        <field name="name">Disputed Collections</field>
        <field name="res_model">cod.collection</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_disputed', '=', True)]</field>
        <field name="context">{'search_default_group_company': 1}</field>
    </record>

    <!-- This Week Settlements -->
    <record id="action_cod_week_settlements" model="ir.actions.act_window">
        <field name="name">This Week Settlements</field>
        <field name="res_model">cod.settlement.batch</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="domain">[
            ('settlement_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
            ('settlement_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))
        ]</field>
    </record>

</odoo>