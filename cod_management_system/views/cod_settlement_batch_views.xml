<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============ FORM VIEW ============ -->
    <record id="view_cod_settlement_batch_form" model="ir.ui.view">
        <field name="name">cod.settlement.batch.form</field>
        <field name="model">cod.settlement.batch</field>
        <field name="arch" type="xml">
            <form string="COD Settlement Batch">
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"
                            groups="cod_management_system.group_cod_user"/>

                    <button name="action_send_to_company"
                            string="Send to Company"
                            type="object"
                            class="btn-info"
                            invisible="state != 'confirmed'"
                            groups="cod_management_system.group_cod_user"/>

                    <button name="action_register_payment"
                            string="Register Payment"
                            type="object"
                            class="btn-warning"
                            invisible="state not in ['sent', 'partially_paid']"
                            groups="cod_management_system.group_cod_manager"/>

                    <button name="action_mark_paid"
                            string="Mark as Paid"
                            type="object"
                            class="btn-success"
                            invisible="state not in ['sent', 'partially_paid']"
                            groups="cod_management_system.group_cod_manager"/>

                    <button name="action_reconcile"
                            string="Reconcile"
                            type="object"
                            invisible="state != 'paid'"
                            groups="cod_management_system.group_cod_manager"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state not in ['draft', 'confirmed']"
                            groups="cod_management_system.group_cod_manager"/>

                    <button name="action_print_statement"
                            string="Print Statement"
                            type="object"
                            class="btn-secondary"
                            invisible="state == 'draft'"
                            groups="cod_management_system.group_cod_user"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,sent,paid,reconciled"/>
                </header>

                <sheet>
                    <!-- Ribbons -->
                    <widget name="web_ribbon" title="Auto Created"
                            invisible="not created_automatically"
                            bg_color="text-bg-info"/>

                    <widget name="web_ribbon" title="Reconciled"
                            invisible="state != 'reconciled'"
                            bg_color="text-bg-success"/>

                    <widget name="web_ribbon" title="Cancelled"
                            invisible="state != 'cancelled'"
                            bg_color="text-bg-danger"/>

                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-list"
                                name="action_view_collections" type="object">
                            <field name="shipment_count" widget="statinfo" string="Shipments"/>
                        </button>

                        <button class="oe_stat_button" icon="fa-money"
                                invisible="not journal_entry_id">
                            <field name="journal_entry_id" widget="statinfo" string="Journal Entry"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Settlement Information">
                            <field name="shipping_company_id"
                                   readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                            <field name="settlement_date"
                                   readonly="state != 'draft'"/>
                            <field name="notification_sent" invisible="1"/>
                            <field name="notification_sent_date"
                                   readonly="1"
                                   invisible="not notification_sent"/>
                        </group>

                        <group string="Financial Summary">
                            <field name="total_cod_amount"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="total_commission"
                                   widget="monetary"/>
                            <separator/>
                            <field name="total_net_amount"
                                   widget="monetary"
                                   class="fw-bold text-primary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Tab 1: Collections -->
                        <page string="Collections" name="collections">
                            <field name="collection_ids"
                                   readonly="state != 'draft'"
                                   context="{'default_shipping_company_id': shipping_company_id}">
                                <list editable="bottom"
                                      decoration-danger="is_disputed">
                                    <field name="display_name" readonly="1"/>
                                    <field name="shipment_id" readonly="1"/>
                                    <field name="sender_id" readonly="1"/>
                                    <field name="cod_amount" widget="monetary" readonly="1" sum="Total COD"/>
                                    <field name="commission_amount" widget="monetary" readonly="1" sum="Total Commission"/>
                                    <field name="net_amount" widget="monetary" readonly="1" sum="Total Net" class="fw-bold"/>
                                    <field name="delivered_date" readonly="1"/>
                                    <field name="collection_state" widget="badge" readonly="1"/>
                                    <field name="is_disputed" invisible="1"/>
                                </list>
                            </field>

                            <group class="oe_subtotal_footer oe_right">
                                <field name="shipment_count" readonly="1"/>
                                <field name="total_net_amount"
                                       widget="monetary"
                                       class="oe_subtotal_footer_separator fw-bold"/>
                            </group>
                        </page>

                        <!-- Tab 2: Payment -->
                        <page string="Payment" name="payment">
                            <group>
                                <group string="Payment Information">
                                    <field name="payment_date"
                                           readonly="state not in ['sent', 'partially_paid', 'paid']"/>
                                    <field name="payment_method"
                                           readonly="state not in ['sent', 'partially_paid', 'paid']"/>
                                    <field name="payment_reference"
                                           readonly="state not in ['sent', 'partially_paid', 'paid']"/>
                                    <field name="bank_account"
                                           readonly="state not in ['sent', 'partially_paid', 'paid']"/>
                                </group>

                                <group string="Amounts">
                                    <field name="payment_amount"
                                           widget="monetary"
                                           readonly="state not in ['sent', 'partially_paid', 'paid']"/>
                                    <field name="total_net_amount"
                                           widget="monetary"
                                           readonly="1"/>
                                    <separator/>
                                    <field name="payment_difference"
                                           widget="monetary"
                                           readonly="1"
                                           decoration-danger="payment_difference &lt; 0"
                                           decoration-warning="payment_difference != 0"
                                           decoration-success="payment_difference == 0"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tab 3: Documents -->
                        <page string="Documents" name="documents">
                            <group>
                                <field name="statement_file"
                                       filename="statement_filename"
                                       widget="binary"/>
                                <field name="statement_filename" invisible="1"/>
                            </group>
                        </page>

                        <!-- Tab 4: Notes -->
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes"
                                       placeholder="External notes (visible to partner)..."
                                       nolabel="1"/>
                                <field name="internal_notes"
                                       placeholder="Internal notes..."
                                       nolabel="1"
                                       groups="cod_management_system.group_cod_user"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============ TREE VIEW ============ -->
    <record id="view_cod_settlement_batch_tree" model="ir.ui.view">
        <field name="name">cod.settlement.batch.tree</field>
        <field name="model">cod.settlement.batch</field>
        <field name="arch" type="xml">
            <list string="Settlement Batches"
                  decoration-success="state == 'reconciled'"
                  decoration-info="state == 'paid'"
                  decoration-warning="state == 'sent'"
                  decoration-danger="state == 'cancelled'"
                  sample="1">

                <field name="name"/>
                <field name="shipping_company_id"/>
                <field name="settlement_date"/>
                <field name="shipment_count"/>
                <field name="total_cod_amount" widget="monetary" sum="Total COD"/>
                <field name="total_commission" widget="monetary" sum="Total Commission" optional="show"/>
                <field name="total_net_amount" widget="monetary" sum="Total Net" class="fw-bold"/>
                <field name="payment_amount" widget="monetary" optional="show"/>
                <field name="payment_difference" widget="monetary" optional="hide"
                       decoration-danger="payment_difference &lt; 0"
                       decoration-warning="payment_difference != 0"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'reconciled'"
                       decoration-info="state == 'paid'"
                       decoration-warning="state == 'sent'"/>
                <field name="created_automatically" widget="boolean" optional="hide"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ============ KANBAN VIEW ============ -->
    <record id="view_cod_settlement_batch_kanban" model="ir.ui.view">
        <field name="name">cod.settlement.batch.kanban</field>
        <field name="model">cod.settlement.batch</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" sample="1" quick_create="false" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="shipping_company_id"/>
                <field name="settlement_date"/>
                <field name="shipment_count"/>
                <field name="total_net_amount"/>
                <field name="payment_amount"/>
                <field name="state"/>
                <field name="created_automatically"/>
                <field name="currency_id"/>

                <progressbar field="state"
                            colors='{"cancelled": "danger", "reconciled": "success", "paid": "info", "sent": "warning"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="shipping_company_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>

                            <div class="o_kanban_card_content mt-3">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Settlement Date:</span><br/>
                                        <strong><field name="settlement_date"/></strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Shipments:</span><br/>
                                        <strong><field name="shipment_count"/></strong>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-12">
                                        <span class="text-muted">Net Amount:</span><br/>
                                        <strong class="text-primary fs-5">
                                            <field name="total_net_amount" widget="monetary"/>
                                        </strong>
                                    </div>
                                </div>

                                <div t-if="record.payment_amount.raw_value > 0" class="row mt-2">
                                    <div class="col-12">
                                        <span class="text-muted">Paid:</span>
                                        <strong class="text-success">
                                            <field name="payment_amount" widget="monetary"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="oe_kanban_bottom_left">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'reconciled': 'success', 'paid': 'info', 'cancelled': 'danger', 'sent': 'warning'}}"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.created_automatically.raw_value"
                                          class="badge rounded-pill text-bg-info">Auto</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============ CALENDAR VIEW ============ -->
    <record id="view_cod_settlement_batch_calendar" model="ir.ui.view">
        <field name="name">cod.settlement.batch.calendar</field>
        <field name="model">cod.settlement.batch</field>
        <field name="arch" type="xml">
            <calendar string="Settlement Calendar"
                      date_start="settlement_date"
                      color="shipping_company_id"
                      mode="month">
                <field name="name"/>
                <field name="shipping_company_id"/>
                <field name="total_net_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- ============ SEARCH VIEW ============ -->
    <record id="view_cod_settlement_batch_search" model="ir.ui.view">
        <field name="name">cod.settlement.batch.search</field>
        <field name="model">cod.settlement.batch</field>
        <field name="arch" type="xml">
            <search string="Search Settlements">
                <field name="name"/>
                <field name="shipping_company_id"/>
                <field name="payment_reference"/>

                <separator/>

                <!-- Quick Filters -->
                <filter name="draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed"
                        domain="[('state', '=', 'confirmed')]"/>
                <filter name="sent" string="Sent"
                        domain="[('state', '=', 'sent')]"/>
                <filter name="paid" string="Paid"
                        domain="[('state', '=', 'paid')]"/>
                <filter name="reconciled" string="Reconciled"
                        domain="[('state', '=', 'reconciled')]"/>

                <separator/>

                <filter name="auto_created" string="Auto Created"
                        domain="[('created_automatically', '=', True)]"/>
                <filter name="manual" string="Manual"
                        domain="[('created_automatically', '=', False)]"/>

                <separator/>

                <!-- Date Filters -->
                <filter name="this_week" string="This Week"
                        domain="[('settlement_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('settlement_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="This Month"
                        domain="[('settlement_date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter name="last_month" string="Last Month"
                        domain="[('settlement_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                ('settlement_date', '&lt;', context_today().strftime('%Y-%m-01'))]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_company" string="Shipping Company"
                            context="{'group_by': 'shipping_company_id'}"/>
                    <filter name="group_date" string="Settlement Date"
                            context="{'group_by': 'settlement_date:month'}"/>
                    <filter name="group_payment_method" string="Payment Method"
                            context="{'group_by': 'payment_method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============ ACTION ============ -->
    <record id="action_cod_settlement_batch" model="ir.actions.act_window">
        <field name="name">Settlement Batches</field>
        <field name="res_model">cod.settlement.batch</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_sent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first settlement batch
            </p>
            <p>
                Group COD collections into batches for settlement with shipping companies.
                Track payments and reconcile with accounting.
            </p>
        </field>
    </record>

</odoo>