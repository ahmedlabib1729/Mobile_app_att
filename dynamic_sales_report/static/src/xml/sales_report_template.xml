<templates id="template" xml:space="preserve">
    <t t-name="SalesReportTemplate">
        <div class="sales-report-container">
            <!-- Summary Cards -->
            <div class="summary-cards-container" t-if="summary">
                <div class="row mb-4">
                    <!-- Invoices Card -->
                    <div class="col-md-3">
                        <div class="summary-card card-purple">
                            <div class="card-icon">
                                <i class="fa fa-shopping-cart"></i>
                            </div>
                            <div class="card-content">
                                <div class="card-title">Invoices : <t t-esc="summary.invoices || 0"/></div>
                                <div class="card-subtitle">Items : <t t-esc="summary.items || 0"/></div>
                            </div>
                        </div>
                    </div>

                    <!-- Cash Card -->
                    <div class="col-md-3">
                        <div class="summary-card card-green">
                            <div class="card-icon">
                                <i class="fa fa-money"></i>
                            </div>
                            <div class="card-content">
                                <div class="card-title">Cash : <t t-esc="formatCurrency(summary.cash || 0)"/></div>
                                <div class="card-subtitle">Card : <t t-esc="formatCurrency(summary.card || 0)"/></div>
                            </div>
                        </div>
                    </div>

                    <!-- Discount Card -->
                    <div class="col-md-3">
                        <div class="summary-card card-red">
                            <div class="card-icon">
                                <i class="fa fa-bell"></i>
                            </div>
                            <div class="card-content">
                                <div class="card-title">Discount : <t t-esc="formatCurrency(summary.discount || 0)"/></div>
                                <div class="card-subtitle">Tax : <t t-esc="formatCurrency(summary.tax || 0)"/></div>
                            </div>
                        </div>
                    </div>

                    <!-- Amount Card -->
                    <div class="col-md-3">
                        <div class="summary-card card-blue">
                            <div class="card-icon">
                                <i class="fa fa-calculator"></i>
                            </div>
                            <div class="card-content">
                                <div class="card-title">Amount : <t t-esc="formatCurrency(summary.amount || 0)"/></div>
                                <div class="card-subtitle">Net : <t t-esc="formatCurrency(summary.net || 0)"/></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="report-actions mb-3">
                <button class="btn btn-success btn-sm" onclick="refreshReport()">
                    <i class="fa fa-refresh"></i> Refresh
                </button>
                <button class="btn btn-primary btn-sm" onclick="exportExcel()">
                    <i class="fa fa-file-excel-o"></i> Excel
                </button>
                <button class="btn btn-info btn-sm" onclick="exportCSV()">
                    <i class="fa fa-file-text-o"></i> CSV
                </button>
                <button class="btn btn-warning btn-sm" onclick="configureReport()">
                    <i class="fa fa-cog"></i> Configure
                </button>
            </div>

            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover sales-report-table">
                    <thead>
                        <tr t-if="rows and rows.length > 0">
                            <t t-foreach="Object.keys(rows[0])" t-as="header">
                                <th><t t-esc="formatHeader(header)"/></th>
                            </t>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="rows" t-as="row">
                            <t t-foreach="Object.keys(row)" t-as="key">
                                <td>
                                    <t t-if="isNumeric(row[key])">
                                        <t t-esc="formatNumber(row[key])"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="row[key]"/>
                                    </t>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Empty State -->
            <div t-if="!rows or rows.length === 0" class="text-center py-5">
                <i class="fa fa-search fa-3x text-muted mb-3"></i>
                <p class="text-muted">No data found for the selected criteria</p>
                <button class="btn btn-primary" onclick="configureReport()">
                    Configure Report
                </button>
            </div>
        </div>
    </t>
</templates>