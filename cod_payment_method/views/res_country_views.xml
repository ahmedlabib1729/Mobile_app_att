<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- تعديل فورم Country -->
    <record id="res_country_form_cod" model="ir.ui.view">
        <field name="name">res.country.form.cod</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <!-- إضافة group جديد بعد الحقول الأساسية -->
            <xpath expr="//group" position="after">
                <separator string="Cash on Delivery Settings"/>
                <group col="4">
                    <field name="cod_available"/>
                    <field name="cod_default_fee_type" invisible="not cod_available"/>
                    <field name="cod_default_fee_amount" invisible="not cod_available"/>
                    <field name="cod_notes" colspan="4" invisible="not cod_available" placeholder="Add any special instructions or restrictions for COD in this country..."/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Tree view للدول مع COD -->
    <record id="res_country_tree_cod" model="ir.ui.view">
        <field name="name">res.country.tree.cod</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="cod_available" string="COD" widget="boolean_toggle" optional="show"/>
                <field name="cod_default_fee_amount" string="COD Fee" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Search view للدول -->
    <record id="res_country_search_cod" model="ir.ui.view">
        <field name="name">res.country.search.cod</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="COD Available" name="cod_available" domain="[('cod_available', '=', True)]"/>
                <filter string="COD Not Available" name="cod_not_available" domain="[('cod_available', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <!-- Action لعرض الدول مع COD -->
    <record id="action_countries_cod" model="ir.actions.act_window">
        <field name="name">COD Countries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('cod_available', '=', True)]</field>
        <field name="context">{'search_default_cod_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure countries for Cash on Delivery
            </p>
            <p>
                Enable or disable COD for specific countries and set default fees.
            </p>
        </field>
    </record>
    <!-- Menu item -->
    <menuitem id="menu_countries_cod"
              name="COD Countries"
              parent="sale.menu_sale_config"
              action="action_countries_cod"
              groups="sales_team.group_sale_manager"
              sequence="101"/>
</odoo>


