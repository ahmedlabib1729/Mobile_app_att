<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="cod_thank_you_page" name="COD Thank You Page">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure">
                    <!-- Hero Section -->
                    <section class="s_cover parallax bg-black-50 pt96 pb96" >
                        <div class="container">
                            <div class="row s_nb_column_fixed">
                                <div class="col-lg-12 text-center">
                                    <h1 class="text-white">
                                        <i class="fa fa-check-circle fa-2x text-success mb-3 d-block"></i>
                                        شكراً لك!
                                    </h1>
                                    <h3 class="text-white mt-3">تم استلام طلبك بنجاح</h3>
                                </div>
                            </div>
                        </div>
                    </section>


                    <section class="s_text_block pt48 pb48">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div class="card shadow-sm">
                                        <div class="card-body p-5">
                                            <!-- Order Reference -->
                                            <div class="text-center mb-4">
                                                <h4 class="text-primary mb-3">رقم الطلب</h4>
                                                <h2 class="font-weight-bold" t-esc="reference"/>
                                            </div>

                                            <hr class="my-4"/>


                                            <div class="row mb-4">
                                                <div class="col-md-6 text-center">
                                                    <h5 class="text-muted mb-2">المبلغ المطلوب</h5>
                                                    <h3 class="text-primary">
                                                        <t t-esc="amount" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                    </h3>
                                                </div>
                                                <div class="col-md-6 text-center">
                                                    <h5 class="text-muted mb-2">طريقة الدفع</h5>
                                                    <h4>
                                                        <i class="fa fa-money text-success"></i>
                                                        الدفع عند الاستلام
                                                    </h4>
                                                </div>
                                            </div>

                                            <hr class="my-4"/>


                                            <div class="text-center">
                                                <h4 class="mb-4">الخطوات التالية</h4>
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                            <i class="fa fa-phone fa-2x"></i>
                                                        </div>
                                                        <h5 class="mt-3">سنتصل بك</h5>
                                                        <p class="text-muted">سيتواصل معك فريقنا خلال 24 ساعة</p>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                            <i class="fa fa-truck fa-2x"></i>
                                                        </div>
                                                        <h5 class="mt-3">تجهيز الطلب</h5>
                                                        <p class="text-muted">سنقوم بتجهيز طلبك للشحن</p>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                            <i class="fa fa-home fa-2x"></i>
                                                        </div>
                                                        <h5 class="mt-3">التوصيل</h5>
                                                        <p class="text-muted">ستستلم طلبك والدفع عند الاستلام</p>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="text-center mt-4">
                                                <t t-if="order">
                                                    <a t-att-href="'/my/orders/%s' % order.id" class="btn btn-primary btn-lg mr-2">
                                                        <i class="fa fa-file-text"></i> عرض تفاصيل الطلب
                                                    </a>
                                                </t>
                                                <a href="/shop" class="btn btn-outline-primary btn-lg">
                                                    <i class="fa fa-shopping-cart"></i> متابعة التسوق
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>


                </div>
            </t>
        </template>
    </data>
</odoo>