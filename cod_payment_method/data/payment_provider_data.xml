<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- COD Payment Provider -->
        <record id="payment_provider_cod" model="payment.provider">
            <field name="name">Cash on Delivery</field>
            <field name="code">cod</field>
            <field name="state">enabled</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="allow_tokenization" eval="False"/>
            <field name="allow_express_checkout" eval="False"/>
            <field name="redirect_form_view_id" eval="False"/>
            <field name="support_manual_capture" eval="False"/>
            <field name="is_published" eval="True"/>
            <!-- صورة افتراضية بسيطة -->
            <field name="image_128">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
            <field name="cod_fee_active" eval="False"/>
            <field name="cod_fee_type">fixed</field>
            <field name="cod_fee_amount">0.0</field>
            <field name="cod_minimum_amount">0.0</field>
            <field name="cod_maximum_amount">0.0</field>
        </record>

        <!-- COD Payment Method -->
        <record id="payment_method_cod" model="payment.method">
            <field name="name">Cash on Delivery</field>
            <field name="code">cod</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_cod'))]"/>
            <field name="active" eval="True"/>
            <field name="support_tokenization" eval="False"/>
            <field name="support_express_checkout" eval="False"/>
            <field name="image" eval="False"/>
        </record>
    </data>
</odoo>