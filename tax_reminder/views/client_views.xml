<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tax_client_list" model="ir.ui.view">
        <field name="name">tax.client.list</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <list string="العملاء">
                <field name="name"/>
                <field name="email" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="tax_number" optional="show"/>
                <field name="activity_type" optional="show"/>
                <field name="declaration_count" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tax_client_form" model="ir.ui.view">
        <field name="name">tax.client.form</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <form string="عميل ضريبي">
                <header>
                    <button name="generate_upcoming_declarations" type="object" 
                            string="توليد الإقرارات القادمة" 
                            class="btn-primary"
                            invisible="not auto_generate"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_declarations" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="declaration_count" widget="statinfo" string="الإقرارات"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="غير نشط" bg_color="bg-danger" invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="أدخل اسم العميل..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="معلومات الاتصال">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group string="معلومات ضريبية">
                            <field name="tax_number"/>
                            <field name="activity_type"/>
                            <field name="active"/>
                            <field name="auto_generate"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="إعدادات الضرائب" name="tax_settings">
                            <p class="text-muted" invisible="tax_setting_ids">
                                أضف إعدادات الضرائب المختلفة لهذا العميل لتوليد الإقرارات تلقائياً
                            </p>
                            <field name="tax_setting_ids" context="{'hide_client': True}">
                                <list editable="bottom">
                                    <field name="tax_type"/>
                                    <field name="period_type"/>
                                    <field name="generation_type"/>
                                    <field name="periods_to_generate" invisible="generation_type != 'periods'"/>
                                    <field name="generation_months" invisible="generation_type != 'months'"/>
                                    <field name="generation_years" invisible="generation_type != 'years'"/>
                                    <field name="day_of_month" optional="show"/>
                                    <field name="months_after_period" optional="show"/>
                                    <field name="days_before_reminder" optional="show"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                                <form>
                                    <group>
                                        <group string="الضريبة">
                                            <field name="tax_type"/>
                                            <field name="period_type"/>
                                            <field name="active"/>
                                        </group>
                                        <group string="المواعيد">
                                            <field name="day_of_month"/>
                                            <field name="months_after_period"/>
                                            <field name="days_before_reminder"/>
                                        </group>
                                    </group>
                                    <group string="التوليد التلقائي">
                                        <field name="generation_type" widget="radio"/>
                                        <field name="periods_to_generate" invisible="generation_type != 'periods'"/>
                                        <field name="generation_months" invisible="generation_type != 'months'"/>
                                        <field name="generation_years" invisible="generation_type != 'years'"/>
                                    </group>
                                </form>
                            </field>
                            <div class="alert alert-info" role="alert">
                                <h4 class="alert-heading">شرح الإعدادات:</h4>
                                <ul>
                                    <li><strong>نوع التوليد:</strong>
                                        <ul>
                                            <li>عدد الفترات: توليد عدد محدد من الفترات (مثل 12 شهر)</li>
                                            <li>بالشهور: توليد إقرارات لعدد محدد من الشهور القادمة</li>
                                            <li>بالسنوات: توليد إقرارات لعدد محدد من السنوات القادمة</li>
                                        </ul>
                                    </li>
                                    <li><strong>يوم الاستحقاق:</strong> اليوم من الشهر الذي يستحق فيه تقديم الإقرار</li>
                                    <li><strong>شهور بعد الفترة:</strong> عدد الشهور بعد انتهاء الفترة الضريبية لموعد التقديم</li>
                                    <li><strong>أيام التذكير:</strong> عدد الأيام قبل الاستحقاق لإرسال التذكير</li>
                                </ul>
                                <hr/>
                                <p class="mb-0"><strong>أمثلة عملية:</strong></p>
                                <ul class="mb-0">
                                    <li>VAT ربعي + 4 فترات = توليد سنة كاملة (4 أرباع)</li>
                                    <li>Payroll شهري + 12 شهر قادم = توليد سنة كاملة</li>
                                    <li>Income Tax سنوي + 5 سنوات = توليد 5 إقرارات سنوية</li>
                                </ul>
                            </div>
                        </page>
                        <page string="الإقرارات الضريبية" name="declarations">
                            <field name="declaration_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="tax_type"/>
                                    <field name="period"/>
                                    <field name="year"/>
                                    <field name="due_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="ملاحظات" name="notes">
                            <field name="notes" placeholder="أضف ملاحظات عن العميل..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_tax_client_search" model="ir.ui.view">
        <field name="name">tax.client.search</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <search string="البحث في العملاء">
                <field name="name"/>
                <field name="email"/>
                <field name="tax_number"/>
                
                <filter string="نشط" name="active" domain="[('active', '=', True)]"/>
                <filter string="غير نشط" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                
                <group expand="0" string="تجميع حسب">
                    <filter string="نوع النشاط" name="group_activity" context="{'group_by': 'activity_type'}"/>
                    <filter string="الحالة" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_tax_client_kanban" model="ir.ui.view">
        <field name="name">tax.client.kanban</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="declaration_count"/>
                <field name="activity_type"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{!record.active.raw_value ? 'text-muted' : ''}">
                            <div class="o_kanban_image">
                                <img t-att-src="'/web/image/tax.client/' + record.id.raw_value + '/image_128'" 
                                     class="o_kanban_image_fill_left" 
                                     alt="Client"
                                     onerror="this.onerror=null; this.src='/web/static/img/placeholder.png';"/>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="fa fa-envelope"/> <field name="email"/>
                                    </div>
                                    <div t-if="record.phone.raw_value">
                                        <span class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                    <div t-if="record.tax_number.raw_value">
                                        <strong>الرقم الضريبي:</strong> <field name="tax_number"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.activity_type.raw_value == 'trading'">تجاري</t>
                                        <t t-elif="record.activity_type.raw_value == 'industrial'">صناعي</t>
                                        <t t-elif="record.activity_type.raw_value == 'service'">خدمي</t>
                                        <t t-elif="record.activity_type.raw_value == 'professional'">مهني</t>
                                        <t t-else="">أخرى</t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge text-bg-info rounded-pill">
                                            <field name="declaration_count"/> إقرار
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tax_client" model="ir.actions.act_window">
        <field name="name">العملاء</field>
        <field name="res_model">tax.client</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أضف عميل جديد
            </p>
            <p>
                قم بإدارة عملاء الضرائب وتتبع إقراراتهم الضريبية
            </p>
        </field>
    </record>
    
    <!-- Server Action for Bulk Generation -->
    <record id="action_generate_declarations_bulk" model="ir.actions.server">
        <field name="name">توليد الإقرارات القادمة</field>
        <field name="model_id" ref="model_tax_client"/>
        <field name="binding_model_id" ref="model_tax_client"/>
        <field name="state">code</field>
        <field name="code">
if records:
    total = 0
    for record in records:
        if record.auto_generate:
            record.generate_upcoming_declarations()
            total += 1
    if total:
        message = f"تم توليد الإقرارات القادمة لـ {total} عميل"
    else:
        message = "لا يوجد عملاء مفعل لهم التوليد التلقائي"
else:
    message = "الرجاء تحديد عملاء"
        </field>
    </record>
</odoo>