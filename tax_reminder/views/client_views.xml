<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tax_client_list" model="ir.ui.view">
        <field name="name">tax.client.list</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <list string="العملاء">
                <field name="name"/>
                <field name="email" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="tax_number" optional="show"/>
                <field name="license_number" optional="show"/>
                <field name="legal_form" optional="hide"/>
                <field name="license_status" optional="show" widget="badge"
                       decoration-success="license_status == 'valid'"
                       decoration-warning="license_status == 'expiring_soon'"
                       decoration-danger="license_status == 'expired'"/>
                <field name="activity_type" optional="show"/>
                <field name="declaration_count" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tax_client_form" model="ir.ui.view">
        <field name="name">tax.client.form</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <form string="عميل ضريبي">
                <header>
                    <button name="generate_upcoming_declarations" type="object"
                            string="توليد الإقرارات القادمة"
                            class="btn-primary"
                            invisible="not auto_generate"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_declarations" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="declaration_count" widget="statinfo" string="الإقرارات"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="غير نشط" bg_color="bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="الرخصة منتهية" bg_color="bg-danger"
                            invisible="license_status != 'expired'"/>
                    <widget name="web_ribbon" title="الرخصة قريبة من الانتهاء" bg_color="bg-warning"
                            invisible="license_status != 'expiring_soon'"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="أدخل اسم العميل..."/>

                        </h1>
                        <group>
                            <field name="active"/>
                            <field name="auto_generate"/>
                        </group>

                    </div>

                    <group>
                        <group string="معلومات الاتصال">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="lang"/>
                            <field name="manager_name"/>
                            <field name="company_address"/>
                        </group>
                        <group string="بيانات الدخول - موقع الضرائب و معلومات الضريبة">
                            <field name="tax_email" widget="email"/>
                            <field name="tax_password"/>
                            <field name="tax_number" placeholder="رقم تسجيل ضريبة القيمة المضافة"/>

                            <field name="has_corporate_tax"/>
                            <field name="corporate_tax_registration"
                                   invisible="not has_corporate_tax"
                                   required="has_corporate_tax"
                                   placeholder="رقم التسجيل الضريبي لضريبة الشركات"/>
                        </group>

                        <group string="معلومات الرخصة">
                            <field name="license_number"/>
                            <field name="activity_type"/>
                            <field name="legal_form"/>
                            <field name="license_issue_date"/>
                            <field name="license_expiry_date"/>
                            <field name="license_status" readonly="1"
                                   invisible="not license_expiry_date"
                                   widget="badge"
                                   decoration-success="license_status == 'valid'"
                                   decoration-warning="license_status == 'expiring_soon'"
                                   decoration-danger="license_status == 'expired'"/>
                            <field name="days_to_license_expiry" readonly="1"
                                   invisible="not license_expiry_date"
                                   string="أيام متبقية"/>
                        </group>

                        <group>
                            <group string="الشركاء">
                                <field name="ownership_type"/>
                                <field name="partners_count" readonly="1" invisible="not partner_ids"/>
                                <field name="total_ownership_percentage" readonly="1"
                                       invisible="not partner_ids"
                                       widget="percentage"/>
                            </group>
                        </group>
                    </group>
                    <group>
                    </group>

                    <group>
                        <div class="row mt-3 mb-3">
                            <div class="col-lg-4">
                                <div class="alert alert-success text-center" role="alert">
                                    <h2 class="mb-0">
                                        <field name="submitted_declarations_count" readonly="1" nolabel="1"/>
                                    </h2>
                                    <strong>إقرارات مقدمة</strong>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="alert alert-warning text-center" role="alert">
                                    <h2 class="mb-0">
                                        <field name="pending_declarations_count" readonly="1" nolabel="1"/>
                                    </h2>
                                    <strong>إقرارات معلقة</strong>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="alert alert-danger text-center" role="alert">
                                    <h2 class="mb-0">
                                        <field name="overdue_declarations_count" readonly="1" nolabel="1"/>
                                    </h2>
                                    <strong>إقرارات متأخرة</strong>
                                </div>
                            </div>
                        </div>
                    </group>
                    <notebook>

                            <page string="الشركاء/المالكين" name="partners" invisible="not ownership_type">
                                <div class="alert alert-warning" role="alert" invisible="ownership_type != 'single_owner'">
                                    <strong>تنبيه:</strong> في حالة مالك واحد، يمكن إضافة شريك واحد فقط
                                </div>
                                <group invisible="not partner_ids">
                                    <group>
                                        <label for="total_ownership_percentage" string="إجمالي نسب الملكية"/>
                                        <div class="o_row">
                                            <field name="total_ownership_percentage" readonly="1" widget="percentage" class="oe_inline"/>
                                            <span class="text-danger" invisible="total_ownership_percentage &lt;= 100">
                                                <strong>(تجاوز 100%)</strong>
                                            </span>
                                            <span class="text-success" invisible="total_ownership_percentage != 100">
                                                <strong>✓</strong>
                                            </span>
                                        </div>
                                    </group>
                                </group>

                                <field name="partner_ids">
                                    <list editable="bottom">
                                        <field name="name" required="1"/>
                                        <field name="identity_number"/>
                                        <field name="identity_expiry_date"/>
                                        <field name="identity_status" readonly="1" optional="show"
                                               decoration-success="identity_status == 'valid'"
                                               decoration-warning="identity_status == 'expiring_soon'"
                                               decoration-danger="identity_status == 'expired'"/>
                                        <field name="passport_number"/>
                                        <field name="passport_expiry_date"/>
                                        <field name="passport_status" readonly="1" optional="show"
                                               decoration-success="passport_status == 'valid'"
                                               decoration-warning="passport_status == 'expiring_soon'"
                                               decoration-danger="passport_status == 'expired'"/>
                                        <field name="ownership_percentage" sum="الإجمالي" widget="percentage"/>
                                    </list>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group string="المعلومات الشخصية">
                                                    <field name="name"/>
                                                    <field name="ownership_percentage" widget="percentage"/>
                                                </group>
                                            </group>
                                            <group>
                                                <group string="بيانات الهوية">
                                                    <field name="identity_number"/>
                                                    <field name="identity_expiry_date"/>
                                                    <field name="identity_status" readonly="1"
                                                           decoration-success="identity_status == 'valid'"
                                                           decoration-warning="identity_status == 'expiring_soon'"
                                                           decoration-danger="identity_status == 'expired'"/>
                                                </group>
                                                <group string="بيانات جواز السفر">
                                                    <field name="passport_number"/>
                                                    <field name="passport_expiry_date"/>
                                                    <field name="passport_status" readonly="1"
                                                           decoration-success="passport_status == 'valid'"
                                                           decoration-warning="passport_status == 'expiring_soon'"
                                                           decoration-danger="passport_status == 'expired'"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                        <page string="إعدادات الضرائب" name="tax_settings">
                            <p class="text-muted" invisible="tax_setting_ids">
                                أضف إعدادات الضرائب المختلفة لهذا العميل لتوليد الإقرارات تلقائياً
                            </p>
                            <field name="tax_setting_ids" context="{'hide_client': True}">
                               <list editable="bottom">
                                    <field name="tax_type"/>
                                    <field name="period_type"/>
                                    <field name="tax_year_start_date" required="1"/>
                                    <field name="current_period_number" readonly="1" optional="show"/>
                                    <field name="current_period_start" readonly="1" optional="hide"/>
                                    <field name="current_period_end" readonly="1" optional="hide"/>
                                    <field name="due_date_method"/>
                                    <field name="due_month"
                                           invisible="due_date_method != 'specific_month'"
                                           required="due_date_method == 'specific_month'"/>
                                    <field name="months_after_period"
                                           invisible="due_date_method != 'months_after'"
                                           required="due_date_method == 'months_after'"
                                           optional="hide"/>
                                    <field name="day_of_month" optional="show"/>
                                    <field name="generation_type"/>
                                    <field name="periods_to_generate" invisible="generation_type != 'periods'"/>
                                    <field name="generation_months" invisible="generation_type != 'months'"/>
                                    <field name="generation_years" invisible="generation_type != 'years'"/>
                                    <field name="enable_first_reminder" widget="boolean_toggle"/>
                                    <field name="days_after_period_first" optional="show"/>
                                    <field name="enable_second_reminder" widget="boolean_toggle"/>
                                    <field name="days_after_period_second" optional="show"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <group string="الضريبة">
                                                <field name="tax_type"/>
                                                <field name="period_type"/>
                                                <field name="active"/>
                                            </group>
                                            <group string="المواعيد">
                                                <field name="due_date_method" widget="radio"/>
                                                <field name="due_month"
                                                       invisible="due_date_method != 'specific_month'"
                                                       required="due_date_method == 'specific_month'"/>
                                                <field name="months_after_period"
                                                       invisible="due_date_method != 'months_after'"
                                                       required="due_date_method == 'months_after'"/>
                                                <field name="day_of_month"/>
                                            </group>
                                        </group>
                                        <separator string="إعدادات التذكيرات"/>
                                        <group>
                                            <group string="التذكير الأول">
                                                <field name="enable_first_reminder"/>
                                                <field name="days_after_period_first"
                                                       invisible="not enable_first_reminder"
                                                       required="enable_first_reminder"/>
                                            </group>
                                            <group string="التذكير الثاني">
                                                <field name="enable_second_reminder"/>
                                                <field name="days_after_period_second"
                                                       invisible="not enable_second_reminder"
                                                       required="enable_second_reminder"/>
                                            </group>
                                        </group>
                                        <group string="التوليد التلقائي">
                                            <field name="generation_type" widget="radio"/>
                                            <field name="periods_to_generate"
                                                   invisible="generation_type != 'periods'"
                                                   required="generation_type == 'periods'"/>
                                            <field name="generation_months"
                                                   invisible="generation_type != 'months'"
                                                   required="generation_type == 'months'"/>
                                            <field name="generation_years"
                                                   invisible="generation_type != 'years'"
                                                   required="generation_type == 'years'"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="إعدادات ضريبة الشركات" name="corporate_tax_settings"
      invisible="not has_corporate_tax">

    <field name="corporate_tax_settings_ids" context="{'default_client_id': id}">
        <list editable="bottom">
            <field name="tax_registration_start_date" required="1"/>
            <field name="submission_month"/>
            <field name="submission_day"/>
            <field name="declaration_type"/>
            <field name="custom_declaration_count"
                   invisible="declaration_type != 'custom'"
                   required="declaration_type == 'custom'"/>
            <field name="first_declaration_due_date" readonly="1"/>
            <field name="active" widget="boolean_toggle"/>
            <button name="generate_corporate_tax_declarations"
                    type="object"
                    string="توليد الإقرارات"
                    icon="fa-refresh"
                    class="btn-sm btn-primary"/>
        </list>
        <form>
            <sheet>
                <group>
                    <group string="إعدادات التسجيل">
                        <field name="tax_registration_start_date" required="1"/>
                        <field name="submission_month"/>
                        <field name="submission_day"/>
                        <field name="active"/>
                    </group>
                    <group string="نوع الإقرارات">
                        <field name="declaration_type" widget="radio"/>
                        <field name="custom_declaration_count"
                               invisible="declaration_type != 'custom'"
                               required="declaration_type == 'custom'"/>
                    </group>
                </group>

                <group string="الإقرار الأول" invisible="not tax_registration_start_date">
                    <group>
                        <field name="first_declaration_start_date" readonly="1"/>
                        <field name="first_declaration_end_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="first_declaration_due_date" readonly="1"/>
                    </group>
                </group>

                <group string="التذكيرات">
                    <field name="enable_reminder"/>
                    <field name="days_before_reminder"
                           invisible="not enable_reminder"
                           required="enable_reminder"/>
                </group>

                <footer>
                    <button name="generate_corporate_tax_declarations"
                            type="object"
                            string="توليد إقرارات ضريبة الشركات"
                            class="btn-primary"
                            confirm="هل تريد توليد إقرارات ضريبة الشركات؟"/>
                </footer>
            </sheet>
        </form>
    </field>

    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">نظام ضريبة الشركات في الإمارات</h4>
        <p>الإقرار الأول يغطي الفترة من تاريخ بداية التسجيل الضريبي حتى نهاية السنة التالية</p>
        <p>الإقرارات التالية تغطي كل سنة مالية كاملة وتقدم في الشهر المحدد</p>
    </div>
</page>

                        <page string="الإقرارات الضريبية" name="declarations">
                            <field name="declaration_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="tax_type"/>
                                    <field name="period"/>
                                    <field name="year"/>
                                    <field name="period_end_date"/>
                                    <field name="first_reminder_date"/>
                                    <field name="second_reminder_date"/>
                                    <field name="due_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                       <page string="الإقرارات المقدمة" name="submitted_declarations">
                            <field name="submitted_declaration_ids">
                                <list string="الإقرارات المقدمة" create="0" delete="0">
                                    <field name="name"/>
                                    <field name="tax_type"/>
                                    <field name="period"/>
                                    <field name="year"/>
                                    <field name="due_date"/>
                                    <field name="submission_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="ملاحظات" name="notes">
                            <field name="notes" placeholder="أضف ملاحظات عن العميل..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_tax_client_search" model="ir.ui.view">
        <field name="name">tax.client.search</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <search string="البحث في العملاء">
                <field name="name"/>
                <field name="email"/>
                <field name="tax_number"/>

                <filter string="نشط" name="active" domain="[('active', '=', True)]"/>
                <filter string="غير نشط" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="له ضريبة شركات" name="has_corporate_tax" domain="[('has_corporate_tax', '=', True)]"/>
                <filter string="رخصة منتهية" name="license_expired"
                        domain="[('license_expiry_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('license_expiry_date', '!=', False)]"/>
                <filter string="رخصة قريبة من الانتهاء" name="license_expiring"
                        domain="[('license_expiry_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                ('license_expiry_date', '&lt;=', (context_today() + relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <separator/>

                <group expand="0" string="تجميع حسب">
                    <filter string="نوع النشاط" name="group_activity" context="{'group_by': 'activity_type'}"/>
                    <filter string="الحالة" name="group_active" context="{'group_by': 'active'}"/>
                    <filter string="الشكل القانوني" name="group_legal_form" context="{'group_by': 'legal_form'}"/>
                    <filter string="حالة الرخصة" name="group_license_status" context="{'group_by': 'license_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_tax_client_kanban" model="ir.ui.view">
        <field name="name">tax.client.kanban</field>
        <field name="model">tax.client</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="declaration_count"/>
                <field name="activity_type"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{!record.active.raw_value ? 'text-muted' : ''}">
                            <div class="o_kanban_image">
                                <img t-att-src="'/web/image/tax.client/' + record.id.raw_value + '/image_128'"
                                     class="o_kanban_image_fill_left"
                                     alt="Client"
                                     onerror="this.onerror=null; this.src='/web/static/img/placeholder.png';"/>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="fa fa-envelope"/> <field name="email"/>
                                    </div>
                                    <div t-if="record.phone.raw_value">
                                        <span class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                    <div t-if="record.tax_number.raw_value">
                                        <strong>الرقم الضريبي:</strong> <field name="tax_number"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.activity_type.raw_value == 'trading'">تجاري</t>
                                        <t t-elif="record.activity_type.raw_value == 'industrial'">صناعي</t>
                                        <t t-elif="record.activity_type.raw_value == 'service'">خدمي</t>
                                        <t t-elif="record.activity_type.raw_value == 'professional'">مهني</t>
                                        <t t-else="">أخرى</t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge text-bg-info rounded-pill">
                                            <field name="declaration_count"/> إقرار
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action - مهم جداً! -->
    <record id="action_tax_client" model="ir.actions.act_window">
        <field name="name">العملاء</field>
        <field name="res_model">tax.client</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أضف عميل جديد
            </p>
            <p>
                قم بإدارة عملاء الضرائب وتتبع إقراراتهم الضريبية
            </p>
        </field>
    </record>

    <!-- Server Action for Bulk Generation -->
    <record id="action_generate_declarations_bulk" model="ir.actions.server">
        <field name="name">توليد الإقرارات القادمة</field>
        <field name="model_id" ref="model_tax_client"/>
        <field name="binding_model_id" ref="model_tax_client"/>
        <field name="state">code</field>
        <field name="code">
if records:
    total = 0
    for record in records:
        if record.auto_generate:
            record.generate_upcoming_declarations()
            total += 1
    if total:
        message = f"تم توليد الإقرارات القادمة لـ {total} عميل"
    else:
        message = "لا يوجد عملاء مفعل لهم التوليد التلقائي"
else:
    message = "الرجاء تحديد عملاء"
        </field>
    </record>
</odoo>