<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_tax_declaration_list" model="ir.ui.view">
        <field name="name">tax.declaration.list</field>
        <field name="model">tax.declaration</field>
        <field name="arch" type="xml">
            <list string="الإقرارات الضريبية" 
                  decoration-success="state=='submitted'" 
                  decoration-warning="state in ['first_reminded', 'second_reminded']"
                  decoration-danger="due_date &lt; today and state not in ['submitted','cancelled']">
                <field name="name"/>
                <field name="client_id"/>
                <field name="tax_type"/>
                <field name="period" optional="show"/>
                <field name="year"/>
                <field name="period_start_date" optional="show"/>
                <field name="period_end_date" optional="show"/>
                <field name="due_date"/>
                <field name="first_reminder_date" optional="show"/>
                <field name="second_reminder_date" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'submitted'"
                       decoration-warning="state in ['first_reminded', 'second_reminded']"
                       decoration-info="state == 'documents_received'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="first_reminder_sent" widget="boolean_toggle" optional="show"/>
                <field name="second_reminder_sent" widget="boolean_toggle" optional="show"/>
                <field name="attachment_count" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tax_declaration_form" model="ir.ui.view">
        <field name="name">tax.declaration.form</field>
        <field name="model">tax.declaration</field>
        <field name="arch" type="xml">
            <form string="إقرار ضريبي">
                <header>
                    <button name="action_send_first_reminder" type="object"
                            string="إرسال التذكير الأول"
                            class="btn-primary"
                            invisible="state in ['submitted', 'cancelled'] or first_reminder_sent"/>
                    <button name="action_send_second_reminder" type="object"
                            string="إرسال التذكير الثاني"
                            class="btn-warning"
                            invisible="state in ['submitted', 'cancelled'] or second_reminder_sent"/>
                    <button name="action_send_reminder" type="object"
                            string="إرسال تذكير"
                            class="btn-info"
                            invisible="state in ['submitted', 'cancelled']"/>
                    <button name="action_mark_submitted" type="object"
                            string="تم التقديم"
                            class="btn-success"
                            invisible="state in ['submitted', 'cancelled']"/>
                    <button name="action_cancel" type="object"
                            string="إلغاء"
                            confirm="هل أنت متأكد من إلغاء هذا الإقرار؟"
                            invisible="state in ['submitted', 'cancelled']"/>
                    <button name="action_reset_draft" type="object"
                            string="إرجاع لمسودة"
                            invisible="state not in ['cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,first_reminded,second_reminded,documents_received,submitted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="attachment_count" widget="statinfo" string="المستندات"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="مُقدم" invisible="state != 'submitted'"/>
                    <widget name="web_ribbon" title="ملغي" bg_color="bg-danger" invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="معلومات العميل">
                            <field name="client_id" options="{'no_create': False, 'no_create_edit': False}"/>
                        </group>
                        <group string="معلومات الإقرار">
                            <field name="tax_type"/>
                            <field name="period_type"/>
                            <field name="period"/>
                            <field name="year"/>
                            <field name="due_date"/>
                        </group>
                    </group>

                    <group>
                        <group string="فترة الإقرار">
                            <field name="period_start_date" readonly="1"/>
                            <field name="period_end_date" readonly="1"/>
                        </group>
                        <group string="التقديم">
                            <field name="submission_date" invisible="state != 'submitted'" readonly="1"/>
                            <field name="days_remaining" readonly="1"/>
                        </group>
                    </group>


                    <separator string="إعدادات التذكيرات"/>
                    <group>
                        <group string="التذكير الأول">
                            <field name="enable_first_reminder"/>
                            <field name="days_after_period_first" invisible="not enable_first_reminder"/>
                            <field name="first_reminder_date" readonly="1" invisible="not enable_first_reminder"/>
                            <field name="first_reminder_sent" readonly="1" invisible="not enable_first_reminder"/>
                            <field name="first_reminder_sent_date" readonly="1" invisible="not first_reminder_sent"/>
                        </group>
                        <group string="التذكير الثاني">
                            <field name="enable_second_reminder"/>
                            <field name="days_after_period_second" invisible="not enable_second_reminder"/>
                            <field name="second_reminder_date" readonly="1" invisible="not enable_second_reminder"/>
                            <field name="second_reminder_sent" readonly="1" invisible="not enable_second_reminder"/>
                            <field name="second_reminder_sent_date" readonly="1" invisible="not second_reminder_sent"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="المستندات المرفقة" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="ملاحظات" name="notes">
                            <field name="notes" placeholder="أضف أي ملاحظات إضافية هنا..."/>
                        </page>
                        <page string="معلومات التذكيرات" name="reminder_info">
                            <group>
                                <group>
                                    <div class="alert alert-info" role="alert">
                                        <h4 class="alert-heading">نظام التذكيرات الجديد</h4>
                                        <p>يعمل النظام الجديد على حساب مواعيد التذكيرات بناءً على تاريخ انتهاء الفترة الضريبية وليس تاريخ الاستحقاق.</p>
                                        <hr/>
                                        <ul>
                                            <li><strong>التذكير الأول:</strong> يتم إرساله بعد انتهاء الفترة بعدد الأيام المحدد في "أيام بعد الفترة (تذكير أول)"</li>
                                            <li><strong>التذكير الثاني:</strong> يتم إرساله بعد انتهاء الفترة بعدد الأيام المحدد في "أيام بعد الفترة (تذكير ثاني)"</li>
                                        </ul>
                                        <p class="mb-0"><strong>مثال:</strong> إذا انتهت الفترة في 31/03 وكان التذكير الأول بعد 5 أيام، سيتم الإرسال في 05/04</p>
                                    </div>
                                </group>
                            </group>
                            <group string="توقيت التذكيرات">
                                <field name="period_end_date" readonly="1"/>
                                <field name="first_reminder_date" readonly="1"/>
                                <field name="second_reminder_date" readonly="1"/>
                            </group>
                            <group string="حالة التذكيرات">
                                <field name="first_reminder_sent" readonly="1"/>
                                <field name="first_reminder_sent_date" readonly="1" invisible="not first_reminder_sent"/>
                                <field name="second_reminder_sent" readonly="1"/>
                                <field name="second_reminder_sent_date" readonly="1" invisible="not second_reminder_sent"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_tax_declaration_search" model="ir.ui.view">
        <field name="name">tax.declaration.search</field>
        <field name="model">tax.declaration</field>
        <field name="arch" type="xml">
            <search string="البحث في الإقرارات">
                <field name="name"/>
                <field name="client_id"/>
                <field name="tax_type"/>
                <field name="year"/>

                <filter string="مسودة" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="في الانتظار" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="تذكير أول" name="first_reminded" domain="[('state', '=', 'first_reminded')]"/>
                <filter string="تذكير ثاني" name="second_reminded" domain="[('state', '=', 'second_reminded')]"/>
                <filter string="تم التقديم" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <separator/>
                <filter string="تحتاج تذكير أول" name="need_first_reminder"
                        domain="[('enable_first_reminder', '=', True), ('first_reminder_sent', '=', False), ('state', 'not in', ['submitted', 'cancelled'])]"/>
                <filter string="تحتاج تذكير ثاني" name="need_second_reminder"
                        domain="[('enable_second_reminder', '=', True), ('second_reminder_sent', '=', False), ('state', 'not in', ['submitted', 'cancelled'])]"/>
                <filter string="متأخرة" name="overdue"
                        domain="[('due_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', 'not in', ['submitted', 'cancelled'])]"/>
                <separator/>
                <filter string="هذا الشهر" name="this_month"
                        domain="[
                            ('due_date', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                            ('due_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))
                        ]"/>

                <group expand="0" string="تجميع حسب">
                    <filter string="العميل" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="نوع الضريبة" name="group_tax_type" context="{'group_by': 'tax_type'}"/>
                    <filter string="الحالة" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="السنة" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="شهر الاستحقاق" name="group_due_month" context="{'group_by': 'due_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_tax_declaration_kanban" model="ir.ui.view">
        <field name="name">tax.declaration.kanban</field>
        <field name="model">tax.declaration</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="client_id"/>
                <field name="tax_type"/>
                <field name="due_date"/>
                <field name="state"/>
                <field name="attachment_count"/>
                <field name="first_reminder_sent"/>
                <field name="second_reminder_sent"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><strong>العميل:</strong> <field name="client_id"/></div>
                                    <div>
                                        <strong>النوع:</strong>
                                        <t t-if="record.tax_type.raw_value == 'vat'">ضريبة القيمة المضافة</t>
                                        <t t-elif="record.tax_type.raw_value == 'income'">ضريبة الدخل</t>
                                        <t t-elif="record.tax_type.raw_value == 'withholding'">خصم وإضافة</t>
                                        <t t-elif="record.tax_type.raw_value == 'payroll'">ضريبة المرتبات</t>
                                        <t t-else="">أخرى</t>
                                    </div>
                                    <div>
                                        <strong>الاستحقاق:</strong>
                                        <field name="due_date" widget="date"/>
                                    </div>
                                    <div t-if="record.first_reminder_sent.raw_value or record.second_reminder_sent.raw_value">
                                        <span class="badge text-bg-warning rounded-pill">
                                            <t t-if="record.second_reminder_sent.raw_value">تذكيران</t>
                                            <t t-elif="record.first_reminder_sent.raw_value">تذكير واحد</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.attachment_count.raw_value > 0">
                                            <span class="fa fa-paperclip"/>
                                            <field name="attachment_count"/> مستند
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'default', 'waiting': 'info', 'first_reminded': 'warning', 'second_reminded': 'warning', 'submitted': 'success', 'cancelled': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_tax_declaration_calendar" model="ir.ui.view">
        <field name="name">tax.declaration.calendar</field>
        <field name="model">tax.declaration</field>
        <field name="arch" type="xml">
            <calendar string="تقويم الإقرارات الضريبية" date_start="due_date" color="client_id" mode="month">
                <field name="name"/>
                <field name="client_id"/>
                <field name="tax_type"/>
                <field name="first_reminder_sent"/>
                <field name="second_reminder_sent"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tax_declaration" model="ir.actions.act_window">
        <field name="name">الإقرارات الضريبية</field>
        <field name="res_model">tax.declaration</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_need_first_reminder': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أنشئ إقرار ضريبي جديد
            </p>
            <p>
                قم بإدارة الإقرارات الضريبية لعملائك وإرسال التذكيرات التلقائية
            </p>
        </field>
    </record>
</odoo>