<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job للتذكير التلقائي -->
        <record id="ir_cron_tax_declaration_reminder" model="ir.cron">
            <field name="name">تذكير الإقرارات الضريبية</field>
            <field name="model_id" ref="model_tax_declaration"/>
            <field name="state">code</field>
            <field name="code">model.check_and_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job للتوليد التلقائي للإقرارات -->
        <record id="ir_cron_generate_declarations" model="ir.cron">
            <field name="name">توليد الإقرارات الضريبية التلقائي</field>
            <field name="model_id" ref="model_tax_client"/>
            <field name="state">code</field>
            <field name="code">model.search([('auto_generate', '=', True)]).generate_upcoming_declarations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>