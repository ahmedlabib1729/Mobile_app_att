<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_cod_country_fee_tree" model="ir.ui.view">
        <field name="name">cod.country.fee.tree</field>
        <field name="model">cod.country.fee</field>
        <field name="arch" type="xml">
            <tree string="COD Country Fees" decoration-muted="not active">
                <field name="country_id"/>
                <field name="fee_type"/>
                <field name="fee_amount" invisible="fee_type != 'fixed'"/>
                <field name="fee_percentage" invisible="fee_type != 'percentage'"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="min_amount"/>
                <field name="max_amount"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cod_country_fee_form" model="ir.ui.view">
        <field name="name">cod.country.fee.form</field>
        <field name="model">cod.country.fee</field>
        <field name="arch" type="xml">
            <form string="COD Country Fee">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active == True"/>
                    <group>
                        <group>
                            <field name="provider_id" options="{'no_create': True}"/>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="fee_type"/>
                            <field name="fee_amount"
                                   invisible="fee_type != 'fixed'"
                                   required="fee_type == 'fixed'"/>
                            <field name="fee_percentage"
                                   invisible="fee_type != 'percentage'"
                                   required="fee_type == 'percentage'"
                                   widget="percentage"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Order Limits">
                            <field name="min_amount"/>
                            <field name="max_amount"/>
                        </group>
                    </group>
                    <group string="Instructions">
                        <field name="instructions" nolabel="1" placeholder="Country specific instructions for customers..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cod_country_fee" model="ir.actions.act_window">
        <field name="name">COD Country Fees</field>
        <field name="res_model">cod.country.fee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure COD fees for different countries
            </p>
            <p>
                Set up fixed or percentage-based fees for Cash on Delivery payment method per country.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_cod_country_fee"
              name="COD Country Fees"
              parent="account.account_management_menu"
              action="action_cod_country_fee"
              groups="account.group_account_manager"
              sequence="100"/>
</odoo>