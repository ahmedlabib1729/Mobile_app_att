<odoo>
    <!-- Tree View -->
    <record id="view_emirates_post_config_tree" model="ir.ui.view">
        <field name="name">emirates.post.config.tree</field>
        <field name="model">emirates.post.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="account_no"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_emirates_post_config_form" model="ir.ui.view">
        <field name="name">emirates.post.config.form</field>
        <field name="model">emirates.post.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    <button name="sync_emirates" string="Sync Emirates" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                        <group string="API Configuration">
                            <field name="api_url"/>
                            <field name="account_no"/>
                            <field name="password" password="True"/>
                            <field name="debug_mode"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_emirates_post_config" model="ir.actions.act_window">
        <field name="name">Emirates Post Configuration</field>
        <field name="res_model">emirates.post.config</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>