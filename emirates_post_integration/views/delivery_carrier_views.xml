<odoo>
    <record id="view_delivery_carrier_form_emirates_post" model="ir.ui.view">
        <field name="name">delivery.carrier.form.emirates.post</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='pricing']" position="after">
                <!-- Hidden field for condition -->
                <field name="delivery_type" invisible="1"/>

                <page string="Emirates Post" invisible="delivery_type != 'emirates_post'">
                    <group>
                        <field name="emirates_post_config_id" options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>