<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_emirates_post" model="ir.ui.view">
        <field name="name">stock.picking.form.emirates.post</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add hidden fields at the very beginning -->
            <xpath expr="//form/sheet" position="before">
                <field name="emirates_post_shipment_id" invisible="1"/>
                <field name="is_emirates_post_carrier" invisible="1"/>
            </xpath>

            <!-- Add button in header without state restriction for testing -->
            <xpath expr="//button[@name='button_validate']" position="after">
                <button name="action_create_emirates_post_shipment"
                        type="object"
                        string="Create Emirates Post Shipment"
                        class="btn-primary"
                        />
                <button name="action_print_emirates_post_label"
                        string="Print EP Label"
                        type="object"
                        invisible="not emirates_post_shipment_id"/>
                <button name="action_track_emirates_post_shipment"
                        string="Track EP Shipment"
                        type="object"
                        invisible="not emirates_post_shipment_id"/>
            </xpath>

            <!-- Add page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Emirates Post" invisible="not is_emirates_post_carrier">
                    <group>
                        <group string="Shipment Information">
                            <field name="emirates_post_awb" readonly="1"/>
                            <field name="emirates_post_tracking_url" widget="url" readonly="1"/>
                        </group>
                        <group string="Debug Info">
                            <field name="is_emirates_post_carrier" readonly="1"/>
                            <field name="sale_id" readonly="1" invisible="not sale_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>