<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Window Actions للقوائم المخصصة -->

<!-- Action للمصاريف الشخصية -->
<record id="action_expense_personal" model="ir.actions.act_window">
    <field name="name">مصاريفي الشخصية</field>
    <field name="res_model">hr.expense</field>
    <field name="view_mode">list,kanban,form,graph,pivot</field>
    <field name="domain">[('employee_id.user_id', '=', uid)]</field>
    <field name="context">{'search_default_my_expenses_only': 1}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            سجل مصروف جديد
        </p>
        <p>
            قم بتسجيل مصاريفك الشخصية هنا وأرسلها للموافقة
        </p>
    </field>
</record>

<!-- Action لموافقات الفريق -->
<record id="action_expense_team_approval" model="ir.actions.act_window">
    <field name="name">موافقات الفريق</field>
    <field name="res_model">hr.expense</field>
    <field name="view_mode">list,kanban,form</field>
    <field name="domain">[
        ('state', '=', 'reported'),
        '|',
        ('employee_id.parent_id.user_id', '=', uid),
        ('employee_id.department_id.manager_id.user_id', '=', uid)
    ]</field>
    <field name="context">{'search_default_pending_approval': 1}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            لا توجد مصاريف تحتاج موافقة
        </p>
    </field>
</record>

<!-- Action للمعالجة المحاسبية -->
<record id="action_expense_accounting" model="ir.actions.act_window">
    <field name="name">مصاريف للمعالجة</field>
    <field name="res_model">hr.expense.sheet</field>
    <field name="view_mode">list,kanban,form</field>
    <field name="domain">[('state', 'in', ['approve', 'post'])]</field>
    <field name="context">{'search_default_for_accounting': 1}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            لا توجد مصاريف معتمدة للمعالجة
        </p>
    </field>
</record>

</odoo>
